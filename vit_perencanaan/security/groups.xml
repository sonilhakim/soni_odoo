<odoo>
	<data>
		<record model="ir.module.category" id="module_category_perencanaan">
			<field name="name">Perencanaan</field>
			<field name="description">Perencanaan Groups</field>
			<field name="sequence">10</field>
		</record>
		<record id="group_perencanaan_user" model="res.groups">
			<field name="name">User</field>
			<field name="category_id" ref="module_category_perencanaan"/>
		</record>
		<record id="group_perencanaan_manager" model="res.groups">
			<field name="name">Manager</field>
			<field name="category_id" ref="module_category_perencanaan"/>
		</record>

		<record id="group_perencanaan_kasubbag" model="res.groups">
			<field name="name">Kasubbag TU</field>
			<field name="category_id" ref="module_category_perencanaan"/>
		</record>
		<record id="group_perencanaan_kasubsatker" model="res.groups">
			<field name="name">Kasubsatker</field>
			<field name="category_id" ref="module_category_perencanaan"/>
		</record>
		<record id="group_perencanaan_rorenku" model="res.groups">
			<field name="name">Rorenku</field>
			<field name="category_id" ref="module_category_perencanaan"/>
		</record>

		<!-- access rules -->
        <record id="only_same_subsatker" model="ir.rule">
	         <field name="name">User Subsatker</field>
	         <field name="model_id" ref="anggaran.model_anggaran_rka"/>
	         <field name="perm_read" eval="1"/>
	         <field name="perm_write" eval="1"/>
	         <field name="perm_create" eval="1"/>
	         <field name="perm_unlink" eval="1"/>
	         <field name="domain_force">[('unit_id','in',[u.id for u in user.unit_ids])]</field>
	      </record>
	</data>
</odoo>