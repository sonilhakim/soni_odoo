<odoo>
    <data>
        <!-- res.users -->
        <record id="view_users_perencanaan_form" model="ir.ui.view">
            <field name="name">res.users.perencanaan.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <field name="companies_count" position="after">
                    <field string="SUBSATKER" name="unit_ids" widget="many2many_tags" options="{'no_create': True}"/>
                </field>
            </field>
        </record>
        <!-- Biaya from -->
        <record id="view_biaya_forms" model="ir.ui.view">
            <field name="name">anggaran_biaya_forms</field>
            <field name="model">anggaran.biaya</field>
            <field name="inherit_id" ref="anggaran.view_biaya_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">

                <button name="action_done" position="attributes">
                    <attribute name="groups">vit_perencanaan.group_perencanaan_manager</attribute>
                </button>
                <button name="action_reject" position="attributes">
                    <attribute name="groups">vit_perencanaan.group_perencanaan_manager</attribute>
                </button>
                <button name="action_draft" position="attributes">
                    <attribute name="groups">vit_perencanaan.group_perencanaan_manager</attribute>
                </button>

            </field>
        </record>

        <!-- SPM from -->
        <record id="view_spm_forms" model="ir.ui.view">
            <field name="name">anggaran_spm_forms</field>
            <field name="model">anggaran.spm</field>
            <field name="inherit_id" ref="anggaran.view_spm_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">

                <button name="action_done" position="attributes">
                    <attribute name="groups">vit_perencanaan.group_perencanaan_manager</attribute>
                </button>
                <button name="action_draft" position="attributes">
                    <attribute name="groups">vit_perencanaan.group_perencanaan_manager</attribute>
                </button>
                <button name="action_reject" position="attributes">
                    <attribute name="groups">vit_perencanaan.group_perencanaan_manager</attribute>
                </button>

                <button name="action_create_kas_keluar" position="attributes">
                    <attribute name="groups">vit_perencanaan.group_perencanaan_manager</attribute>
                </button>

                <button name="action_view_kas" position="attributes">
                    <attribute name="groups">vit_perencanaan.group_perencanaan_manager</attribute>
                </button>
            </field>
        </record>

