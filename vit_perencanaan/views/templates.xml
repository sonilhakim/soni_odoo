            <field name="inherit_id" ref="anggaran.view_rka_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <button name="action_confirm" position="attributes">
                    <attribute name="groups">vit_perencanaan.group_perencanaan_kasubbag</attribute>
                </button>
                <button name="action_submit" position="attributes">
                    <attribute name="groups">vit_perencanaan.group_perencanaan_kasubsatker</attribute>
                </button>
                <button name="action_done" position="attributes">
                    <attribute name="groups">vit_perencanaan.group_perencanaan_rorenku</attribute>
                </button>
                <button name="action_notdone" position="attributes">
                    <attribute name="groups">vit_perencanaan.group_perencanaan_rorenku</attribute>
                </button>
                <button name="action_cancel" position="attributes">
                    <attribute name="groups">vit_perencanaan.group_perencanaan_rorenku</attribute>
                </button>
                <button name="%(anggaran.revisi_wizard_action2)d" position="attributes">
                    <attribute name="groups">vit_perencanaan.group_perencanaan_rorenku</attribute>
                </button>
                <button name="action_lock" position="attributes">
                    <attribute name="groups">vit_perencanaan.group_perencanaan_rorenku</attribute>
                </button>
                <button name="action_draft" position="attributes">
                    <attribute name="states">open,submit,done</attribute>
                </button>
            </field>
        </record>

