<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_target_skp_tree" model="ir.ui.view">
            <field name="name">vit_target_skp_tree</field>
            <field name="model">vit.target_skp</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Target SKP">
                    <field name="name" />
                    <field name="tanggal" />
                    <field name="tahun_akademik_id" />
                    <field name="pns_id" />
                    <field name="pns_nip" />
                    <field name="pejabat_penilai_id" />
                    <field name="pejabat_penilai_nip" />
                    <field name="state" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_target_skp_form" model="ir.ui.view">
            <field name="name">vit_target_skp_form</field>
            <field name="model">vit.target_skp</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Target SKP">
                    <header>
                        <button string="Realisasi" type="object" name="action_realisasi" states="draft" />
                        <button string="Konfirmasi" type="object" name="action_confirm" states="proses" />                       
                        <button string="Disetujui" type="object" name="action_done" states="open" groups="vit_skp.group_skp_manager"/>
                        <button string="Tolak" type="object" name="action_reject" states="open" groups="vit_skp.group_skp_manager"/>
                        <button string="Kembalikan ke Rancangan" type="object" name="action_draft" states="proses,open" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Target SKP Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="tanggal" />
                                <field name="pns_id" />
                                <field name="pns_nip" />
                                <field name="pns_pangkat_gol_ruang" />
                                <field name="pns_jabatan_id" />
                                <field name="pns_unit_kerja_id" />
                            </group>
                            <group>
                                <field name="tahun_akademik_id" />
                                <field name="pejabat_penilai_id" />
                                <field name="pejabat_penilai_nip" />
                                <field name="pejabat_penilai_pangkat_gol_ruang" />
                                <field name="pejabat_penilai_jabatan_id" />
                                <field name="pejabat_penilai_unit_kerja_id" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Kegiatan Tugas Jabatan">
                                <field name="target_val_ids" mode="tree">
                                    <tree string="Kegiatan Tugas Jabatan" editable="bottom">
                                        <field name="name" />
                                        <field name="target_ak" sum="Total AK"/>
                                        <field name="target_kuantitas" />
                                        <field name="target_satuan_kuant" />
                                        <field name="target_kualitas" />
                                        <field name="target_waktu" />
                                        <field name="target_satuan_waktu" />
                                        <field name="target_biaya" />
                                        <field name="real_ak" sum="Total AK"/>
                                        <field name="real_kuantitas" />
                                        <field name="real_satuan_kuant" />
                                        <field name="real_kualitas" />
                                        <field name="real_waktu" />
                                        <field name="real_satuan_waktu" />
                                        <field name="real_biaya" />
                                        <field name="penghitungan" />
                                        <field name="nilai_capaian"/>
                                    </tree>
                                </field>
                                <group>
                                    <group class="oe_subtotal_footer oe_right">
                                        <field name="jumlah_nilai"/>
                                        <field name="nilai_capaian_skp"/>
                                    </group>
                                </group>
                            </page>                            
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
