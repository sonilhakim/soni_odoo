<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_skp_penelitian_menu" string="Vit - Skp penelitian"
         model="vit.skp_penelitian" report_type="qweb-pdf" 
         file="vit.skp_penelitian"  name="vit_skp.vit_skp_penelitian_report" />

        <!-- document template -->
        <template id="vit_skp.vit_skp_penelitian_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Skp penelitian: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Jumlah peneliti mandiri</strong>
                            <p class="m-0" t-field="doc.jumlah_peneliti_mandiri" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Jumlah peneliti utama</strong>
                            <p class="m-0" t-field="doc.jumlah_peneliti_utama" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Jumlah peneliti anggota</strong>
                            <p class="m-0" t-field="doc.jumlah_peneliti_anggota" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Ak karya ilmiah jurnal</strong>
                            <p class="m-0" t-field="doc.ak_karya_ilmiah_jurnal" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Ak jumlah peneliti mandiri</strong>
                            <p class="m-0" t-field="doc.ak_jumlah_peneliti_mandiri" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Ak jumlah peneliti utama</strong>
                            <p class="m-0" t-field="doc.ak_jumlah_peneliti_utama" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Ak jumlah peneliti anggota</strong>
                            <p class="m-0" t-field="doc.ak_jumlah_peneliti_anggota" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Ak jumlah</strong>
                            <p class="m-0" t-field="doc.ak_jumlah" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Skp</strong>
                            <p class="m-0" t-field="doc.skp_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_skp.vit_skp_penelitian_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_skp.vit_skp_penelitian_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>