<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_skp_rekapitulasi_jabatan_pt_menu" string="Vit - Skp rekapitulasi jabatan pt"
         model="vit.skp_rekapitulasi_jabatan_pt" report_type="qweb-pdf" 
         file="vit.skp_rekapitulasi_jabatan_pt"  name="vit_skp.vit_skp_rekapitulasi_jabatan_pt_report" />

        <!-- document template -->
        <template id="vit_skp.vit_skp_rekapitulasi_jabatan_pt_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Skp rekapitulasi jabatan pt: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Satuan hasil</strong>
                            <p class="m-0" t-field="doc.satuan_hasil" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Jumlah angka kredit</strong>
                            <p class="m-0" t-field="doc.jumlah_angka_kredit" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Skp</strong>
                            <p class="m-0" t-field="doc.skp_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_skp.vit_skp_rekapitulasi_jabatan_pt_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_skp.vit_skp_rekapitulasi_jabatan_pt_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>