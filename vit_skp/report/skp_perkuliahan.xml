<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_skp_perkuliahan_menu" string="Vit - Skp perkuliahan"
         model="vit.skp_perkuliahan" report_type="qweb-pdf" 
         file="vit.skp_perkuliahan"  name="vit_skp.vit_skp_perkuliahan_report" />

        <!-- document template -->
        <template id="vit_skp.vit_skp_perkuliahan_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Skp perkuliahan: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Sks</strong>
                            <p class="m-0" t-field="doc.sks" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Jumlah kelas</strong>
                            <p class="m-0" t-field="doc.jumlah_kelas" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Jumlah dosen pengampu</strong>
                            <p class="m-0" t-field="doc.jumlah_dosen_pengampu" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Totak sks per smt</strong>
                            <p class="m-0" t-field="doc.totak_sks_per_smt" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Skp</strong>
                            <p class="m-0" t-field="doc.skp_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Semester</strong>
                            <p class="m-0" t-field="doc.semester_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_skp.vit_skp_perkuliahan_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_skp.vit_skp_perkuliahan_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>