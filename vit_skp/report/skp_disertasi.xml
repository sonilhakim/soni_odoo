<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_skp_disertasi_menu" string="Vit - Skp disertasi"
         model="vit.skp_disertasi" report_type="qweb-pdf" 
         file="vit.skp_disertasi"  name="vit_skp.vit_skp_disertasi_report" />

        <!-- document template -->
        <template id="vit_skp.vit_skp_disertasi_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Skp disertasi: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Jumlah lulusan pembimbing utama</strong>
                            <p class="m-0" t-field="doc.jumlah_lulusan_pembimbing_utama" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Jumlah lulusan pembimbing pembantu</strong>
                            <p class="m-0" t-field="doc.jumlah_lulusan_pembimbing_pembantu" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Ak pembimbing utama</strong>
                            <p class="m-0" t-field="doc.ak_pembimbing_utama" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Ak pembimbing pembantu</strong>
                            <p class="m-0" t-field="doc.ak_pembimbing_pembantu" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Ak total</strong>
                            <p class="m-0" t-field="doc.ak_total" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Skp</strong>
                            <p class="m-0" t-field="doc.skp_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Jenis disertasi</strong>
                            <p class="m-0" t-field="doc.jenis_disertasi_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Semester</strong>
                            <p class="m-0" t-field="doc.semester_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_skp.vit_skp_disertasi_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_skp.vit_skp_disertasi_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>