<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_skp_seminar_tree" model="ir.ui.view">
            <field name="name">vit_skp_seminar_tree</field>
            <field name="model">vit.skp_seminar</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Skp seminar">
                    <field name="name" />
                    <field name="pelaksanaan" />
                    <field name="ak" />
                    <field name="skp_id" />
                    <field name="semester_id" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_skp_seminar_form" model="ir.ui.view">
            <field name="name">vit_skp_seminar_form</field>
            <field name="model">vit.skp_seminar</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Skp seminar">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Skp seminar Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="pelaksanaan" />
                                <field name="ak" />
                            </group>
                            <group>
                                <field name="skp_id" />
                                <field name="semester_id" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_skp_seminar_search" model="ir.ui.view">
            <field name="name">vit_skp_seminar</field>
            <field name="model">vit.skp_seminar</field>
            <field name="arch" type="xml">
                <search string="Skp seminar">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Pelaksanaan" name="filter_by_pelaksanaan" domain="[('pelaksanaan','=','')]" />
                    <filter string="Ak" name="filter_by_ak" domain="[('ak','=','')]" />
                    <field name="name" select="True"/>
                    <field name="pelaksanaan" select="True"/>
                    <field name="ak" select="True"/>
                    <field name="skp_id" select="True"/>
                    <field name="semester_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Skp" domain="[]" name="group_by_skp_id" context="{'group_by':'skp_id'}"/>
                        <filter string="Semester" domain="[]" name="group_by_semester_id" context="{'group_by':'semester_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_skp_seminar_kanban" model="ir.ui.view" >
            <field name="name">vit_skp_seminar</field>
            <field name="model">vit.skp_seminar</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="pelaksanaan" />
                    <field name="ak" />
                    <field name="skp_id" />
                    <field name="semester_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Skp</span> <field name="skp_id"></field>
                                        </li>


                                        <li>
                                            <span class="text-muted">Semester</span> <field name="semester_id"></field>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_vit_skp_seminar_graph" model="ir.ui.view">
            <field name="name">vit_skp_seminar</field>
            <field name="model">vit.skp_seminar</field>
            <field name="arch" type="xml">
                <graph string="Skp seminar" type="bar">
                    <field name="skp_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_skp_seminar" model="ir.actions.act_window">
            <field name="name">Skp seminar</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.skp_seminar</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Skp seminar
                </p><p>
                Click the Create button to add a new Skp seminar
                </p>
            </field>
        </record>

        <!-- <menuitem id="menu_vit_skp_seminar" name="Skp seminar" parent="vit_skp_config_menu" action="action_vit_skp_seminar" sequence="60"/> -->
    </data>
</odoo>