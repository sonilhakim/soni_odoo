<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_skp_penelitian_tree" model="ir.ui.view">
            <field name="name">vit_skp_penelitian_tree</field>
            <field name="model">vit.skp_penelitian</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Skp penelitian">
                    <field name="name" />
                    <field name="jumlah_peneliti_mandiri" />
                    <field name="jumlah_peneliti_utama" />
                    <field name="jumlah_peneliti_anggota" />
                    <field name="ak_karya_ilmiah_jurnal" />
                    <field name="ak_jumlah_peneliti_mandiri" />
                    <field name="ak_jumlah_peneliti_utama" />
                    <field name="ak_jumlah_peneliti_anggota" />
                    <field name="ak_jumlah" />
                    <field name="skp_id" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_skp_penelitian_form" model="ir.ui.view">
            <field name="name">vit_skp_penelitian_form</field>
            <field name="model">vit.skp_penelitian</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Skp penelitian">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Skp penelitian Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="jumlah_peneliti_mandiri" />
                                <field name="jumlah_peneliti_utama" />
                                <field name="jumlah_peneliti_anggota" />
                                <field name="ak_karya_ilmiah_jurnal" />
                                <field name="ak_jumlah_peneliti_mandiri" />
                                <field name="ak_jumlah_peneliti_utama" />
                                <field name="ak_jumlah_peneliti_anggota" />
                                <field name="ak_jumlah" />
                            </group>
                            <group>
                                <field name="skp_id" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_skp_penelitian_search" model="ir.ui.view">
            <field name="name">vit_skp_penelitian</field>
            <field name="model">vit.skp_penelitian</field>
            <field name="arch" type="xml">
                <search string="Skp penelitian">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Jumlah peneliti mandiri" name="filter_by_jumlah_peneliti_mandiri" domain="[('jumlah_peneliti_mandiri','=','')]" />
                    <filter string="Jumlah peneliti utama" name="filter_by_jumlah_peneliti_utama" domain="[('jumlah_peneliti_utama','=','')]" />
                    <filter string="Jumlah peneliti anggota" name="filter_by_jumlah_peneliti_anggota" domain="[('jumlah_peneliti_anggota','=','')]" />
                    <filter string="Ak karya ilmiah jurnal" name="filter_by_ak_karya_ilmiah_jurnal" domain="[('ak_karya_ilmiah_jurnal','=','')]" />
                    <filter string="Ak jumlah peneliti mandiri" name="filter_by_ak_jumlah_peneliti_mandiri" domain="[('ak_jumlah_peneliti_mandiri','=','')]" />
                    <filter string="Ak jumlah peneliti utama" name="filter_by_ak_jumlah_peneliti_utama" domain="[('ak_jumlah_peneliti_utama','=','')]" />
                    <filter string="Ak jumlah peneliti anggota" name="filter_by_ak_jumlah_peneliti_anggota" domain="[('ak_jumlah_peneliti_anggota','=','')]" />
                    <filter string="Ak jumlah" name="filter_by_ak_jumlah" domain="[('ak_jumlah','=','')]" />
                    <field name="name" select="True"/>
                    <field name="jumlah_peneliti_mandiri" select="True"/>
                    <field name="jumlah_peneliti_utama" select="True"/>
                    <field name="jumlah_peneliti_anggota" select="True"/>
                    <field name="ak_karya_ilmiah_jurnal" select="True"/>
                    <field name="ak_jumlah_peneliti_mandiri" select="True"/>
                    <field name="ak_jumlah_peneliti_utama" select="True"/>
                    <field name="ak_jumlah_peneliti_anggota" select="True"/>
                    <field name="ak_jumlah" select="True"/>
                    <field name="skp_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Skp" domain="[]" name="group_by_skp_id" context="{'group_by':'skp_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_skp_penelitian_kanban" model="ir.ui.view" >
            <field name="name">vit_skp_penelitian</field>
            <field name="model">vit.skp_penelitian</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="jumlah_peneliti_mandiri" />
                    <field name="jumlah_peneliti_utama" />
                    <field name="jumlah_peneliti_anggota" />
                    <field name="ak_karya_ilmiah_jurnal" />
                    <field name="ak_jumlah_peneliti_mandiri" />
                    <field name="ak_jumlah_peneliti_utama" />
                    <field name="ak_jumlah_peneliti_anggota" />
                    <field name="ak_jumlah" />
                    <field name="skp_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Skp</span> <field name="skp_id"></field>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_vit_skp_penelitian_graph" model="ir.ui.view">
            <field name="name">vit_skp_penelitian</field>
            <field name="model">vit.skp_penelitian</field>
            <field name="arch" type="xml">
                <graph string="Skp penelitian" type="bar">
                    <field name="skp_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_skp_penelitian" model="ir.actions.act_window">
            <field name="name">Skp penelitian</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.skp_penelitian</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Skp penelitian
                </p><p>
                Click the Create button to add a new Skp penelitian
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_skp_penelitian" name="Skp penelitian" parent="vit_skp_config_menu" action="action_vit_skp_penelitian" sequence="180"/>
    </data>
</odoo>