<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="0">
		<record id="group_vit_finance_report_dashboard" model="res.groups">
			<field name="name">Financial Report Dashboard</field>
		</record>
	</data>
	<data noupdate="1">
		<record model="ir.rule" id="finance_report_dashboard_comp_rule">
			<field name="name">Financial Report Dashboard multi-company</field>
			<field name="model_id" ref="model_vit_finance_report_dashboard"/>
			<field name="global" eval="True"/>
			<field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
		</record>
		<record model="ir.rule" id="finance_report_dashboard_lines_comp_rule">
			<field name="name">Financial Report Dashboard Line multi-company</field>
			<field name="model_id" ref="model_vit_finance_report_dashboard_line"/>
			<field name="global" eval="True"/>
			<field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
		</record>
	</data>
</odoo>