<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_finance_report_dashboard_tree" model="ir.ui.view">
            <field name="name">vit_finance_report_dashboard_tree</field>
            <field name="model">vit.finance_report_dashboard</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="FRD gsp">
                    <field name="name" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="company_id" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_finance_report_dashboard_form" model="ir.ui.view">
            <field name="name">vit_finance_report_dashboard_form</field>
            <field name="model">vit.finance_report_dashboard</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="FRD">
                    <header>
                        <button string="Load" type="object" name="load_dash_line" class="oe_highlight btn-info"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <label string="Periode" for="start_date"/>
                                <div>
                                    <field name="start_date" style="width: 25%" required="1"/> - &#160;&#160;&#160;&#160;&#160;&#160;&#160;<field name="end_date" style="width: 25%" required="1"/>
                                </div>
                            </group>
                            <group>
                                <field name="company_id" required="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="FRD Lines">
                                <field name="frd_line_ids">
                                    <tree string="FRD Lines" editable="bottom" >
                                        <field name="name"/>
                                        <field name="start_date" />
                                        <field name="end_date" />
                                        <field name="company_id"/>
                                        <field name="amount"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_finance_report_dashboard_search" model="ir.ui.view">
            <field name="name">vit_finance_report_dashboard</field>
            <field name="model">vit.finance_report_dashboard</field>
            <field name="arch" type="xml">
                <search string="FRD">
                    <field name="name" select="True"/>
                    <field name="start_date" select="True"/>
                    <field name="end_date" select="True"/>
                    <field name="company_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Company" domain="[]" name="group_by_company_id" context="{'group_by':'company_id'}"/>
                        <filter string="Start Date" domain="[]" name="group_by_start_date" context="{'group_by':'start_date'}"/>
                        <filter string="End Date" domain="[]" name="group_by_end_date" context="{'group_by':'end_date'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_finance_report_dashboard_kanban" model="ir.ui.view" >
            <field name="name">vit_finance_report_dashboard</field>
            <field name="model">vit.finance_report_dashboard</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="name" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="company_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            <span class="text-muted">Start Date</span> <field name="start_date"></field>
                                        </li>
                                        <li>
                                            <span class="text-muted">End Date</span> <field name="end_date"></field>
                                        </li>
                                        <li>
                                            <span class="text-muted">Company</span> <field name="company_id"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_finance_report_dashboard" model="ir.actions.act_window">
            <field name="name">Financial Report Dashboard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.finance_report_dashboard</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Financial Report Dashboard
                </p><p>
                Click the Create button to add a new Financial Report Dashboard
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_finance_report_dashboard" name="Financial Report Dashboard" parent="account.account_management_menu" action="action_vit_finance_report_dashboard" sequence="50"/>
    </data>
</odoo>