<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_finance_report_dashboard_type_tree" model="ir.ui.view">
            <field name="name">vit_finance_report_dashboard_type_tree</field>
            <field name="model">vit.finance_report_dashboard_type</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="FRD Type">
                    <field name="name" />
                    <field name="types"/>
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_finance_report_dashboard_type_form" model="ir.ui.view">
            <field name="name">vit_finance_report_dashboard_type_form</field>
            <field name="model">vit.finance_report_dashboard_type</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="FRD TYpe">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="types"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_finance_report_dashboard_type_search" model="ir.ui.view">
            <field name="name">vit_finance_report_dashboard_type</field>
            <field name="model">vit.finance_report_dashboard_type</field>
            <field name="arch" type="xml">
                <search string="FRD">
                    <field name="name" select="True"/>
                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        
        <!-- action window -->
        <record id="action_vit_finance_report_dashboard_type" model="ir.actions.act_window">
            <field name="name">Financial Report Dashboard Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.finance_report_dashboard_type</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Financial Report Dashboard Type
                </p><p>
                Click the Create button to add a new Financial Report Dashboard Type
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_finance_report_dashboard_type" name="Financial Report Dashboard Type" parent="account.account_management_menu" action="action_vit_finance_report_dashboard_type" sequence="49"/>
    </data>
</odoo>