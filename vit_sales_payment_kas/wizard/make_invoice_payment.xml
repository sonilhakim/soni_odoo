<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_inv_payment_kas" model="ir.ui.view">
            <field name="name">Invoice Kas Orders</field>
            <field name="model">sale.inv.payment.kas</field>
            <field name="arch" type="xml">
                <form string="Invoice Kas Sales Order">
                    <group>
                        <field name="amount_kas"/>
                        <field name="amount_total" readonly="True"/>
                        <field name="change"/>
                    </group>
                    <footer>
                        <button name="create_invoices" string="Create Invoices" type="object"
                            class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_inv_payment_kas" model="ir.actions.act_window">
            <field name="name">Invoice Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.inv.payment.kas</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="groups_id" eval="[(4,ref('sales_team.group_sale_salesman'))]"/>
            <!-- TODO: check if we need this -->
            <field name="binding_model_id" ref="sale.model_sale_order" />
        </record>

</odoo>
