<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_pir_detail_menu" string="Vit - Pir detail"
         model="vit.pir_detail" report_type="qweb-pdf" 
         file="vit.pir_detail"  name="vit_remunerasi.vit_pir_detail_report" />

        <!-- document template -->
        <template id="vit_remunerasi.vit_pir_detail_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Pir detail: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Pir</strong>
                            <p class="m-0" t-field="doc.pir" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Karyawan</strong>
                            <p class="m-0" t-field="doc.karyawan_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Pir</strong>
                            <p class="m-0" t-field="doc.pir_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_remunerasi.vit_pir_detail_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_remunerasi.vit_pir_detail_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>