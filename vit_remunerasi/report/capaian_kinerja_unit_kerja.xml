<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_capaian_kinerja_unit_kerja_menu" string="Vit - Capaian kinerja unit kerja"
         model="vit.capaian_kinerja_unit_kerja" report_type="qweb-pdf" 
         file="vit.capaian_kinerja_unit_kerja"  name="vit_remunerasi.vit_capaian_kinerja_unit_kerja_report" />

        <!-- document template -->
        <template id="vit_remunerasi.vit_capaian_kinerja_unit_kerja_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Capaian kinerja unit kerja: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Description</strong>
                            <p class="m-0" t-field="doc.description" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>State</strong>
                            <p class="m-0" t-field="doc.state" />
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <h2>Capaian unit</h2>
                <table class="table table-sm o_main_table" name="capaian_unit_ids_table">
                    <thead>
                        <tr>
                            <td>Capaian</td>
                            <td>Unit</td>
                            <td>Capaian unit</td>
                        </tr>
                    </thead>
                    <tbody class="capaian_unit_ids_tbody">
                        <tr t-foreach="doc.capaian_unit_ids" t-as="line">
                            <td><span t-field="line.capaian" /></td>
                            <td><span t-field="line.unit_id" /></td>
                            <td><span t-field="line.capaian_unit_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_remunerasi.vit_capaian_kinerja_unit_kerja_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_remunerasi.vit_capaian_kinerja_unit_kerja_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>