<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_tunkin_kehadiran_menu" string="Vit - Tunkin kehadiran"
         model="vit.tunkin_kehadiran" report_type="qweb-pdf" 
         file="vit.tunkin_kehadiran"  name="vit_remunerasi.vit_tunkin_kehadiran_report" />

        <!-- document template -->
        <template id="vit_remunerasi.vit_tunkin_kehadiran_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Tunkin kehadiran: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Description</strong>
                            <p class="m-0" t-field="doc.description" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>State</strong>
                            <p class="m-0" t-field="doc.state" />
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <h2>Tunkin kehadiran</h2>
                <table class="table table-sm o_main_table" name="tunkin_kehadiran_ids_table">
                    <thead>
                        <tr>
                            <td>Kehadiran</td>
                            <td>Karyawan</td>
                            <td>Tunkin kehadiran</td>
                        </tr>
                    </thead>
                    <tbody class="tunkin_kehadiran_ids_tbody">
                        <tr t-foreach="doc.tunkin_kehadiran_ids" t-as="line">
                            <td><span t-field="line.kehadiran" /></td>
                            <td><span t-field="line.karyawan_id" /></td>
                            <td><span t-field="line.tunkin_kehadiran_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_remunerasi.vit_tunkin_kehadiran_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_remunerasi.vit_tunkin_kehadiran_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>