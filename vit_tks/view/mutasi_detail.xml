<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_mutasi_detail_tree" model="ir.ui.view">
            <field name="name">vit_mutasi_detail_tree</field>
            <field name="model">vit.mutasi_detail</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Mutasi detail">
                    <field name="name" />
                    <field name="kode_barang" />
                    <field name="nama_barang" />
                    <field name="type" />
                    <field name="no_sertifikat" />
                    <field name="asal" />
                    <field name="tahun_perolehan" />
                    <field name="kondisi" />
                    <field name="lokasi_awal" />
                    <field name="lokasi_akhir" />
                    <field name="jumlah_awal" />
                    <field name="jumlah_akhir" />
                    <field name="keterangan" />
                    <field name="transfer_id" />
                    <field name="mutasi_id" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_mutasi_detail_form" model="ir.ui.view">
            <field name="name">vit_mutasi_detail_form</field>
            <field name="model">vit.mutasi_detail</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Mutasi detail">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Mutasi detail Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="kode_barang" />
                                <field name="nama_barang" />
                                <field name="type" />
                                <field name="no_sertifikat" />
                                <field name="asal" />
                                <field name="tahun_perolehan" />
                                <field name="kondisi" />
                                <field name="lokasi_awal" />
                                <field name="lokasi_akhir" />
                                <field name="jumlah_awal" />
                                <field name="jumlah_akhir" />
                                <field name="keterangan" />
                            </group>
                            <group>
                                <field name="transfer_id" />
                                <field name="mutasi_id" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_mutasi_detail_search" model="ir.ui.view">
            <field name="name">vit_mutasi_detail</field>
            <field name="model">vit.mutasi_detail</field>
            <field name="arch" type="xml">
                <search string="Mutasi detail">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Kode barang" name="filter_by_kode_barang" domain="[('kode_barang','=','')]" />
                    <filter string="Nama barang" name="filter_by_nama_barang" domain="[('nama_barang','=','')]" />
                    <filter string="Type" name="filter_by_type" domain="[('type','=','')]" />
                    <filter string="No sertifikat" name="filter_by_no_sertifikat" domain="[('no_sertifikat','=','')]" />
                    <filter string="Asal" name="filter_by_asal" domain="[('asal','=','')]" />
                    <filter string="Tahun perolehan" name="filter_by_tahun_perolehan" domain="[('tahun_perolehan','=','')]" />
                    <filter string="Kondisi" name="filter_by_kondisi" domain="[('kondisi','=','')]" />
                    <filter string="Lokasi awal" name="filter_by_lokasi_awal" domain="[('lokasi_awal','=','')]" />
                    <filter string="Lokasi akhir" name="filter_by_lokasi_akhir" domain="[('lokasi_akhir','=','')]" />
                    <filter string="Jumlah awal" name="filter_by_jumlah_awal" domain="[('jumlah_awal','=','')]" />
                    <filter string="Jumlah akhir" name="filter_by_jumlah_akhir" domain="[('jumlah_akhir','=','')]" />
                    <filter string="Keterangan" name="filter_by_keterangan" domain="[('keterangan','=','')]" />
                    <field name="name" select="True"/>
                    <field name="kode_barang" select="True"/>
                    <field name="nama_barang" select="True"/>
                    <field name="type" select="True"/>
                    <field name="no_sertifikat" select="True"/>
                    <field name="asal" select="True"/>
                    <field name="tahun_perolehan" select="True"/>
                    <field name="kondisi" select="True"/>
                    <field name="lokasi_awal" select="True"/>
                    <field name="lokasi_akhir" select="True"/>
                    <field name="jumlah_awal" select="True"/>
                    <field name="jumlah_akhir" select="True"/>
                    <field name="keterangan" select="True"/>
                    <field name="transfer_id" select="True"/>
                    <field name="mutasi_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Transfer" domain="[]" name="group_by_transfer_id" context="{'group_by':'transfer_id'}"/>
                        <filter string="Mutasi" domain="[]" name="group_by_mutasi_id" context="{'group_by':'mutasi_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_mutasi_detail_kanban" model="ir.ui.view" >
            <field name="name">vit_mutasi_detail</field>
            <field name="model">vit.mutasi_detail</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="kode_barang" />
                    <field name="nama_barang" />
                    <field name="type" />
                    <field name="no_sertifikat" />
                    <field name="asal" />
                    <field name="tahun_perolehan" />
                    <field name="kondisi" />
                    <field name="lokasi_awal" />
                    <field name="lokasi_akhir" />
                    <field name="jumlah_awal" />
                    <field name="jumlah_akhir" />
                    <field name="keterangan" />
                    <field name="transfer_id" />
                    <field name="mutasi_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Transfer</span> <field name="transfer_id"></field>
                                        </li>


                                        <li>
                                            <span class="text-muted">Mutasi</span> <field name="mutasi_id"></field>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_vit_mutasi_detail_graph" model="ir.ui.view">
            <field name="name">vit_mutasi_detail</field>
            <field name="model">vit.mutasi_detail</field>
            <field name="arch" type="xml">
                <graph string="Mutasi detail" type="bar">
                    <field name="transfer_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_mutasi_detail" model="ir.actions.act_window">
            <field name="name">Mutasi detail</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.mutasi_detail</field>
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Mutasi detail
                </p><p>
                Click the Create button to add a new Mutasi detail
                </p>
            </field>
        </record>

        <!-- <menuitem id="menu_vit_mutasi_detail" name="Mutasi detail" parent="vit_tks_config_menu" action="action_vit_mutasi_detail" sequence="130"/> -->
    </data>
</odoo>