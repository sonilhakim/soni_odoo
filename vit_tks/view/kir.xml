<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_kir_tree" model="ir.ui.view">
            <field name="name">vit_kir_tree</field>
            <field name="model">vit.kir</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Kir">
                    <field name="name" />
                    <field name="date" />
                    <field name="gedung" />
                    <field name="ruang" />
                    <field name="state" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_kir_form" model="ir.ui.view">
            <field name="name">vit_kir_form</field>
            <field name="model">vit.kir</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Kir">
                    <header>
                        <button string="Confirm" type="object" name="action_confirm" states="draft" />
                        <button string="Mark as Done" type="object" name="action_done" states="open" />
                        <button string="Reset to Draft" type="object" name="action_draft" states="open,done" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Kir Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="date" />
                            </group>
                            <group>
                                <field name="gedung" />
                                <field name="ruang" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Kir detail">
                                <field name="kir_detail_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_kir_search" model="ir.ui.view">
            <field name="name">vit_kir</field>
            <field name="model">vit.kir</field>
            <field name="arch" type="xml">
                <search string="Kir">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Ruang" name="filter_by_ruang" domain="[('ruang','=','')]" />
                    <filter string="State" name="filter_by_state" domain="[('state','=','')]" />
                    <filter string="Date" name="filter_by_date" domain="[('date','=','')]" />
                    <filter string="Gedung" name="filter_by_gedung" domain="[('gedung','=','')]" />
                    <field name="name" select="True"/>
                    <field name="ruang" select="True"/>
                    <field name="state" select="True"/>
                    <field name="date" select="True"/>
                    <field name="gedung" select="True"/>
                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_kir_kanban" model="ir.ui.view" >
            <field name="name">vit_kir</field>
            <field name="model">vit.kir</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="ruang" />
                    <field name="state" />
                    <field name="date" />
                    <field name="gedung" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            <span class="text-muted">Date</span> <field name="date"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <record id="view_vit_kir_cal" model="ir.ui.view">
            <field name="name">vit_kir_cal</field>
            <field name="model">vit.kir</field>
            <field name="arch" type="xml">
                <calendar string="Kir" date_start="date">
                    <field name="name" />
                </calendar>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_kir_graph" model="ir.ui.view">
            <field name="name">vit_kir</field>
            <field name="model">vit.kir</field>
            <field name="arch" type="xml">
                <graph string="Kir" type="bar">
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_kir" model="ir.actions.act_window">
            <field name="name">Kir</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.kir</field>
            <field name="view_mode">kanban,tree,form,calendar</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Kir
                </p><p>
                Click the Create button to add a new Kir
                </p>
            </field>
        </record>

        <!-- <menuitem id="menu_vit_kir" name="Kir" parent="vit_tks_sub_menu" action="action_vit_kir" sequence="20"/> -->
    </data>
</odoo>