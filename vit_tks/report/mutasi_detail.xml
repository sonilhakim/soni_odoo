<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_mutasi_detail_menu" string="Vit - Mutasi detail"
         model="vit.mutasi_detail" report_type="qweb-pdf" 
         file="vit.mutasi_detail"  name="vit_tks.vit_mutasi_detail_report" />

        <!-- document template -->
        <template id="vit_tks.vit_mutasi_detail_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Mutasi detail: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Kode barang</strong>
                            <p class="m-0" t-field="doc.kode_barang" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Nama barang</strong>
                            <p class="m-0" t-field="doc.nama_barang" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Type</strong>
                            <p class="m-0" t-field="doc.type" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>No sertifikat</strong>
                            <p class="m-0" t-field="doc.no_sertifikat" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Asal</strong>
                            <p class="m-0" t-field="doc.asal" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Tahun perolehan</strong>
                            <p class="m-0" t-field="doc.tahun_perolehan" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Kondisi</strong>
                            <p class="m-0" t-field="doc.kondisi" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Lokasi awal</strong>
                            <p class="m-0" t-field="doc.lokasi_awal" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Lokasi akhir</strong>
                            <p class="m-0" t-field="doc.lokasi_akhir" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Jumlah awal</strong>
                            <p class="m-0" t-field="doc.jumlah_awal" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Jumlah akhir</strong>
                            <p class="m-0" t-field="doc.jumlah_akhir" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Keterangan</strong>
                            <p class="m-0" t-field="doc.keterangan" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Transfer</strong>
                            <p class="m-0" t-field="doc.transfer_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Mutasi</strong>
                            <p class="m-0" t-field="doc.mutasi_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_tks.vit_mutasi_detail_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_tks.vit_mutasi_detail_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>