<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_mutasi_barang_menu" string="Vit - Mutasi barang"
         model="vit.mutasi_barang" report_type="qweb-pdf" 
         file="vit.mutasi_barang"  name="vit_tks.vit_mutasi_barang_report" />

        <!-- document template -->
        <template id="vit_tks.vit_mutasi_barang_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Mutasi barang: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Date</strong>
                            <p class="m-0" t-field="doc.date" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Start date</strong>
                            <p class="m-0" t-field="doc.start_date" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>End date</strong>
                            <p class="m-0" t-field="doc.end_date" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>State</strong>
                            <p class="m-0" t-field="doc.state" />
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <h2>Detail</h2>
                <table class="table table-sm o_main_table" name="detail_ids_table">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Kode barang</td>
                            <td>Nama barang</td>
                            <td>Type</td>
                            <td>No sertifikat</td>
                            <td>Asal</td>
                            <td>Tahun perolehan</td>
                            <td>Kondisi</td>
                            <td>Lokasi awal</td>
                            <td>Lokasi akhir</td>
                            <td>Jumlah awal</td>
                            <td>Jumlah akhir</td>
                            <td>Keterangan</td>
                            <td>Transfer</td>
                            <td>Mutasi</td>
                        </tr>
                    </thead>
                    <tbody class="detail_ids_tbody">
                        <tr t-foreach="doc.detail_ids" t-as="line">
                            <td><span t-field="line.name" /></td>
                            <td><span t-field="line.kode_barang" /></td>
                            <td><span t-field="line.nama_barang" /></td>
                            <td><span t-field="line.type" /></td>
                            <td><span t-field="line.no_sertifikat" /></td>
                            <td><span t-field="line.asal" /></td>
                            <td><span t-field="line.tahun_perolehan" /></td>
                            <td><span t-field="line.kondisi" /></td>
                            <td><span t-field="line.lokasi_awal" /></td>
                            <td><span t-field="line.lokasi_akhir" /></td>
                            <td><span t-field="line.jumlah_awal" /></td>
                            <td><span t-field="line.jumlah_akhir" /></td>
                            <td><span t-field="line.keterangan" /></td>
                            <td><span t-field="line.transfer_id" /></td>
                            <td><span t-field="line.mutasi_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_tks.vit_mutasi_barang_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_tks.vit_mutasi_barang_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>