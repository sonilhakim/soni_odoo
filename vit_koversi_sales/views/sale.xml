                    <label for="location_id"/>
                    <div>
                        <field name="location_id"/>
                    </div>
                </xpath>
                <xpath expr="/form/sheet/notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='name']" position="after">
                    <field name="parent_location" invisible="1"/>
                    <field name="location_id" domain="[('location_id','=',parent_location)]"/>
                </xpath> -->
            </field>
        </record>

        <record id="view_product_konversi_form_sale" model="ir.ui.view">
            <field name="name">product.konversi.form.sale</field>
            <field name="model">product.konversi</field>
            <field name="inherit_id" ref="vit_product_konversi.view_product_konversi_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='conv_date']" position="after">
                    <field name="sale_id" invisible="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>