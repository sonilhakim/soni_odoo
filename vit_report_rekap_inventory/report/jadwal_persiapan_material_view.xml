<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="jpm_tmpl">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <div>
                                <h4 class="text-center">
                                    <strong>JADWAL PERSIAPAN MATERIAL</strong>
                                </h4>
                                <div class="row text-center">
                                    <div class="col-md-12">
                                        PERIODE BULAN <span t-field="doc.periode" />
                                    </div>
                                </div>
                            </div>
                            <table class="table-sm text-center" style="font-size:14px;">
                                <thead style="background-color: #ebebeb;">
                                    <tr>
                                        <th style="border-top: 1px solid black;border-left: 1px solid black;width:5%;">NO</th>
                                        <th style="border-top: 1px solid black;border-left: 1px solid black;width:20%;">BUYER</th>
                                        <th style="border-top: 1px solid black;border-left: 1px solid black;width:15%;">STYLE</th>
                                        <th style="border-top: 1px solid black;border-left: 1px solid black;width:8%;">QTY</th>
                                        <th style="border-top: 1px solid black;border-left: 1px solid black;width:12%;">START PROD</th>
                                        <th style="border-top: 1px solid black;border-left: 1px solid black;text-align:right;width:12%;">PENGELUARAN</th>
                                        <th style="border-top: 1px solid black;border-right: 1px solid black;text-align:left;width:12%;">MATERIAL</th>
                                        <th style="border-top: 1px solid black;border-right: 1px solid black;width:16%;">KET</th>
                                    </tr>
                                    <tr>
                                        <th style="border-left: 1px solid black;"></th>
                                        <th style="border-left: 1px solid black;"></th>
                                        <th style="border-left: 1px solid black;"></th>
                                        <th style="border-left: 1px solid black;"></th>
                                        <th style="border-left: 1px solid black;"></th>
                                        <th style="border-top: 1px solid black;border-left: 1px solid black;">PLAN</th>
                                        <th style="border-top: 1px solid black;border-left: 1px solid black;border-right: 1px solid">ACTUAL</th>
                                        <th style="border-top: 1px solid black;border-left: 1px solid black;border-right: 1px solid"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="no" t-value="1" />
                                    <t t-foreach="data_dict" t-as="dat">
                                        <tr>
                                            <td style="border: 1px solid black;">
                                                <span t-esc="no" />
                                                <t t-set="no" t-value="no + 1"/>
                                            </td>
                                            <td style="border: 1px solid black;">
                                                <span t-esc="dat[0]" />
                                            </td>
                                            <td style="border: 1px solid black;">
                                                <span t-esc="dat[1]" />
                                            </td>
                                            <td style="border: 1px solid black;">
                                                <span t-esc="dat[2]" />
                                            </td>
                                            <td style="border: 1px solid black;">
                                                <t t-if="dat[3]">
                                                    <span t-esc="dat[3].strftime('%d-%m-%Y')" />
                                                </t>
                                            </td>
                                            <td style="border: 1px solid black;">
                                                <t t-if="dat[4]">
                                                    <span t-esc="dat[4].strftime('%d-%m-%Y')" />
                                                </t>
                                            </td>
                                            <td style="border: 1px solid black;">
                                                <t t-if="dat[5]">
                                                    <span t-esc="dat[5].strftime('%d-%m-%Y')" />
                                                </t>
                                            </td>
                                            <td style="border: 1px solid black;">
                                            </td>
                                        </tr>
                                    </t>

                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>

        </template>

    </data>
</openerp>
