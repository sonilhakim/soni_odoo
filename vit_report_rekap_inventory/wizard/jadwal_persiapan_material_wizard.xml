<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_jadwal_persiapan_material_wizard_form" model="ir.ui.view">
        <field name="name">jadwal.persiapan.material.wizard.form</field>
        <field name="model">jadwal.persiapan.material.wizard</field>
        <field name="arch" type="xml">
        <form string="Reports">
            <group>
                <group>
                    <field name="year" string="Tahun"/>
                    <field name="periode"/>
                </group>
                <group>
                    <label string="Date Range" for="date_from" invisible="1"/>
                    <div invisible="1">
                        <field name="date_from" style="width: 40%"/> - 
                        <field name="date_to" style="width: 40%"/>
                    </div>
                </group>
            </group>
            
            <footer>
                <button name="action_print_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                or <button string="Cancel" class="oe_link" special="cancel" />
            </footer>
        </form>
        </field>
    </record>

    <record id="action_jadwal_persiapan_material_wizard" model="ir.actions.act_window">
        <field name="name">JADWAL PERSIAPAN MATERIAL</field>
        <field name="res_model">jadwal.persiapan.material.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_jadwal_persiapan_material_wizard_form"/>
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_jadwal_persiapan_material_wizard"
        name="Jadwal Persiapan Material"
        action="action_jadwal_persiapan_material_wizard"
        parent="stock.menu_warehouse_report"
        sequence="220"/>

</odoo>
