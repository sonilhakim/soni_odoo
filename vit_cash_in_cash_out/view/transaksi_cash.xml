<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_transaksi_cash_tree" model="ir.ui.view">
            <field name="name">vit_transaksi_cash_tree</field>
            <field name="model">vit.transaksi_cash</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Transaksi cash">
                    <field name="name" />
                    <field name="tanggal" />
                    <field name="jumlah" />
                    <field name="keterangan" />
                    <field name="no_voucher" />
                    <field name="cash_in_out_id" />
                    <field name="kode_transaksi" />
                    <field name="display_type" invisible="1"/>
                </tree>
            </field>
        </record>
        <!-- pivot view -->
        <record id="view_vit_transaksi_cash_pivot" model="ir.ui.view">
            <field name="name">vit_transaksi_cash_tree</field>
            <field name="model">vit.transaksi_cash</field>
            <field name="type">pivot</field>
            <field name="arch" type="xml">
                <pivot string="Transaksi cash">
                    <field name="cash_in_out_id" type="row"/>
                    <field name="kode_transaksi" type="row"/>
                </pivot>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_transaksi_cash_form" model="ir.ui.view">
            <field name="name">vit_transaksi_cash_form</field>
            <field name="model">vit.transaksi_cash</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Transaksi cash">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Transaksi cash Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="tanggal" />
                                <field name="jumlah" />
                                <field name="keterangan" />
                                <field name="no_voucher" />
                            </group>
                            <group>
                                <field name="cash_in_out_id" />
                                <field name="kode_transaksi" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_transaksi_cash_search" model="ir.ui.view">
            <field name="name">vit_transaksi_cash</field>
            <field name="model">vit.transaksi_cash</field>
            <field name="arch" type="xml">
                <search string="Transaksi cash">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Tanggal" name="filter_by_tanggal" domain="[('tanggal','=','')]" />
                    <filter string="Jumlah" name="filter_by_jumlah" domain="[('jumlah','=','')]" />
                    <filter string="Keterangan" name="filter_by_keterangan" domain="[('keterangan','=','')]" />
                    <filter string="No voucher" name="filter_by_no_voucher" domain="[('no_voucher','=','')]" />
                    <field name="name" select="True"/>
                    <field name="tanggal" select="True"/>
                    <field name="jumlah" select="True"/>
                    <field name="keterangan" select="True"/>
                    <field name="no_voucher" select="True"/>
                    <field name="cash_in_out_id" select="True"/>
                    <field name="kode_transaksi" select="True"/>
                    <group string="Group By..">
                        <filter string="Cash in out" domain="[]" name="group_by_cash_in_out_id" context="{'group_by':'cash_in_out_id'}"/>
                        <filter string="Kode transaksi" domain="[]" name="group_by_kode_transaksi" context="{'group_by':'kode_transaksi'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_transaksi_cash_kanban" model="ir.ui.view" >
            <field name="name">vit_transaksi_cash</field>
            <field name="model">vit.transaksi_cash</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="tanggal" />
                    <field name="jumlah" />
                    <field name="keterangan" />
                    <field name="no_voucher" />
                    <field name="cash_in_out_id" />
                    <field name="kode_transaksi" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Cash in out</span> <field name="cash_in_out_id"></field>
                                        </li>


                                        <li>
                                            <span class="text-muted">Kode transaksi</span> <field name="kode_transaksi"></field>
                                        </li>

                                        <li>
                                            <span class="text-muted">Tanggal</span> <field name="tanggal"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <record id="view_vit_transaksi_cash_cal" model="ir.ui.view">
            <field name="name">vit_transaksi_cash_cal</field>
            <field name="model">vit.transaksi_cash</field>
            <field name="arch" type="xml">
                <calendar string="Transaksi cash" date_start="tanggal">
                    <field name="name" />
                </calendar>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_transaksi_cash_graph" model="ir.ui.view">
            <field name="name">vit_transaksi_cash</field>
            <field name="model">vit.transaksi_cash</field>
            <field name="arch" type="xml">
                <graph string="Transaksi cash" type="bar">
                    <field name="cash_in_out_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_transaksi_cash" model="ir.actions.act_window">
            <field name="name">Transaksi cash</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.transaksi_cash</field>
            <field name="view_mode">tree,form,kanban,pivot,calendar,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Transaksi cash
                </p><p>
                Click the Create button to add a new Transaksi cash
                </p>
            </field>
        </record>

        <!-- <menuitem id="menu_transaksi_cash" name="Transaksi cash" parent="vit_cash_in_cash_out_config_menu" action="action_transaksi_cash" sequence="40"/> -->
    </data>
</odoo>