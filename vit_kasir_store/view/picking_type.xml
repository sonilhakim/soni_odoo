<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_production_type_ks_kanban" model="ir.ui.view">
        <field name="name">stock.picking.type.ks.kanban</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.stock_picking_type_kanban"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="count_ks_todo"/>
                <field name="count_ks_waiting"/>
            </field>

            <xpath expr='//div[@name="stock_picking"]' position="after">
                <div t-if="record.code.raw_value == 'kasir_store'" t-attf-class="#{kanban_color(record.color.raw_value)}">
                    <div>
                        <div t-attf-class="o_kanban_card_header">
                            <div class="o_kanban_card_header_title">
                                <a type="object" name="get_ks_stock_picking_action_picking_type" class="o_primary">
                                    <field name="name"/>
                                </a>
                                <div class="o_secondary"><field class="o_secondary"  name="warehouse_id" readonly="1"/></div>
                            </div>
                            <div class="o_kanban_manage_button_section">
                                <a class="o_kanban_manage_toggle_button" href="#"><i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/></a>
                            </div>
                        </div>
                        <div class="container o_kanban_card_content">
                            <div class="row">
                                <div class="col-6 o_kanban_primary_left">
                                    <button class="btn btn-primary" name="%(kasir_store_action_picking_dashboard)d" type="action" context="{'search_default_to_process': 1}">
                                        <span t-if="record.code.raw_value =='kasir_store'"><t t-esc="record.count_ks_todo.value"/> To Process</span>
                                    </button>
                                </div>
                                <div class="col-6 o_kanban_primary_right">
                                    <!-- <div t-if="record.count_ks_waiting.raw_value > 0" class="row">
                                        <div class="col-9">
                                            <a name="%(kasir_store_action_picking_dashboard)d" type="action" context="{'search_default_draft': 1}">
                                                Waiting
                                            </a>
                                        </div>
                                        <div class="col-3">
                                            <field name="count_ks_waiting"/>
                                        </div>
                                    </div> -->
                                    <div t-if="record.count_packing_list.raw_value > 0" class="row">
                                        <div class="col-9">
                                            <a class="oe_kanban_stock_picking_type_list" name="get_action_packing_list_store" type="object">
                                                Packing List
                                            </a>
                                        </div>
                                        <div class="col-3">
                                            <field name="count_packing_list"/>
                                        </div>
                                    </div>
                                    <div t-if="record.count_lot_store_wait.raw_value > 0" class="row">
                                        <div class="col-9">
                                            <a class="oe_kanban_stock_picking_type_list" name="get_action_packing_list_store_wait" type="object">
                                                Store Waiting
                                            </a>
                                        </div>
                                        <div class="col-3">
                                            <field name="count_lot_store_wait"/>
                                        </div>
                                    </div>
                                    <div t-if="record.count_lot_store_pass.raw_value > 0" class="row">
                                        <div class="col-9">
                                            <a class="oe_kanban_stock_picking_type_list" name="get_action_packing_list_store_pass" type="object">
                                                Store Done
                                            </a>
                                        </div>
                                        <div class="col-3">
                                            <field name="count_lot_store_pass"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div><div class="container o_kanban_card_manage_pane dropdown-menu" role="menu">
                            <div class="row">
                                <div class="col-6 o_kanban_card_manage_section o_kanban_manage_view" name="picking_left_manage_pane">
                                    <div role="menuitem" class="o_kanban_card_manage_title">
                                        <span>View</span>
                                    </div>
                                    <div role="menuitem">
                                        <a name="%(kasir_store_action_picking_dashboard)d" type="action">All</a>
                                    </div>
                                    <div role="menuitem">
                                        <a name="%(kasir_store_action_picking_dashboard)d" type="action" context="{'search_default_draft': 1}">Draft</a>
                                    </div>
                                    <div role="menuitem">
                                        <a name="%(kasir_store_action_picking_dashboard)d" type="action" context="{'search_default_confirm': 1}">Confirm</a>
                                    </div>
                                    <div role="menuitem">
                                        <a name="%(kasir_store_action_picking_dashboard)d" type="action" context="{'search_default_done': 1}">Done</a>
                                    </div>
                                </div>
                                <div class="col-6 o_kanban_card_manage_section o_kanban_manage_new">
                                    <div role="menuitem" class="o_kanban_card_manage_title">
                                        <span>New</span>
                                    </div>
                                    <div role="menuitem">
                                        <a name="%(action_kasir_store_form)d" type="action">Kasir Store</a>
                                    </div>
                                </div>
                            </div>

                            <div t-if="widget.editable" class="o_kanban_card_manage_settings row">
                                <div role="menuitem" aria-haspopup="true" class="col-8">
                                    <ul role="menu" class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                                <div role="menuitem" class="col-4 text-right">
                                    <a type="edit">Settings</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    <record id="kasir_store_action_picking_dashboard" model="ir.ui.view">
        <field name="name">Operation Types</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.view_picking_type_form"/>
        <field name="arch" type="xml">
            <field name="show_operations" position="attributes">
                <attribute name="attrs">{"invisible": [("code", "=", "kasir_store")]}</attribute>
            </field>
            <field name="show_reserved" position="attributes">
                <attribute name="attrs">{"invisible": [("code", "=", "kasir_store")]}</attribute>
            </field>
        </field>
    </record>
</odoo>
