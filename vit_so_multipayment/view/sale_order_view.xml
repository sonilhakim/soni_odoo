<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="sale_order_multipayment_inherite_id" model="ir.ui.view">
        <field name="name">Sale Order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="priority">10</field>
        <field name="arch" type="xml">
        	<xpath expr="//header" position="inside">
        		<button type="object" name="create_multi_invoices" string ="create multi invoices" attrs="{'invisible': ['|',('payment_ids','=','false'), ('state', '!=', 'sale')]}"/>
        	</xpath>
            <xpath expr="//page['Other Information']" position="after">
            	<page string = "Payment Methods">
            		<div>
            			<field name="payment_ids" widget="one2many_list">
            				<tree editable="top">
            					<field name="payment_journal_id" />
            					<field name="qnty"/>
            					<field name="payment_amount"/>
            				</tree>
            			</field>
            		</div>
            	</page>
            </xpath>
        </field>
    </record>
    </data>
</odoo>
