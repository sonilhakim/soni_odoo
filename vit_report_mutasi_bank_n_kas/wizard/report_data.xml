<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="action_vit_report_mutasi_bank_kas_wizard" model="ir.actions.act_window">
            <field name="name">Report Mutasi Bank/Kas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.report_mutasi_bank_kas_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_vit_report_mutasi_bank_kas_wizard_form" model="ir.ui.view">
            <field name="name">Report Mutasi Bank/Kas</field>
            <field name="model">vit.report_mutasi_bank_kas_wizard</field>
            <field name="arch" type="xml">
                <form string="Mutasi Bank/Kas">
                    <group>
                        <group>
                            <field name="journal_id" domain="[('type','in',['bank','cash'])]" options="{'no_create': True}"/>
                            <field name="cabang_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="user_id" invisible="1"/>
                        </group>
                    </group>                    

                    <footer>
                        <button string="Print" name="confirm_button" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>

                </form>
            </field>
        </record>

        <menuitem id="report_mutasi_bank_kas_menu" 
                name="Report Mutasi Bank/Kas"
                parent="account.menu_finance_reports"
                action="action_vit_report_mutasi_bank_kas_wizard"
                sequence="100" />

    
</odoo>