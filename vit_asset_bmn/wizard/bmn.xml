<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="act_open_vit_export_bmn_wizard" model="ir.actions.act_window">
            <field name="name">Export BMN</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.export_bmn</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_vit_export_bmn_form" model="ir.ui.view">
            <field name="name">view_vit_export_bmn_form</field>
            <field name="model">vit.export_bmn</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Export BMN" version="7.0">

                    <p>
                        Klik tombol Export di bawah untuk mulai export BMN.
                        Data yang diexport adalah Customer Invoice yang berstatus Open dan belum diexport ke E-Faktur.
                    </p>


                    <p>
                        Setelah proses export BMN selesai dilakukan,
                        download file ini:
                    </p>
                    <p>
                        <group>
                            <field name="export_file" readonly="1" filename="export_filename"/>
                            <field name="export_filename" invisible="1" />
                        </group>

                    </p>


                    <p>
                        Lalu import ke program Asset BMN melalui menu <b>Import</b>
                    </p>

                    <footer>
                        <button string="Export" name="confirm_button" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>

                </form>
            </field>
        </record>

        <menuitem id="menu_vit_export_bmn"
                  parent="vit_asset.submenu_operation"
                  sequence="60"
                  name="Export BMN"
                  action="act_open_vit_export_bmn_wizard"/>
    </data>
</openerp>