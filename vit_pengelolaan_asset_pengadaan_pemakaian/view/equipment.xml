    <record id="hr_equipment_view_tree_pemakaian" model="ir.ui.view">
        <field name="name">equipment.tree</field>
        <field name="model">maintenance.equipment</field>
        <field name="arch" type="xml">
            <tree string="Pemakaian">
                <field name="aset_id"/>
                <!-- <field name="active" invisible="1"/> -->
                <field name="employee_id" string="Karyawan"/>
                <field name="unit_kerja_id"/>
                <field name="assign_date" groups="base.group_no_one"/>
                <field name="serial_no"/>
                <field name="kategori_id"/>
                <field name="partner_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="hr_equipment_view_search_pemakaian" model="ir.ui.view">
        <field name="name">equipment.search</field>
        <field name="model">maintenance.equipment</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="aset_id"/>
                <field name="kategori_id"/>
                <field name="employee_id"/>
                <field name="unit_kerja_id"/>
                <filter string="Archived" domain="[('active', '=', False)]" name="inactive"/>
                <separator/>
                <group  expand='0' string='Group by...'>
                    <filter string='Aset' name="aset_id" domain="[]" context="{'group_by': 'aset_id'}"/>
                    <filter string='Kategori' name="category" domain="[]" context="{'group_by': 'kategori_id'}"/>
                    <filter string='Karyawan' name="employee_id" domain="[]" context="{'group_by': 'employee_id'}"/>
                    <filter string='SUBSATKER' name="unit_kerja_id" domain="[]" context="{'group_by': 'unit_kerja_id'}"/>
                    <filter string='Vendor' name="vendor" domain="[]" context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_vit_pemakaian_aset2" model="ir.actions.act_window">
        <field name="name">Pemakaian</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">maintenance.equipment</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="hr_equipment_view_search_pemakaian"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            Klik Untuk Membuat Data Pemakaian Baru
            </p><p>
            Klik tombol Buat untuk Membuat Data Pemakaian Baru
            </p>
        </field>
    </record>
