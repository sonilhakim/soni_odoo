<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_employee_form" model="ir.ui.view">
            <field name="name">hr_employee_form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='unit_kerja_id']" position="after">
                    <field name="status_pegawai" />
                </xpath>
                <xpath expr="//field[@name='tmt_jabatan']" position="after">
                    <!-- <field name="masa_kerja"/> -->
                    <field name="hukuman"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>