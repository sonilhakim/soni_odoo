<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_mutasi_jabatan_struktural_tree" model="ir.ui.view">
            <field name="name">vit_mutasi_jabatan_struktural_tree</field>
            <field name="model">vit.mutasi_jabatan_struktural</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Mutasi jabatan struktural">
                    <field name="name" />
                    <field name="date" />
                    <field name="matra_id" />
                    <field name="fakultas_id" string="SUBSATKER" />
                    <field name="state" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_mutasi_jabatan_struktural_form" model="ir.ui.view">
            <field name="name">vit_mutasi_jabatan_struktural_form</field>
            <field name="model">vit.mutasi_jabatan_struktural</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Mutasi jabatan strukturalr">
                    <header>
                        <button string="Confirm" type="object" name="action_confirm" states="draft" />
                        <button string="Validasi" type="object" name="action_done" states="open" groups="vit_mutasi.group_mutasi_manager"/>
                        <button string="Tolak" type="object" name="action_reject" states="open" groups="vit_mutasi.group_mutasi_manager"/>
                        <button string="Reset to Draft" type="object" name="action_draft" states="open" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Mutasi jabatan Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="date" />
                            </group>
                            <group>
                                <field name="matra_id" />
                                <field name="fakultas_id" string="SUBSATKER"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Mutasi jabatan">
                                <field name="mutasi_jabatan_struktural_ids" mode="tree">
                                    <tree string="Mutasi jabatan" editable="bottom">
                                        <field name="employee_id" string="Pegawai" domain="[('matra_id','=',matra_id),('fakultas_id','=',fakultas_id)]"/>
                                        <field name="jabatan_awal" />
                                        <field name="jabatan_tujuan" string="Jabatan Baru"/>
                                        <field name="matra_id" invisible="1"/>
                                        <field name="fakultas_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_mutasi_jabatan_struktural_search" model="ir.ui.view">
            <field name="name">vit_mutasi_jabatan_struktural</field>
            <field name="model">vit.mutasi_jabatan_struktural</field>
            <field name="arch" type="xml">
                <search string="Mutasi jabatan">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="State" name="filter_by_state" domain="[('state','=','')]" />
                    <field name="name" select="True"/>
                    <field name="state" select="True"/>
                    <field name="matra_id" select="True"/>
                    <field name="fakultas_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Matra" domain="[]" name="group_by_matra_id" context="{'group_by':'matra_id'}"/>
                        <filter string="Fakultas" domain="[]" name="group_by_fakultas_id" context="{'group_by':'fakultas_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_mutasi_jabatan_struktural_kanban" model="ir.ui.view" >
            <field name="name">vit_mutasi_jabatan_struktural</field>
            <field name="model">vit.mutasi_jabatan_struktural</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="state" />
                    <field name="matra_id" />
                    <field name="fakultas_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Matra</span> <field name="matra_id"></field>
                                        </li>


                                        <li>
                                            <span class="text-muted">Fakultas</span> <field name="fakultas_id"></field>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_vit_mutasi_jabatan_struktural_graph" model="ir.ui.view">
            <field name="name">vit_mutasi_jabatan_struktural</field>
            <field name="model">vit.mutasi_jabatan_struktural</field>
            <field name="arch" type="xml">
                <graph string="Mutasi jabatan" type="bar">
                    <field name="matra_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_mutasi_jabatan_struktural" model="ir.actions.act_window">
            <field name="name">Mutasi Jabatan Struktural</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.mutasi_jabatan_struktural</field>
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Mutasi jabatan
                </p><p>
                Click the Create button to add a new Mutasi jabatan
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_mutasi_jabatan_struktural" name="Mutasi Jabatan Struktural" parent="vit_mutasi.vit_mutasi_sub_menu" action="action_vit_mutasi_jabatan_struktural" sequence="100"/>
    </data>
</odoo>