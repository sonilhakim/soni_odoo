<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_inquery_garmen_doc_tree" model="ir.ui.view">
            <field name="name">vit_inquery_garmen_doc_tree</field>
            <field name="model">vit.inquery_garmen_doc</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Inquery doc">
                    <field name="name" />
                    <field name="doc" />
                    <field name="date" />
                    <field name="inquery_id" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_inquery_garmen_doc_form" model="ir.ui.view">
            <field name="name">vit_inquery_garmen_doc_form</field>
            <field name="model">vit.inquery_garmen_doc</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Inquery doc">
                    <header>
                        <!--button string="Confirm" type="object" name="action_confirm" states="draft" /-->
                        <!--button string="Mark as Done" type="object" name="action_done" states="confirmed" /-->
                        <!--button string="Reset to Draft" type="object" name="action_draft" states="confirmed,done" /-->
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Inquery doc Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="doc" />
                                <field name="date" />
                            </group>
                            <group>
                                <field name="inquery_id" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_inquery_garmen_doc_search" model="ir.ui.view">
            <field name="name">vit_inquery_garmen_doc</field>
            <field name="model">vit.inquery_garmen_doc</field>
            <field name="arch" type="xml">
                <search string="Inquery doc">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Doc" name="filter_by_doc" domain="[('doc','=','')]" />
                    <filter string="Date" name="filter_by_date" domain="[('date','=','')]" />
                    <field name="name" select="True"/>
                    <field name="doc" select="True"/>
                    <field name="date" select="True"/>
                    <field name="inquery_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Inquery" domain="[]" name="group_by_inquery_id" context="{'group_by':'inquery_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_inquery_garmen_doc_kanban" model="ir.ui.view" >
            <field name="name">vit_inquery_garmen_doc</field>
            <field name="model">vit.inquery_garmen_doc</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="doc" />
                    <field name="date" />
                    <field name="inquery_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            Field1: <field name="name"></field>
                                        </li>
                                        <li>
                                            Field2: <field name="name"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <record id="view_vit_inquery_garmen_doc_cal" model="ir.ui.view">
            <field name="name">vit_inquery_garmen_doc_cal</field>
            <field name="model">vit.inquery_garmen_doc</field>
            <field name="arch" type="xml">
                <calendar string="Inquery doc" date_start="date">
                    <field name="name" />
                </calendar>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_inquery_doc_graph" model="ir.ui.view">
            <field name="name">vit_inquery_garmen_doc</field>
            <field name="model">vit.inquery_garmen_doc</field>
            <field name="arch" type="xml">
                <graph string="Inquery doc" type="bar">
                    <field name="inquery_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_inquery_garmen_doc" model="ir.actions.act_window">
            <field name="name">Inquery doc</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.inquery_garmen_doc</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban,calendar,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Inquery doc
                </p><p>
                Click the Create button to add a new Inquery doc
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_inquery_garmen_doc" name="Inquery doc" parent="vit_marketing_inquery_sub_menu" action="action_vit_inquery_garmen_doc" sequence="20"/>
    </data>
</odoo>