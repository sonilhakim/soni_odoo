<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_inquery_line_menu" string="Vit - Inquery line"
         model="vit.inquery_garmen_line" report_type="qweb-pdf" 
         file="vit.inquery_line"  name="vit_marketing_inquery.vit_inquery_line_report" />

        <!-- document template -->
        <template id="vit_marketing_inquery.vit_inquery_line_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Inquery line: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Qty</strong>
                            <p class="m-0" t-field="doc.qty" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Weight</strong>
                            <p class="m-0" t-field="doc.weight" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Inquery</strong>
                            <p class="m-0" t-field="doc.inquery_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Product</strong>
                            <p class="m-0" t-field="doc.product_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_marketing_inquery.vit_inquery_line_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_marketing_inquery.vit_inquery_line_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>