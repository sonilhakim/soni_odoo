<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_document_po_garmen_line_tree" model="ir.ui.view">
            <field name="name">vit_document_po_garmen_line_tree</field>
            <field name="model">vit.document_po_garmen_line</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Document" editable="bottom">
                    <field name="doc_name" invisible="1"/>
                    <field name="doc" widget="binary" filename="doc_name" />
                    <field name="date"/>
                    <field name="name"/>
                    <field name="po_id"/>
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_document_po_garmen_line_form" model="ir.ui.view">
            <field name="name">vit_document_po_garmen_line_form</field>
            <field name="model">vit.document_po_garmen_line</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Document po line">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Document po line Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="doc" />
                                <field name="date" />
                            </group>
                            <group>
                                <field name="po_id"/>
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_document_po_garmen_line_search" model="ir.ui.view">
            <field name="name">vit_document_po_garmen_line</field>
            <field name="model">vit.document_po_garmen_line</field>
            <field name="arch" type="xml">
                <search string="Document po line">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Doc" name="filter_by_doc" domain="[('doc','=','')]" />
                    <filter string="Date" name="filter_by_date" domain="[('date','=','')]" />
                    <field name="name" select="True"/>
                    <field name="doc" select="True"/>
                    <field name="date" select="True"/>
                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
