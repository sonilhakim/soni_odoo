<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_spk_pengukuran_menu" string="SPK Pengukuran"
         model="vit.spk_pengukuran" report_type="qweb-pdf" 
         file="vit.spk_pengukuran"  name="vit_spk_pengukuran.vit_spk_pengukuran_report" />

        <!-- document template -->
        <template id="vit_spk_pengukuran.vit_spk_pengukuran_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        SPK Pengukuran: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Date</strong>
                            <p class="m-0" t-field="doc.date" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Project</strong>
                            <p class="m-0" t-field="doc.project" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Notes</strong>
                            <p class="m-0" t-field="doc.notes" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>State</strong>
                            <p class="m-0" t-field="doc.state" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Partner</strong>
                            <p class="m-0" t-field="doc.partner_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <h2>Lines</h2>
                <table class="table table-sm o_main_table" name="line_ids_table">
                    <thead>
                        <tr>
                            <td>Cabang</td>
                            <td>Metode</td>
                            <td>Jml Cabang</td>
                            <td>Jml Karyawan</td>
                            <td>Tgl Mulai</td>
                            <td>Tgl Selesai</td>
                        </tr>
                    </thead>
                    <tbody class="line_ids_tbody">
                        <tr t-foreach="doc.spk_line_ids" t-as="line">
                            <td><span t-field="line.cabang" /></td>
                            <td><span t-field="line.method" /></td>
                            <td><span t-field="line.jml_cabang" /></td>
                            <td><span t-field="line.jml_karyawan" /></td>
                            <td><span t-field="line.date_start" /></td>
                            <td><span t-field="line.date_end" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_spk_pengukuran.vit_spk_pengukuran_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_spk_pengukuran.vit_spk_pengukuran_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>