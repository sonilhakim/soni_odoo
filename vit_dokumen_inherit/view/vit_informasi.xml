<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_informasi_tree" model="ir.ui.view">
            <field name="name">vit.informasi.tree</field>
            <field name="model">vit.informasi</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Informasi">
                    <field name="name" />
                    <field name="tanggal" />
                    <field name="jenis_informasi" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_informasi_form" model="ir.ui.view">
            <field name="name">vit.informasi.form</field>
            <field name="model">vit.informasi</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Informasi">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Nama Informasi"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="tanggal" />
                            </group>
                            <group>
                                <field name="jenis_informasi" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_informasi_search" model="ir.ui.view">
            <field name="name">vit.informasi</field>
            <field name="model">vit.informasi</field>
            <field name="arch" type="xml">
                <search string="Informasi">
                    <field name="name" select="True"/>
                    <field name="tanggal" select="True"/>
                    <field name="jenis_informasi" select="True"/>
                    <group string="Group By..">
                        <filter string="Jenis Informasi" domain="[]" name="group_by_jenis_informasi" context="{'group_by':'jenis_informasi'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_informasi" model="ir.actions.act_window">
            <field name="name">Informasi</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.informasi</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Informasi
                </p><p>
                Click the Create button to add a new Informasi
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_informasi_pegawai" name="Informasi" parent="vit_dokumen.vit_dokumen_config_menu" action="action_vit_informasi" sequence="10"/>
    </data>
</odoo>