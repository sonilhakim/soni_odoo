        <record id="view_account_journal_formk" model="ir.ui.view">
            <field name="name">account.journal.formk</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <field name="default_debit_account_id" position="attributes">
                    <attribute name="groups">account.group_account_user,vit_keuangan.group_keuangan_akuntan
                    </attribute>
                </field>
                <field name="default_credit_account_id" position="attributes">
                    <attribute name="groups">account.group_account_user,vit_keuangan.group_keuangan_akuntan
                    </attribute>
                </field>
            </field>
        </record>

        <record id="view_move_formk" model="ir.ui.view">
            <field name="name">account.move.formk</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <button name="action_post" position="attributes">
                    <attribute name="groups">account.group_account_invoice,vit_keuangan.group_keuangan_user
                    </attribute>
                </button>
                <button name="%(account.action_view_account_move_reversal)d" position="attributes">
                    <attribute name="groups">account.group_account_invoice,vit_keuangan.group_keuangan_user
                    </attribute>
                </button>
                <button name="action_duplicate" position="attributes">
                    <attribute name="groups">account.group_account_invoice,vit_keuangan.group_keuangan_user
                    </attribute>
                </button>
            </field>
        </record>

        <record id="invoice_formk" model="ir.ui.view">
            <field name="name">account.invoice.formk</field>
            <field name="model">account.invoice</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <button name="action_invoice_open" position="attributes">
                    <attribute name="groups">account.group_account_invoice,vit_keuangan.group_keuangan_user
                    </attribute>
                </button>
                <button name="%(account.action_account_invoice_payment)d" position="attributes">
                    <attribute name="groups">account.group_account_invoice,vit_keuangan.group_keuangan_user
                    </attribute>
                </button>
                <button name="%(account.action_account_invoice_refund)d" position="attributes">
                    <attribute name="groups">account.group_account_invoice,vit_keuangan.group_keuangan_user
                    </attribute>
                </button>
                <button name="action_invoice_draft" position="attributes">
                    <attribute name="groups">account.group_account_invoice,vit_keuangan.group_keuangan_user
                    </attribute>    
                </button>
                <field name="journal_id" position="attributes">
                    <attribute name="groups">account.group_account_user,vit_keuangan.group_keuangan_akuntan
                    </attribute>
                </field>
                <field name="account_id" position="attributes">
                    <attribute name="groups">account.group_account_user,vit_keuangan.group_keuangan_akuntan
                    </attribute>
                </field>
                <field name="move_id" position="attributes">
                    <attribute name="groups">account.group_account_user,vit_keuangan.group_keuangan_akuntan
                    </attribute>
                </field>
            </field>
        </record>

        <record id="invoice_supplier_formk" model="ir.ui.view">
            <field name="name">account.invoice.supplier.formk</field>
            <field name="model">account.invoice</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <button name="action_invoice_open" position="attributes">
                    <attribute name="groups">account.group_account_invoice,vit_keuangan.group_keuangan_user
                    </attribute>
                </button>
                <button name="%(account.action_account_invoice_payment)d" position="attributes">
                    <attribute name="groups">account.group_account_invoice,vit_keuangan.group_keuangan_user
                    </attribute>
                </button>
                <button name="%(account.action_account_invoice_refund)d" position="attributes">
                    <attribute name="groups">account.group_account_invoice,vit_keuangan.group_keuangan_user
                    </attribute>
                </button>
                <button name="action_invoice_draft" position="attributes">
                    <attribute name="groups">account.group_account_invoice,vit_keuangan.group_keuangan_user
                    </attribute>    
                </button>
                <field name="journal_id" position="attributes">
                    <attribute name="groups">account.group_account_user,vit_keuangan.group_keuangan_manager
                    </attribute>
                </field>
                <field name="account_id" position="attributes">
                    <attribute name="groups">account.group_account_user,vit_keuangan.group_keuangan_manager
                    </attribute>
                </field>
                <field name="date" position="attributes">
                    <attribute name="groups">account.group_account_user,vit_keuangan.group_keuangan_manager
                    </attribute>
                </field>
                <field name="move_id" position="attributes">
                    <attribute name="groups">account.group_account_user,vit_keuangan.group_keuangan_manager
                    </attribute>
                </field>
            </field>
        </record>
