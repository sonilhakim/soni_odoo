<odoo>
	<data>
		<record model="ir.module.category" id="module_category_keuangan">
			<field name="name">Pengelolaan Keuangan</field>
			<field name="description">Pengelolaan Keuangan Groups</field>
			<field name="sequence">10</field>
		</record>
		<record id="group_keuangan_user" model="res.groups">
			<field name="name">User</field>
			<field name="category_id" ref="module_category_keuangan"/>
		</record>
		<record id="group_keuangan_akuntan" model="res.groups">
			<field name="name">Akuntan</field>
			<field name="category_id" ref="module_category_keuangan"/>
			<field name="implied_ids" eval="[(4, ref('vit_keuangan.group_keuangan_user'))]"/>
		</record>
		<record id="group_keuangan_manager" model="res.groups">
			<field name="name">Manager</field>
			<field name="category_id" ref="module_category_keuangan"/>
			<field name="implied_ids" eval="[(3, ref('vit_keuangan.group_keuangan_user')), (4, ref('vit_keuangan.group_keuangan_akuntan'))]"/>			
		</record>		
	</data>
</odoo>