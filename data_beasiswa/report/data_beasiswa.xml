<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_data_beasiswa_menu" string="Vit - Data beasiswa"
         model="vit.data_beasiswa" report_type="qweb-pdf" 
         file="vit.data_beasiswa"  name="data_beasiswa.vit_data_beasiswa_report" />

        <!-- document template -->
        <template id="data_beasiswa.vit_data_beasiswa_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Data beasiswa: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Tahun</strong>
                            <p class="m-0" t-field="doc.tahun" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Semester</strong>
                            <p class="m-0" t-field="doc.semester" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Jumlah beasiswa</strong>
                            <p class="m-0" t-field="doc.jumlah_beasiswa" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Fakultas</strong>
                            <p class="m-0" t-field="doc.fakultas_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Jurusan</strong>
                            <p class="m-0" t-field="doc.jurusan_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Prodi</strong>
                            <p class="m-0" t-field="doc.prodi_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="data_beasiswa.vit_data_beasiswa_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="data_beasiswa.vit_data_beasiswa_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>