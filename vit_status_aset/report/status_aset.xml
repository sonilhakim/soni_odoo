<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_status_aset_menu" string="Vit - Status aset"
         model="vit.status_aset" report_type="qweb-pdf" 
         file="vit.status_aset"  name="vit_status_aset.vit_status_aset_report" />

        <!-- document template -->
        <template id="vit_status_aset.vit_status_aset_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Status aset: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Description</strong>
                            <p class="m-0" t-field="doc.description" />
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_status_aset.vit_status_aset_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_status_aset.vit_status_aset_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>