<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_anggaran_rasio_menu" string="Rasio Anggaran"
         model="vit.anggaran_rasio" report_type="qweb-pdf" 
         file="vit.anggaran_rasio"  name="vit_rekap_anggaran.vit_anggaran_rasio_report" />

        <!-- document template -->
        <template id="vit_rekap_anggaran.vit_anggaran_rasio_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Date</strong>
                            <p class="m-0" t-field="doc.date" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Tahun</strong>
                            <p class="m-0" t-field="doc.tahun_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>State</strong>
                            <p class="m-0" t-field="doc.state" />
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <h2>Rasio Anggaran</h2>
                <table class="table table-sm o_main_table" name="rasio_line_ids_table">
                    <thead>
                        <tr>
                            <td>SUBSATKER</td>
                            <td>Realisasi Tahun ini</td>
                            <td>Realisasi Tahun lalu</td>
                            <td class="text-right">Pertumbuhan</td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td class="text-center">Rp</td>
                            <td class="text-center">%</td>
                        </tr>
                    </thead>
                    <tbody class="rasio_line_ids_tbody">
                        <tr t-foreach="doc.rasio_line_ids" t-as="line">
                            <td><span t-field="line.unit_id" /></td>
                            <td class="text-right"><span t-field="line.realisasi_ini" /></td>
                            <td class="text-right"><span t-field="line.realisasi_lalu" /></td>
                            <td class="text-right"><span t-field="line.pertumbuhan_rp" /></td>
                            <td class="text-right"><span t-field="line.pertumbuhan_persen" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_rekap_anggaran.vit_anggaran_rasio_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_rekap_anggaran.vit_anggaran_rasio_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>