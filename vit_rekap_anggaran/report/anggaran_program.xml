<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_anggaran_program_menu" string="Vit - Anggaran program"
         model="vit.anggaran_program" report_type="qweb-pdf" 
         file="vit.anggaran_program"  name="vit_rekap_anggaran.vit_anggaran_program_report" />

        <!-- document template -->
        <template id="vit_rekap_anggaran.vit_anggaran_program_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Anggaran program: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Target capaian</strong>
                            <p class="m-0" t-field="doc.target_capaian" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Anggaran</strong>
                            <p class="m-0" t-field="doc.anggaran" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Realisasi</strong>
                            <p class="m-0" t-field="doc.realisasi" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Sisa</strong>
                            <p class="m-0" t-field="doc.sisa" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Definitif</strong>
                            <p class="m-0" t-field="doc.definitif" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Satuan target</strong>
                            <p class="m-0" t-field="doc.satuan_target"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Program</strong>
                            <p class="m-0" t-field="doc.program_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Rekap program</strong>
                            <p class="m-0" t-field="doc.rekap_program_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_rekap_anggaran.vit_anggaran_program_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_rekap_anggaran.vit_anggaran_program_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>