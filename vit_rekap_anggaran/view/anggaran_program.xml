    <data>
        <!-- tree view -->
        <record id="view_vit_anggaran_program_tree" model="ir.ui.view">
            <field name="name">vit_anggaran_program_tree</field>
            <field name="model">vit.anggaran_program</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Anggaran program">
                    <field name="indikator" />
                    <field name="target_capaian" />
                    <field name="satuan_target" />
                    <field name="anggaran" />
                    <field name="realisasi" />
                    <field name="sisa" />
                    <field name="definitif" />
                    <!-- <field name="rekap_program_id" /> -->
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_anggaran_program_form" model="ir.ui.view">
            <field name="name">vit_anggaran_program_form</field>
            <field name="model">vit.anggaran_program</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Anggaran program">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <!-- <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Anggaran program Name"/>
                            <h1><field name="name"/></h1>
                        </div> -->
                        <group>
                            <group>
                                <field name="target_capaian" />
                                <field name="satuan_target" />
                                <field name="anggaran" />
                                <field name="realisasi" />
                                <field name="sisa" />
                                <field name="definitif" />
                            </group>
                            <group>                                
                                <field name="indikator" />
                                <field name="rekap_anggaran_id" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
