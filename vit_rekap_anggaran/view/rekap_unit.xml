<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_rekap_unit_tree" model="ir.ui.view">
            <field name="name">vit_rekap_unit_tree</field>
            <field name="model">vit.rekap_unit</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Rekap unit">
                    <field name="name" />
                    <field name="tahun_id" />
                    <!-- <field name="description" /> -->
                    <field name="date" />
                    <field name="state" />
                    <!-- <field name="periode_id" /> -->
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_rekap_unit_form" model="ir.ui.view">
            <field name="name">vit_rekap_unit_form</field>
            <field name="model">vit.rekap_unit</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Rekap unit">
                    <header>
                        <button string="Verifikasi" type="object" name="action_confirm" states="draft" />
                        <button string="Isi Rincian" type="object" name="action_reload" states="draft" />
                        <button string="Disahkan" type="object" name="action_done" states="open" />
                        <button string="Kembali ke Rancangan" type="object" name="action_draft" states="open,done" />
                        <button name="print_rka" string="Cetak RKA" type="object" states="open,done"/>
                        <button name="print_rka_detail" string="Cetak RKA Detail" type="object" states="open,done"/>
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Rekap Unit"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <!-- <field name="description" /> -->
                                <field name="date" />
                                <field name="ttd_id"/>
                                <field name="pos_ttd"/>
                            </group>
                            <group>
                                <field name="tahun_id" />
                                <!-- <field name="periode_id" /> -->
                                <field name="total" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Anggaran unit">
                                <field name="anggaran_unit_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_rekap_unit_search" model="ir.ui.view">
            <field name="name">vit_rekap_unit</field>
            <field name="model">vit.rekap_unit</field>
            <field name="arch" type="xml">
                <search string="Rekap unit">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <!-- <filter string="Description" name="filter_by_description" domain="[('description','=','')]" /> -->
                    <filter string="Date" name="filter_by_date" domain="[('date','=','')]" />
                    <filter string="State" name="filter_by_state" domain="[('state','=','')]" />
                    <field name="name" select="True"/>
                    <!-- <field name="description" select="True"/> -->
                    <field name="date" select="True"/>
                    <field name="state" select="True"/>
                    <field name="tahun_id" select="True"/>
                    <!-- <field name="periode_id" select="True"/> -->
                    <group string="Group By..">
                        <filter string="Tahun" domain="[]" name="group_by_tahun_id" context="{'group_by':'tahun_id'}"/>
                        <!-- <filter string="Periode" domain="[]" name="group_by_periode_id" context="{'group_by':'periode_id'}"/> -->
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_rekap_unit_kanban" model="ir.ui.view" >
            <field name="name">vit_rekap_unit</field>
            <field name="model">vit.rekap_unit</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="description" />
                    <field name="date" />
                    <field name="state" />
                    <field name="tahun_id" />
                    <!-- <field name="periode_id" /> -->
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Tahun</span> <field name="tahun_id"></field>
                                        </li>


                                        <!-- <li>
                                            <span class="text-muted">Periode</span> <field name="periode_id"></field>
                                        </li> -->

                                        <li>
                                            <span class="text-muted">Date</span> <field name="date"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <record id="view_vit_rekap_unit_cal" model="ir.ui.view">
            <field name="name">vit_rekap_unit_cal</field>
            <field name="model">vit.rekap_unit</field>
            <field name="arch" type="xml">
                <calendar string="Rekap unit" date_start="date">
                    <field name="name" />
                </calendar>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_rekap_unit_graph" model="ir.ui.view">
            <field name="name">vit_rekap_unit</field>
            <field name="model">vit.rekap_unit</field>
            <field name="arch" type="xml">
                <graph string="Rekap unit" type="bar">
                    <field name="tahun_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_rekap_unit" model="ir.actions.act_window">
            <field name="name">Rekap unit</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.rekap_unit</field>
            <field name="view_mode">kanban,tree,form,calendar,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Rekap unit
                </p><p>
                Click the Create button to add a new Rekap unit
                </p>
            </field>
        </record>

        <!-- <menuitem id="menu_vit_rekap_unit" name="Rekap unit" parent="vit_rekap_anggaran_sub_menu" action="action_vit_rekap_unit" sequence="130"/> -->
    </data>
</odoo>