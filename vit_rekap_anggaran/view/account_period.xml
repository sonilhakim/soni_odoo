<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_account_period_tree" model="ir.ui.view">
            <field name="name">account_period_tree</field>
            <field name="model">account.period</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Account period">
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_account_period_form" model="ir.ui.view">
            <field name="name">account_period_form</field>
            <field name="model">account.period</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Account period">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Account period Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_account_period_search" model="ir.ui.view">
            <field name="name">account_period</field>
            <field name="model">account.period</field>
            <field name="arch" type="xml">
                <search string="Account period">

                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_account_period_kanban" model="ir.ui.view" >
            <field name="name">account_period</field>
            <field name="model">account.period</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_account_period_graph" model="ir.ui.view">
            <field name="name">account_period</field>
            <field name="model">account.period</field>
            <field name="arch" type="xml">
                <graph string="Account period" type="bar">
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_account_period" model="ir.actions.act_window">
            <field name="name">Account period</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.period</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Account period
                </p><p>
                Click the Create button to add a new Account period
                </p>
            </field>
        </record>

        <menuitem id="menu_account_period" name="Account period" parent="vit_rekap_anggaran_config_menu" action="action_account_period" sequence="40"/>
    </data>
</odoo>