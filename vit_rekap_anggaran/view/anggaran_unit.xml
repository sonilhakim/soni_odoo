<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_anggaran_unit_tree" model="ir.ui.view">
            <field name="name">vit_anggaran_unit_tree</field>
            <field name="model">vit.anggaran_unit</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Anggaran unit">
                    <!-- <field name="rka_id" /> -->
                    <field name="unit_id" string="SUBSATKER"/>
                    <field name="alokasi" />
                    <field name="anggaran" sum="Total anggaran"/>
                    <field name="realisasi" />
                    <field name="sisa" />
                    <field name="definitif" />
                    <!-- <field name="rekap_unit_id" /> -->
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_anggaran_unit_form" model="ir.ui.view">
            <field name="name">vit_anggaran_unit_form</field>
            <field name="model">vit.anggaran_unit</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Anggaran unit">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="unit_id" class="oe_edit_only" string="SUBSATKER"/>
                            <h1><field name="unit_id"/></h1>
                        </div>
                        <group>
                            <group>
                                <!-- <field name="rka_id" /> -->
                                <field name="alokasi" />
                                <field name="anggaran" />
                            </group>
                            <group>
                                <field name="realisasi" />
                                <field name="sisa" />
                                <field name="definitif" />
                                <!-- <field name="unit_id" />
                                <field name="rekap_unit_id" /> -->
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_anggaran_unit_search" model="ir.ui.view">
            <field name="name">vit_anggaran_unit</field>
            <field name="model">vit.anggaran_unit</field>
            <field name="arch" type="xml">
                <search string="Anggaran unit">

                    <filter string="Alokasi" name="filter_by_alokasi" domain="[('alokasi','=','')]" />
                    <filter string="Anggaran" name="filter_by_anggaran" domain="[('anggaran','=','')]" />
                    <filter string="Realisasi" name="filter_by_realisasi" domain="[('realisasi','=','')]" />
                    <filter string="Sisa" name="filter_by_sisa" domain="[('sisa','=','')]" />
                    <filter string="Definitif" name="filter_by_definitif" domain="[('definitif','=','')]" />
                    <field name="alokasi" select="True"/>
                    <field name="anggaran" select="True"/>
                    <field name="realisasi" select="True"/>
                    <field name="sisa" select="True"/>
                    <field name="definitif" select="True"/>
                    <field name="unit_id" select="True"/>
                    <field name="rekap_unit_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Unit" domain="[]" name="group_by_unit_id" context="{'group_by':'unit_id'}"/>
                        <filter string="Rekap unit" domain="[]" name="group_by_rekap_unit_id" context="{'group_by':'rekap_unit_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_anggaran_unit_kanban" model="ir.ui.view" >
            <field name="name">vit_anggaran_unit</field>
            <field name="model">vit.anggaran_unit</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="alokasi" />
                    <field name="anggaran" />
                    <field name="realisasi" />
                    <field name="sisa" />
                    <field name="definitif" />
                    <field name="unit_id" />
                    <field name="rekap_unit_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <!-- <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4> -->
                                    <ul>

                                        <li>
                                            <span class="text-muted">Unit</span> <field name="unit_id"></field>
                                        </li>


                                        <li>
                                            <span class="text-muted">Rekap unit</span> <field name="rekap_unit_id"></field>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_vit_anggaran_unit_graph" model="ir.ui.view">
            <field name="name">vit_anggaran_unit</field>
            <field name="model">vit.anggaran_unit</field>
            <field name="arch" type="xml">
                <graph string="Anggaran unit" type="bar">
                    <field name="unit_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_anggaran_unit" model="ir.actions.act_window">
            <field name="name">Anggaran unit</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.anggaran_unit</field>
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Anggaran unit
                </p><p>
                Click the Create button to add a new Anggaran unit
                </p>
            </field>
        </record>

        <!-- <menuitem id="menu_vit_anggaran_unit" name="Anggaran unit" parent="vit_rekap_anggaran_config_menu" action="action_vit_anggaran_unit" sequence="140"/> -->
    </data>
</odoo>