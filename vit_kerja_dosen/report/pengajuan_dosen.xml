<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_pengajuan_dosen_menu" string="Vit - Pengajuan dosen"
         model="vit.pengajuan_dosen" report_type="qweb-pdf" 
         file="vit.pengajuan_dosen"  name="vit_kerja_dosen.vit_pengajuan_dosen_report" />

        <!-- document template -->
        <template id="vit_kerja_dosen.vit_pengajuan_dosen_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Pengajuan dosen: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>State</strong>
                            <p class="m-0" t-field="doc.state" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Nama dosen</strong>
                            <p class="m-0" t-field="doc.nama_dosen" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Nip</strong>
                            <p class="m-0" t-field="doc.nip" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Jabatan</strong>
                            <p class="m-0" t-field="doc.jabatan" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Golongan</strong>
                            <p class="m-0" t-field="doc.golongan" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Fakultas</strong>
                            <p class="m-0" t-field="doc.fakultas" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Jurusan</strong>
                            <p class="m-0" t-field="doc.jurusan" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Bidang studi</strong>
                            <p class="m-0" t-field="doc.bidang_studi" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Employee</strong>
                            <p class="m-0" t-field="doc.employee_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_kerja_dosen.vit_pengajuan_dosen_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_kerja_dosen.vit_pengajuan_dosen_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>