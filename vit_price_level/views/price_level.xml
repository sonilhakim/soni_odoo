<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_price_level_tree" model="ir.ui.view">
            <field name="name">vit_price_level_tree</field>
            <field name="model">vit.price.level</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Level Harga">
                    <field name="name"/>
                    <field name="product_id" />
                    <!-- <field name="cust_categ" />
                    <field name="price" /> -->
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_price_level_form" model="ir.ui.view">
            <field name="name">vit_price_level_form</field>
            <field name="model">vit.price.level</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Level Harga">
                    <header>                        
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="product_id" />
                                <!-- <field name="cust_categ" /> -->
                            </group>
                            <group>
                                <!-- <field name="price" /> -->
                            </group>
                        </group>
                        <notebook>
                            <page string="Daftar Harga">
                                <field name="list_ids" mode="tree">
                                    <tree string="Daftar Harga" editable="bottom">
                                        <field name="name"/>
                                        <field name="price"/>
                                        <field name="product_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_price_level_search" model="ir.ui.view">
            <field name="name">vit_price_level_search</field>
            <field name="model">vit.price.level</field>
            <field name="arch" type="xml">
                <search string="Level Harga">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Product" name="filter_by_date" domain="[('product_id','=','')]" />
                    <!-- <filter string="Customer Category" name="filter_by_partner_id" domain="[('cust_categ','=','')]" /> -->
                    <field name="name" select="True"/>
                    <field name="product_id" select="True"/>
                    <!-- <field name="cust_categ" select="True"/> -->
                    <group string="Group By..">
                        <!-- <filter string="Customer Category" domain="[]" name="group_by_cust_categ" context="{'group_by':'cust_categ'}"/> -->
                        <filter string="Product" domain="[]" name="group_by_product_id" context="{'group_by':'product_id'}"/>
                    </group>
                </search>
            </field>
        </record>
