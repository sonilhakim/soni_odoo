<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_referensi_rekomendasi_bkd_tree" model="ir.ui.view">
            <field name="name">vit_referensi_rekomendasi_bkd_tree</field>
            <field name="model">vit.referensi_rekomendasi_bkd</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Rekomendasi">
                    <field name="name" />
                    <field name="tanggal" />
                    <field name="bkd" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_referensi_rekomendasi_bkd_form" model="ir.ui.view">
            <field name="name">vit_referensi_rekomendasi_bkd_form</field>
            <field name="model">vit.referensi_rekomendasi_bkd</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Rekomendasi">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Nama Rekomendasi"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="tanggal" />
                            </group>
                            <group>
                                <field name="bkd" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_referensi_rekomendasi_bkd_search" model="ir.ui.view">
            <field name="name">vit_referensi_rekomendasi_bkd</field>
            <field name="model">vit.referensi_rekomendasi_bkd</field>
            <field name="arch" type="xml">
                <search string="Rekomendasi">
                    <field name="name" select="True"/>
                    <field name="tanggal" select="True"/>
                    <field name="bkd" select="True"/>
                    <group string="Group By..">
                        <filter string="BKD" domain="[]" name="group_by_bkd" context="{'group_by':'bkd'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_referensi_rekomendasi_bkd_kanban" model="ir.ui.view" >
            <field name="name">vit_referensi_rekomendasi_bkd</field>
            <field name="model">vit.referensi_rekomendasi_bkd</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="tanggal" />
                    <field name="bkd" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Tanggal</span> <field name="tanggal"></field>
                                        </li>

                                        <li>
                                            <span class="text-muted">BKD</span> <field name="bkd"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_referensi_rekomendasi_bkd" model="ir.actions.act_window">
            <field name="name">Rekomendasi BKD</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.referensi_rekomendasi_bkd</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Rekomendasi
                </p><p>
                Click the Create button to add a new Rekomendasi
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_rekomendasi_referensi" name="Rekomendasi BKD" parent="vit_referensi_sub_menu" action="action_vit_referensi_rekomendasi_bkd" sequence="70"/>
    </data>
</odoo>