<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- tree view -->
        <record id="view_vit_pendapat_tree" model="ir.ui.view">
            <field name="name">vit_pendapat_tree</field>
            <field name="model">vit.pendapat</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="vit_univ_common.view_vit_pendapat_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='description']" position="before">
                    <field name="jenis_pendapatan_lain"/>
                </xpath>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_pendapat_form" model="ir.ui.view">
            <field name="name">vit_pendapat_form</field>
            <field name="model">vit.pendapat</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="vit_univ_common.view_vit_pendapat_form"/>
            <field name="arch" type="xml">                
               <xpath expr="//field[@name='description']" position="before">
                    <field name="jenis_pendapatan_lain"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
