<odoo>
    <data>
        <!-- SPTB from -->
        <record id="view_sptb_form" model="ir.ui.view">
            <field name="name">anggaran_sptb_form</field>
            <field name="model">anggaran.sptb</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="sptb form" >
                    <header>
                        <button string="Kirim" type="object" name="action_confirm" 
                             class="oe_highlight" states="draft" />

                        <button string="Setuju" type="object" name="action_done" 
                             class="oe_highlight" states="open" />

                        <button string="Cancel" type="object" name="action_draft"
                              states="open" />

                        <button string="Tolak" type="object" name="action_reject"
                              states="open" />


                        <button string="Buat Realisasi Anggaran" type="object" name="action_create_spp"
                             class="oe_highlight"
                             attrs="{'invisible': ['|',('spp_exists', '=', True),('state','&lt;&gt;','done')]}" />

                        <button string="View Realisasi Anggaran" type="object" name="action_view_spp"
                             attrs="{'invisible': ['|',('spp_exists', '=', False),('state','&lt;&gt;','done')]}" />

                        <field name="state" widget="statusbar" 
                             statusbar_visible="draft,open,done"/>
                    </header>
                    <sheet>


                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" 
                                 string="Nomor" />
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>

                        <div class="oe_button_box oe_right">
                            <button string="Tarik Bukti Biaya" type="object" 
                                 name="action_tarik_biaya" icon="fa-arrow-up" 
                                 class="oe_stat_button" 
                                  states="draft" />
                            <!-- <button string="Tarik Adjust Anggaran" type="object" 
                                 name="action_tarik_sptb" icon="fa-arrow-up" 
                                 class="oe_stat_button" 
                                  states="draft" /> -->
                        </div>						


                        <group>
                            <group>
                                <field name="tanggal"/> 
                                <field name="tahun_id"/> 
                                <field name="unit_id"/>       
                                <field name="jenis_belanja_id"/>    
                            </group>
                            <group>
                                <field name="rka_id" domain="[('unit_id','=',unit_id),('tahun','=',tahun_id),('state','=','done')]"/>
                                <field name="rka_kegiatan_id" domain="[('rka_id','=',rka_id)]"/>
                                <!-- <field name="program_id"/>    
                                <field name="kebijakan_id"/>     -->
                            </group>  
                        </group>

                        <notebook>
                            <page string="Rincian">
                                <field name="sptb_line_ids">
                                    <tree string="Rincian Penjelasan" editable="bottom">
                                        <field name="penerima_id" />  
                                        <field name="uraian" />   
                                        <field name="bukti_no" />     
                                        <field name="bukti_tanggal" />
                                        <field name="jumlah" />
                                        <!-- <field name="sudah_sptb" string="Sudah di-Adjust-kan"/> -->
                                        <field name="biaya_line_id" />
                                        <!-- <field name="sptb_line_id" string="Sumber Adjust Anggaran Item"/> -->
                                    </tree>
                                </field>
                                <group>
                                    <field name="total"/>       
                                </group>	
                            </page>
                            
                            <page string="Persetujuan">
                                <group>
                                    <group>
                                        <field name="pumkc" string="Petugas Keuangan"/>       
                                        <field name="nip_pumkc" string="NIP Petugas Keuangan"/>       
                                    </group>
                                    <group>
                                        <field name="atasan_pumkc" string="Atasan Petugas Keuangan"/>       
                                        <field name="nip_atasan_pumkc" string="NIP Atasan Petugas Keuangan"/>       
                                    </group>
                                    <!-- <group>
                                        <field name="kasubag_aftik"/>       
                                        <field name="nip_kasubag_aftik"/>       
                                    </group> -->
                                    <group>
                                        <field name="div_anggaran"/>       
                                        <field name="nip_div_anggaran"/>       
                                    </group>
                                    <group>
                                        <field name="div_akuntansi"/>       
                                        <field name="nip_div_akuntansi"/>       
                                    </group>
                                </group>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field name="spp_exists" string="Realisasi Anggaran Unit Kerja Sudah Tercatat"/>    
                                </group>
                            </page>

                        </notebook>				        
                    </sheet>
                </form>
            </field>
        </record>

        <!-- SPTB from -->
        <record id="view_sptb_tree" model="ir.ui.view">
            <field name="name">anggaran_sptb_tree</field>
            <field name="model">anggaran.sptb</field>
            <field name="arch" type="xml">
                <tree string="list sptb" colors="grey:state=='done'; blue:state=='draft'">
                    <field name="name"/>
                    <field name="tanggal"/>         
                    <field name="jenis_belanja_id"/>
                    <field name="rka_kegiatan_id"/>    	                    
                    <field name="total"/>    	                    
                    <field name="unit_id"/>  
                    <field name="spp_exists" string="Realisasi Anggaran Sudah Tercatat"/>    
                    <field name="state"/>    	                    
                </tree>    
            </field>
        </record>
    </data>
</odoo>