<odoo>
    <data>
        <!-- Biaya from -->
        <record id="view_biaya_form" model="ir.ui.view">
            <field name="name">anggaran_biaya_form</field>
            <field name="model">anggaran.biaya</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="biaya form">
                    <header>
                        <button string="Kirim" type="object" name="action_confirm" 
                             class="oe_highlight"
                              states="draft" />

                        <button string="Setuju" type="object" name="action_done"
                             class="oe_highlight"
                              states="open" />

                        <button string="Tolak" type="object" name="action_reject"
                              states="open" />

                        <button string="Cancel" type="object" name="action_draft"
                              states="open" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" 
                                 string="Nomor" />
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="tanggal"/>       
                                <field name="tahun_id" readonly="1"/>
                                <field name="total" readonly="1"/>
                                <field name="kepada_partner_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="kas_id"/>       
                                <field name="unit_id"/>       
                            </group>
                        </group>

                        <notebook>

                            <page string="Rincian Penjelasan">
                                <field name="biaya_line_ids">
                                    <tree string="Rincian Biaya" editable="bottom">
                                        <field name="rka_coa_id" />  
                                        <field name="uraian"/>
                                        <field name="biaya_ini"/>
                                        <field name="sudah_sptb" string="Sudah di-Adjust-kan"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Persetujuan">
                                <group>
                                    <group>
                                        <field name="pumkc_id" string="Petugas Keuangan"/>       
                                        <field name="nip_pumkc" string="NIP Petugas Keuangan"/>       
                                    </group>
                                    <group>
                                        <field name="atasan_pumkc_id" string="Atasan Petugas Keuangan"/>       
                                        <field name="nip_atasan_pumkc" string="NIP Atasan Petugas Keuangan"/>       
                                    </group>
                                </group>
                            </page>

                        </notebook>				        
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Biaya from -->
        <record id="view_biaya_tree" model="ir.ui.view">
            <field name="name">anggaran_biaya_tree</field>
            <field name="model">anggaran.biaya</field>
            <field name="arch" type="xml">
                <tree string="list biaya" colors="grey:state=='done'; blue:state=='draft'">
                    <field name="name"/>
                    <field name="kas_id"/>       
                    <field name="tanggal"/>         
                    <field name="tahun_id"/>       
                    <field name="unit_id"/>       
                    <field name="state"/>    	                    
                </tree>    
            </field>
        </record>
    </data>
</odoo>