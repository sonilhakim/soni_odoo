<odoo>
    <data>
        <record id="view_subkomponen_tree" model="ir.ui.view">
            <field name="name">anggaran_subkomponen_tree</field>
            <field name="model">anggaran.subkomponen</field>
            <field name="arch" type="xml">
                <tree string="List Sub Komponen" >
                    <field name="code"/>
                    <field name="name"/>
                </tree>    
            </field>
        </record>

        <!-- ini definisi search tridharma -->
        <record id="view_subkomponen_filter" model="ir.ui.view">
            <field name="name">subkomponen.filter</field>
            <field name="model">anggaran.subkomponen</field>
            <field name="arch" type="xml">
                <search string="Search Sub Komponen">
                    <field name="code"/>
                    <field name="name"/>            
                </search>
            </field>
        </record>
    </data>
</odoo>
