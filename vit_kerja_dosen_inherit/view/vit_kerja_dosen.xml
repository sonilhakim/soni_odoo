<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_kerja_dosen_tree" model="ir.ui.view">
            <field name="name">vit.kerja_dosen.tree</field>
            <field name="model">vit.kerja_dosen</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Kerja Dosen">
                    <field name="name" />
                    <field name="tanggal" />
                    <field name="jenis_kerja_dosen" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_kerja_dosen_form" model="ir.ui.view">
            <field name="name">vit.kerja_dosen.form</field>
            <field name="model">vit.kerja_dosen</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Kerja Dosen">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Nama kerja_dosen"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="tanggal" />
                            </group>
                            <group>
                                <field name="jenis_kerja_dosen" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_kerja_dosen_search" model="ir.ui.view">
            <field name="name">vit.kerja_dosen</field>
            <field name="model">vit.kerja_dosen</field>
            <field name="arch" type="xml">
                <search string="Kerja Dosen">
                    <field name="name" select="True"/>
                    <field name="tanggal" select="True"/>
                    <field name="jenis_kerja_dosen" select="True"/>
                    <group string="Group By..">
                        <filter string="Jenis Kerja Dosen" domain="[]" name="group_by_jenis_kerja_dosen" context="{'group_by':'jenis_kerja_dosen'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_kerja_dosen" model="ir.actions.act_window">
            <field name="name">Kerja Dosen</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.kerja_dosen</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Kerja Dosen
                </p><p>
                Click the Create button to add a new Kerja Dosen
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_kerja_dosen" name="Kerja Dosen" parent="vit_kerja_dosen.vit_kerja_dosen_sub_menu" action="action_vit_kerja_dosen" sequence="1"/>
    </data>
</odoo>