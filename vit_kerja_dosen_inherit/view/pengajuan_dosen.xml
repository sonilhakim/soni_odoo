<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_pengajuan_dosen_tree2" model="ir.ui.view">
            <field name="name">vit_pengajuan_dosen_tree2</field>
            <field name="model">vit.pengajuan_dosen</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="vit_kerja_dosen.view_vit_pengajuan_dosen_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="replace">
                    <tree string="Pengajuan dosen">
                        <field name="name" />
                        <field name="employee_id" />
                        <field name="nip" />
                        <field name="status_dosen" />
                        <field name="jabatan" />
                        <field name="golongan" />
                        <field name="fakultas" />
                        <field name="jurusan" />
                        <field name="bidang_studi" />
                        <field name="state" />
                    </tree>
                </xpath>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_pengajuan_dosen_form2" model="ir.ui.view">
            <field name="name">vit_pengajuan_dosen_form2</field>
            <field name="model">vit.pengajuan_dosen</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="vit_kerja_dosen.view_vit_pengajuan_dosen_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="replace">
                    <header>
                        <button string="Konfirmasi" type="object" name="action_confirm" states="draft" />
                        <button string="Validasi" type="object" name="action_done" states="open" groups="vit_kerja_dosen.group_kerja dosen_manager"/>
                        <button string="Tolak" type="object" name="action_reject" states="open" groups="vit_kerja_dosen.group_kerja dosen_manager"/>
                        <button string="Kembali ke Rancangan" type="object" name="action_draft" states="open" />
                        <field name="state" widget="statusbar" />
                    </header>
                </xpath>
                <xpath expr="//group" position="replace">
                    <group>
                        <group>
                            <field name="employee_id" domain="[('is_dosen','=',False)]"/>
                            <field name="status_dosen" />
                            <field name="bidang_studi" />                            
                        </group>
                        <group>
                            <field name="nip" />
                            <field name="jabatan" />
                            <field name="golongan" />
                            <field name="fakultas" />
                            <field name="jurusan" />
                            <field name="program_studi" />
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>