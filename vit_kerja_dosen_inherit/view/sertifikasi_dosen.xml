<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_sertifikasi_dosen_tree" model="ir.ui.view">
            <field name="name">vit_sertifikasi_dosen_tree</field>
            <field name="model">vit.sertifikasi_dosen</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Sertifikasi Dosen">
                    <field name="name" />
                    <field name="employee_id" />
                    <field name="date"/>
                    <field name="state" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_sertifikasi_dosen_form" model="ir.ui.view">
            <field name="name">vit_sertifikasi_dosen_form</field>
            <field name="model">vit.sertifikasi_dosen</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Sertifikasi Dosen">
                    <header>
                        <button string="Konfirmasi" type="object" name="action_confirm" states="draft" />
                        <button string="Validasi" type="object" name="action_done" states="open" groups="vit_kerja_dosen.group_kerja dosen_manager"/>
                        <button string="Kembali ke Rancangan" type="object" name="action_draft" states="open,done" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="No. Sertifikasi"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="date"/>
                            </group>
                            <group>
                                <field name="employee_id" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_sertifikasi_dosen" model="ir.actions.act_window">
            <field name="name">Sertifikasi Dosen</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.sertifikasi_dosen</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Sertifikasi Dosen
                </p><p>
                Click the Create button to add a new Sertifikasi Dosen
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_sertifikasi_dosen" name="Sertifikasi Dosen" parent="vit_kerja_dosen.vit_kerja_dosen_sub_menu" action="action_vit_sertifikasi_dosen" sequence="45"/>
        
    </data>
</odoo>