<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>        

        <record id="hide_update_cost" model="ir.ui.view">
            <field name="name">product.template.update.cost</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <data>
                    <div name="update_cost_price" position="replace">
                        <div name="update_cost_price" class="col-lg-2">
                            <button string="Update Cost"
                            attrs="{'invisible':1}"/>
                        </div>
                    </div>
                </data>
            </field>
        </record>

        <record id="product_variant_hide_update_cost" model="ir.ui.view">
            <field name="name">product.product.update.costt</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                <data>
                    <div name="update_cost_price" position="replace">
                        <div name="update_cost_price" class="col-lg-2">
                            <button string="Update Cost"
                            attrs="{'invisible':1}"/>
                        </div>
                    </div>
                </data>
            </field>
        </record>

   </data>
</odoo>
