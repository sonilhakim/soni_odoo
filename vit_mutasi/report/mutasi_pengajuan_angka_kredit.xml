<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_mutasi_pengajuan_angka_kredit_menu" string="Vit - Mutasi pengajuan angka kredit"
         model="vit.mutasi_pengajuan_angka_kredit" report_type="qweb-pdf" 
         file="vit.mutasi_pengajuan_angka_kredit"  name="vit_mutasi.vit_mutasi_pengajuan_angka_kredit_report" />

        <!-- document template -->
        <template id="vit_mutasi.vit_mutasi_pengajuan_angka_kredit_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Mutasi pengajuan angka kredit: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>State</strong>
                            <p class="m-0" t-field="doc.state" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Matra</strong>
                            <p class="m-0" t-field="doc.matra_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Fakultas</strong>
                            <p class="m-0" t-field="doc.fakultas_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <h2>Mutasi ak detail</h2>
                <table class="table table-sm o_main_table" name="mutasi_ak_detail_ids_table">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Angka kredit awal</td>
                            <td>Angka kredit tujuan</td>
                            <td>Mutasi ak</td>
                            <td>Employee</td>
                        </tr>
                    </thead>
                    <tbody class="mutasi_ak_detail_ids_tbody">
                        <tr t-foreach="doc.mutasi_ak_detail_ids" t-as="line">
                            <td><span t-field="line.name" /></td>
                            <td><span t-field="line.angka_kredit_awal" /></td>
                            <td><span t-field="line.angka_kredit_tujuan" /></td>
                            <td><span t-field="line.mutasi_ak_id" /></td>
                            <td><span t-field="line.employee_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_mutasi.vit_mutasi_pengajuan_angka_kredit_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_mutasi.vit_mutasi_pengajuan_angka_kredit_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>