<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_masa_kerja_detail_menu" string="Vit - Masa kerja detail"
         model="vit.masa_kerja_detail" report_type="qweb-pdf" 
         file="vit.masa_kerja_detail"  name="vit_mutasi.vit_masa_kerja_detail_report" />

        <!-- document template -->
        <template id="vit_mutasi.vit_masa_kerja_detail_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Masa kerja detail: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Masa kerja awal</strong>
                            <p class="m-0" t-field="doc.masa_kerja_awal" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Masa kerja tujuan</strong>
                            <p class="m-0" t-field="doc.masa_kerja_tujuan" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Mutasi mk</strong>
                            <p class="m-0" t-field="doc.mutasi_mk_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Employee</strong>
                            <p class="m-0" t-field="doc.employee_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_mutasi.vit_masa_kerja_detail_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_mutasi.vit_masa_kerja_detail_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>