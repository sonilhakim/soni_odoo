<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_doc_template_menu" string="Vit - Doc template"
         model="vit.doc_template" report_type="qweb-pdf" 
         file="vit.doc_template"  name="vit_eoffice.vit_doc_template_report" />

        <!-- document template -->
        <template id="vit_eoffice.vit_doc_template_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Doc template: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Code</strong>
                            <p class="m-0" t-field="doc.code" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Body</strong>
                            <p class="m-0" t-field="doc.body" />
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_eoffice.vit_doc_template_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_eoffice.vit_doc_template_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>