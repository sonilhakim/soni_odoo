<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_doc_menu" string="Vit - Doc"
         model="vit.doc" report_type="qweb-pdf" 
         file="vit.doc"  name="vit_eoffice.vit_doc_report" />

        <!-- document template -->
        <template id="vit_eoffice.vit_doc_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Doc: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>State</strong>
                            <p class="m-0" t-field="doc.state" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Subject</strong>
                            <p class="m-0" t-field="doc.subject" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Body</strong>
                            <p class="m-0" t-field="doc.body" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Date</strong>
                            <p class="m-0" t-field="doc.date" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Read status</strong>
                            <p class="m-0" t-field="doc.read_status" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>User</strong>
                            <p class="m-0" t-field="doc.user_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Doc type</strong>
                            <p class="m-0" t-field="doc.doc_type_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Doc template</strong>
                            <p class="m-0" t-field="doc.doc_template_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Parent</strong>
                            <p class="m-0" t-field="doc.parent_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <h2>To user</h2>
                <table class="table table-sm o_main_table" name="to_user_ids_table">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Read status</td>
                            <td>Doc</td>
                            <td>User</td>
                        </tr>
                    </thead>
                    <tbody class="to_user_ids_tbody">
                        <tr t-foreach="doc.to_user_ids" t-as="line">
                            <td><span t-field="line.name" /></td>
                            <td><span t-field="line.read_status" /></td>
                            <td><span t-field="line.doc_id" /></td>
                            <td><span t-field="line.user_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
                <h2>Cc user</h2>
                <table class="table table-sm o_main_table" name="cc_user_ids_table">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Read status</td>
                            <td>Doc</td>
                            <td>User</td>
                        </tr>
                    </thead>
                    <tbody class="cc_user_ids_tbody">
                        <tr t-foreach="doc.cc_user_ids" t-as="line">
                            <td><span t-field="line.name" /></td>
                            <td><span t-field="line.read_status" /></td>
                            <td><span t-field="line.doc_id" /></td>
                            <td><span t-field="line.user_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
                <h2>Doc history</h2>
                <table class="table table-sm o_main_table" name="doc_history_ids_table">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Doc</td>
                            <td>User</td>
                        </tr>
                    </thead>
                    <tbody class="doc_history_ids_tbody">
                        <tr t-foreach="doc.doc_history_ids" t-as="line">
                            <td><span t-field="line.name" /></td>
                            <td><span t-field="line.doc_id" /></td>
                            <td><span t-field="line.user_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_eoffice.vit_doc_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_eoffice.vit_doc_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>