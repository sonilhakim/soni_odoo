<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_doc_template_tree" model="ir.ui.view">
            <field name="name">vit_doc_template_tree</field>
            <field name="model">vit.doc_template</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Doc template">
                    <field name="name" />
                    <field name="code" />
                    <field name="body" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_doc_template_form" model="ir.ui.view">
            <field name="name">vit_doc_template_form</field>
            <field name="model">vit.doc_template</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Doc template">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Doc template Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="code" />
                                <field name="body" />
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_doc_template_search" model="ir.ui.view">
            <field name="name">vit_doc_template</field>
            <field name="model">vit.doc_template</field>
            <field name="arch" type="xml">
                <search string="Doc template">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Code" name="filter_by_code" domain="[('code','=','')]" />
                    <filter string="Body" name="filter_by_body" domain="[('body','=','')]" />
                    <field name="name" select="True"/>
                    <field name="code" select="True"/>
                    <field name="body" select="True"/>
                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_doc_template_kanban" model="ir.ui.view" >
            <field name="name">vit_doc_template</field>
            <field name="model">vit.doc_template</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="code" />
                    <field name="body" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_vit_doc_template_graph" model="ir.ui.view">
            <field name="name">vit_doc_template</field>
            <field name="model">vit.doc_template</field>
            <field name="arch" type="xml">
                <graph string="Doc template" type="bar">
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_doc_template" model="ir.actions.act_window">
            <field name="name">Doc template</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.doc_template</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Doc template
                </p><p>
                Click the Create button to add a new Doc template
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_doc_template" name="Doc template" parent="vit_eoffice_config_menu" action="action_vit_doc_template" sequence="70"/>
    </data>
</odoo>