<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_cc_user_tree" model="ir.ui.view">
            <field name="name">vit_cc_user_tree</field>
            <field name="model">vit.cc_user</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Cc user">
                    <field name="name" />
                    <field name="read_status" />
                    <field name="doc_id" />
                    <field name="user_id" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_cc_user_form" model="ir.ui.view">
            <field name="name">vit_cc_user_form</field>
            <field name="model">vit.cc_user</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Cc user">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Cc user Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="read_status" />
                            </group>
                            <group>
                                <field name="doc_id" />
                                <field name="user_id" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_cc_user_search" model="ir.ui.view">
            <field name="name">vit_cc_user</field>
            <field name="model">vit.cc_user</field>
            <field name="arch" type="xml">
                <search string="Cc user">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Read status" name="filter_by_read_status" domain="[('read_status','=','')]" />
                    <field name="name" select="True"/>
                    <field name="read_status" select="True"/>
                    <field name="doc_id" select="True"/>
                    <field name="user_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Doc" domain="[]" name="group_by_doc_id" context="{'group_by':'doc_id'}"/>
                        <filter string="User" domain="[]" name="group_by_user_id" context="{'group_by':'user_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_cc_user_kanban" model="ir.ui.view" >
            <field name="name">vit_cc_user</field>
            <field name="model">vit.cc_user</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="read_status" />
                    <field name="doc_id" />
                    <field name="user_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Doc</span> <field name="doc_id"></field>
                                        </li>


                                        <li>
                                            <span class="text-muted">User</span> <field name="user_id"></field>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_vit_cc_user_graph" model="ir.ui.view">
            <field name="name">vit_cc_user</field>
            <field name="model">vit.cc_user</field>
            <field name="arch" type="xml">
                <graph string="Cc user" type="bar">
                    <field name="doc_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_cc_user" model="ir.actions.act_window">
            <field name="name">Cc user</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.cc_user</field>
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Cc user
                </p><p>
                Click the Create button to add a new Cc user
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_cc_user" name="Cc user" parent="vit_eoffice_config_menu" action="action_vit_cc_user" sequence="50"/>
    </data>
</odoo>