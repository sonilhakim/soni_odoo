<odoo>
	<data>
		

		<report
            string="Surat Jalan"
            id="stock.action_report_delivery"
            model="stock.picking"
            report_type="qweb-pdf"
            paperformat="vit_custom_report_picking.paperformat_custom_picking"
            name="vit_custom_report_picking.report_deliveryslip"
            file="vit_custom_report_picking.report_deliveryslip"
            print_report_name="'Surat Jalan - %s - %s' % (object.partner_id.name or '', object.name)"
        />


        <template id="vit_custom_report_picking.report_deliveryslip">

            <t t-call="web.html_container">
              <t t-foreach="docs" t-as="doc">
                  <t t-call="vit_custom_report_picking.external_layout_custom">
                    <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                    <div class="page" style="font-size:11pt;">
                        <div class="oe_structure"/>
                        <table style="border-collapse: collapse; border: 1px solid black;" class="table table-sm">
                            <thead>
                                <tr>
                                    <th style="text-align: center; border: 1px solid black;"><strong>Jumlah</strong></th>
                                    <th style="text-align: center; border: 1px solid black;"><strong>Unit</strong></th>
                                    <th style="text-align: center; border: 1px solid black;"><strong>Nama Barang</strong></th>
                                    <th style="text-align: center; border: 1px solid black;"><strong>Keterangan</strong></th>
                                </tr>
                            </thead>

                            <tbody>
                                <t t-foreach="doc.move_ids_without_package.sorted(key=lambda m: m.product_id.id)" t-as="move">
                                    <tr>
                                        <td style="text-align: right; border: 1px solid black;">
                                            <span t-field="move.quantity_done"/>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-field="move.product_uom"/>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-field="move.product_id.display_name"/>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <!-- <span t-field="move.product_uom"/> -->
                                        </td>
                                    </tr>
                                </t>
                              </tbody>
                        </table>
                    </div>

                    <div id="ttd" class="row justify-content-end">
                        <div class="col-12" style="font-size:11pt;">
                            <table class="table">
                                <tr style="width: 100%;">
                                    <td style="border: none;width: 33%;">Hormat Kami<br/><br/><br/><br/>
                                    (&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;
                                    &#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;
                                    &#160;&#160;&#160;&#160;)</td>
                                    <td class="text-center" style="border:  1px solid black;width: 34%;">PERHATIAN <br/> Barang yang telah diterima tidak <br/> dapat ditukar atau dikembalikan <br/> kerusakan atas barang yang telah <br/> diterima diluar tanggung jawab kami</td>
                                    <td class="text-right" style="border: none;width: 33%;">Diterima Oleh<br/><br/><br/><br/>
                                    (&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;
                                    &#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;
                                    &#160;&#160;&#160;&#160;)</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                  </t>
               </t>
            </t>
        </template>

	</data>
</odoo>