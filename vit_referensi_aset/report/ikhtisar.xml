<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_ikhtisar_menu" string="Vit - Ikhtisar"
         model="vit.ikhtisar" report_type="qweb-pdf" 
         file="vit.ikhtisar"  name="vit_referensi_aset.vit_ikhtisar_report" />

        <!-- document template -->
        <template id="vit_referensi_aset.vit_ikhtisar_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Ikhtisar: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Revisi</strong>
                            <p class="m-0" t-field="doc.revisi" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Lama</strong>
                            <p class="m-0" t-field="doc.lama" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Ref</strong>
                            <p class="m-0" t-field="doc.ref_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_referensi_aset.vit_ikhtisar_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_referensi_aset.vit_ikhtisar_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>