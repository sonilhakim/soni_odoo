<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_referensi_aset_menu" string="Vit - Referensi aset"
         model="vit.referensi_aset" report_type="qweb-pdf" 
         file="vit.referensi_aset"  name="vit_referensi_aset.vit_referensi_aset_report" />

        <!-- document template -->
        <template id="vit_referensi_aset.vit_referensi_aset_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Referensi aset: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Description</strong>
                            <p class="m-0" t-field="doc.description" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>State</strong>
                            <p class="m-0" t-field="doc.state" />
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <h2>Ikhtisar</h2>
                <table class="table table-sm o_main_table" name="ikhtisar_ids_table">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Revisi</td>
                            <td>Lama</td>
                            <td>Ref</td>
                        </tr>
                    </thead>
                    <tbody class="ikhtisar_ids_tbody">
                        <tr t-foreach="doc.ikhtisar_ids" t-as="line">
                            <td><span t-field="line.name" /></td>
                            <td><span t-field="line.revisi" /></td>
                            <td><span t-field="line.lama" /></td>
                            <td><span t-field="line.ref_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_referensi_aset.vit_referensi_aset_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_referensi_aset.vit_referensi_aset_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>