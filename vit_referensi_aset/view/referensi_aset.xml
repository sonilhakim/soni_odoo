<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_referensi_aset_tree" model="ir.ui.view">
            <field name="name">vit_referensi_aset_tree</field>
            <field name="model">vit.referensi_aset</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Referensi aset">
                    <field name="name" />
                    <field name="description" />
                    <field name="state" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_referensi_aset_form" model="ir.ui.view">
            <field name="name">vit_referensi_aset_form</field>
            <field name="model">vit.referensi_aset</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Referensi aset">
                    <header>
                        <button string="Confirm" type="object" name="action_confirm" states="draft" />
                        <button string="Mark as Done" type="object" name="action_done" states="open" />
                        <button string="Reset to Draft" type="object" name="action_draft" states="open,done" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Referensi aset Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="description" />
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                            <page string="Ikhtisar">
                                <field name="ikhtisar_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_referensi_aset_search" model="ir.ui.view">
            <field name="name">vit_referensi_aset</field>
            <field name="model">vit.referensi_aset</field>
            <field name="arch" type="xml">
                <search string="Referensi aset">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Description" name="filter_by_description" domain="[('description','=','')]" />
                    <filter string="State" name="filter_by_state" domain="[('state','=','')]" />
                    <field name="name" select="True"/>
                    <field name="description" select="True"/>
                    <field name="state" select="True"/>
                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_referensi_aset_kanban" model="ir.ui.view" >
            <field name="name">vit_referensi_aset</field>
            <field name="model">vit.referensi_aset</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="description" />
                    <field name="state" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_vit_referensi_aset_graph" model="ir.ui.view">
            <field name="name">vit_referensi_aset</field>
            <field name="model">vit.referensi_aset</field>
            <field name="arch" type="xml">
                <graph string="Referensi aset" type="bar">
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_referensi_aset" model="ir.actions.act_window">
            <field name="name">Referensi aset</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.referensi_aset</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Referensi aset
                </p><p>
                Click the Create button to add a new Referensi aset
                </p>
            </field>
        </record>

        <!-- <menuitem id="menu_vit_referensi_aset" name="Referensi aset" parent="vit_referensi_aset_sub_menu" action="action_vit_referensi_aset" sequence="20"/> -->
    </data>
</odoo>