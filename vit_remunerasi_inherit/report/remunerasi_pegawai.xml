<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="vit_remunerasi.report_vit_remunerasi_pegawai_menu" string="Vit - Remunerasi pegawai"
         model="vit.remunerasi_pegawai" report_type="qweb-pdf" 
         file="vit.remunerasi_pegawai"  name="vit_remunerasi_inherit.vit_remunerasi_pegawai_report" />

        <!-- document template -->
        <template id="vit_remunerasi_inherit.vit_remunerasi_pegawai_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Remunerasi Pegawai: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Matra</strong>
                            <p class="m-0" t-field="doc.matra_id.name" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Periode</strong>
                            <div class="row">
                                <p class="m-0" t-field="doc.date_from" />
                                &#160; - &#160;
                                <p class="m-0" t-field="doc.date_to" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <h2>Remunerasi</h2>
                <table class="table table-sm o_main_table" name="remunerasi_ids_table">
                    <thead>
                        <tr>
                            <td>Pegawai</td>
                            <td>Golongan</td>
                            <td>Pangkat</td>
                            <td>Gaji</td>
                        </tr>
                    </thead>
                    <tbody class="remunerasi_ids_tbody">
                        <tr t-foreach="doc.remunerasi_ids" t-as="line">
                            <td><span t-field="line.karyawan_id" /></td>
                            <td><span t-field="line.golongan_id" /></td>
                            <td><span t-field="line.pangkat_id" /></td>
                            <td><span t-field="line.wage" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_remunerasi_inherit.vit_remunerasi_pegawai_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_remunerasi_inherit.vit_remunerasi_pegawai_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>