<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_syarat_bkd_tree" model="ir.ui.view">
            <field name="name">vit_syarat_bkd_tree</field>
            <field name="model">vit.syarat_bkd</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Syarat BKD">
                    <field name="name" />
                    <!-- <field name="status_dosen_ids" widget="many2many_tags"/> -->
                    <field name="min_sks" />
                    <field name="max_sks" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_syarat_bkd_form" model="ir.ui.view">
            <field name="name">vit_syarat_bkd_form</field>
            <field name="model">vit.syarat_bkd</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Syarat BKD">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Syarat BKD Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <!-- <field name="status_dosen_ids" widget="many2many_tags"/> -->
                                <field name="status_dosen_id"/>
                                <field name="min_sks" />
                                <field name="max_sks" />
                            </group>
                            <group>
                                <field name="pendidikan" />
                                <field name="penelitian" />
                                <field name="pengabdian" />
                                <field name="pendidikan_penelitian" />
                                <field name="pengabdian_penunjang" />
                                <field name="total_kinerja" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_syarat_bkd_search" model="ir.ui.view">
            <field name="name">vit_syarat_bkd</field>
            <field name="model">vit.syarat_bkd</field>
            <field name="arch" type="xml">
                <search string="Syarat BKD">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <field name="name" select="True"/>
                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_syarat_bkd_kanban" model="ir.ui.view" >
            <field name="name">vit_syarat_bkd</field>
            <field name="model">vit.syarat_bkd</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_vit_syarat_bkd_graph" model="ir.ui.view">
            <field name="name">vit_syarat_bkd</field>
            <field name="model">vit.syarat_bkd</field>
            <field name="arch" type="xml">
                <graph string="Syarat BKD" type="bar">
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_syarat_bkd" model="ir.actions.act_window">
            <field name="name">Syarat BKD</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.syarat_bkd</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Jenis kegiatan kewajiban khusus
                </p><p>
                Click the Create button to add a new Jenis kegiatan kewajiban khusus
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_syarat_bkd" name="Syarat BKD" parent="vit_bkd.vit_bkd_config_menu" action="action_vit_syarat_bkd" sequence="210"/>
    </data>
</odoo>