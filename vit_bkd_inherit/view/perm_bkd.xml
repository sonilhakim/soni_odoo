<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_permintaan_bkd_tree" model="ir.ui.view">
            <field name="name">vit_permintaan_bkd_tree</field>
            <field name="model">vit.permintaan_bkd</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Permintaan Bkd">
                    <field name="name" />
                    <field name="date" />
                    <field name="tahun_akademik_id" />
                    <field name="fakultas_id" />
                    <field name="jurusan_id" />
                    <field name="program_studi_id" />
                    <field name="state" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_permintaan_bkd_form" model="ir.ui.view">
            <field name="name">vit_permintaan_bkd_form</field>
            <field name="model">vit.permintaan_bkd</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Bkd">
                    <header>
                        <button string="Confirm" type="object" name="action_confirm" states="draft" />
                        <button string="Reload" type="object" name="action_reload" states="draft" />
                        <button string="Mark as Done" type="object" name="action_done" states="open" />
                        <button string="Reset to Draft" type="object" name="action_draft" states="open,done" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Bkd Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="date" />
                                <field name="tahun_akademik_id" />
                            </group>
                            <group>                                
                                <field name="fakultas_id" />
                                <field name="jurusan_id" />
                                <field name="program_studi_id" />
                            </group>
                        </group>
                        <notebook>
                            <page string="BKD">
                                <field name="perm_details" mode="tree">
                                    <tree string="BKD" editable="bottom">
                                        <field name="bkd_id" />
                                        <field name="date" />
                                        <field name="employee_id" />
                                        <field name="nip" />
                                        <field name="nidn" />
                                        <field name="status_dosen_id" />
                                        <field name="bidang_ilmu" />
                                        <field name="semester_id" />         
                                        <field name="state" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_perm_bkd" model="ir.actions.act_window">
            <field name="name">Permintaan Bkd</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.permintaan_bkd</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Permintaan Bkd
                </p><p>
                Click the Create button to add a new Permintaan Bkd
                </p>
            </field>
        </record>

        <!-- <menuitem id="menu_vit_perm_bkd" name="Permintaan Bkd" parent="vit_bkd.vit_bkd_sub_menu" action="action_vit_perm_bkd" sequence="280"/> -->
    </data>
</odoo>