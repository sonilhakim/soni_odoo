<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- form view -->
        <record id="view_vit_mutasi_barang_form2" model="ir.ui.view">
            <field name="name">vit_mutasi_barang_form2</field>
            <field name="model">vit.mutasi_barang</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="vit_tks.view_vit_mutasi_barang_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <header position="inside">
                    <button string="Reload" type="object" name="action_reload" states="draft" />
                </header>
                <xpath expr="//notebook/page" position="replace">
                    <page string="Mutasi barang">
                        <field name="detail_ids" mode="tree">
                            <tree string="Mutasi Barang" editable="bottom">
                                <field name="kode_barang" />
                                <field name="transfer_id" string="Register"/>
                                <field name="name" string="Nama Barang"/>
                                <field name="type" string="Merk/Type"/>
                                <field name="no_sertifikat" />
                                <field name="asal" />
                                <field name="tahun_perolehan" />
                                <field name="kondisi" />
                                <field name="lokasi_awal" />
                                <field name="lokasi_akhir" />
                                <field name="keterangan" />
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_mutasi_barang2" model="ir.actions.act_window">
            <field name="name">Laporan Mutasi barang</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.mutasi_barang</field>
            <field name="view_mode">kanban,tree,form,calendar</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Mutasi barang
                </p><p>
                Click the Create button to add a new Mutasi barang
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_mutasi_barang" name="Laporan Mutasi barang" parent="vit_tks.vit_tks_top_menu" action="action_vit_mutasi_barang2" sequence="150"/>
    </data>
</odoo>