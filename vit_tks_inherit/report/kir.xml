<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_kir_menu2" string="Daftar Inventaris Ruang"
         model="vit.kir" report_type="qweb-pdf" 
         file="vit.kir"  name="vit_tks_inherit.vit_kir_report2" />

        <!-- document template -->
        <template id="vit_tks_inherit.vit_kir_report_document2" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <br/>
                <br/>
                <div class="text-center">
                    <img style="width:150px;" t-if="doc.create_uid.company_id.logo" t-att-src="image_data_uri(doc.create_uid.company_id.logo)" alt="Logo"/>
                    <h2>
                        Daftar Inventaris Ruang
                    </h2>
                </div>
                <div>
                    Gedung: <span t-field="doc.gedung" />
                </div>
                <div>
                    Ruang: <span t-field="doc.ruang" />
                </div>
                <div class="pull-right">
                    No. Dokumen: <span t-field="doc.name"/>
                </div>
                <div>
                    Tanggal pembukuan: <span t-field="doc.date" />
                </div>                
                <br/>
                <div class="oe_structure"/>
                <table class="table table-sm o_main_table text-center" style="font-size:11pt;width:100%;" name="kir_detail_ids_table">
                    <thead>
                        <tr>
                            <td style="border:1px solid black;width:1%;">No</td>
                            <td style="border:1px solid black;width:15%;">Nama Barang</td>
                            <td style="border:1px solid black;width:9%;">Merk/Model</td>
                            <td style="border:1px solid black;width:15%;">No.Seri Pbrk</td>
                            <td style="border:1px solid black;width:16%;">Thn Pembuatan</td>
                            <td style="border:1px solid black;width:14%;">Kode Barang</td>
                            <td style="border:1px solid black;width:5%;">Jmlh</td>
                            <td style="border:1px solid black;width:10%;">Harga</td>
                            <td style="border:1px solid black;width:5%;">Kondisi</td>
                            <td style="border:1px solid black;width:10%;">Keterangan</td>
                        </tr>
                    </thead>
                    <tbody class="kir_detail_ids_tbody">
                        <tr t-foreach="doc.kir_detail_ids" t-as="line">
                            <td style="border:1px solid grey;"><t t-esc="line_index+1"/></td>
                            <td style="border:1px solid grey;"><span t-field="line.asset_id.name" /></td>
                            <td style="border:1px solid grey;"><span t-field="line.merk_model" /></td>
                            <td style="border:1px solid grey;"><span t-field="line.no_seri_pbr" /></td>
                            <td style="border:1px solid grey;"><span t-field="line.thn_pembuatan" /></td>
                            <td style="border:1px solid grey;"><span t-field="line.code" /></td>
                            <td style="border:1px solid grey;"><span t-field="line.jumlah" t-options='{"widget": "float", "precision": 0}'/></td>
                            <td style="border:1px solid grey;"><span t-field="line.harga" t-options='{"widget": "float", "precision": 0}'/></td>
                            <td style="border:1px solid grey;"><span t-field="line.kondisi" /></td>
                            <td style="border:1px solid grey;"><span t-field="line.keterangan" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div style="position:relative; page-break-inside: avoid;">
                    <table style="width:99%;border-collapse: collapse;">
                        <tr>
                            <td style="width:30%;border-collapse: collapse; text-align: center;">Mengetahui</td>
                            <td style="width:40%;border-collapse: collapse;"></td>
                            <td style="width:30%;border-collapse: collapse; text-align: center;">Pengurus</td>
                        </tr>
                        <tr>
                            <td style="width:30%;border-collapse: collapse; text-align: center;">Kepala....................
                            <br/><br/><br/><br/><br/>
                            </td>
                        </tr>
                        <tr>
                            <td style="vertical-align:bottom;border-collapse: collapse; text-align: center;">                                        
                                Nip..................
                            </td>
                            <td style="vertical-align:bottom;border-collapse: collapse;">
                            </td>
                            <td style="vertical-align:bottom;border-collapse: collapse; text-align: center;">
                                Nip..................
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_tks_inherit.vit_kir_report2">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_tks_inherit.vit_kir_report_document2" />
                </t>
            </t>
        </template>

    </data>
</odoo>