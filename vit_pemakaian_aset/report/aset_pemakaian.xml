<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_aset_pemakaian_menu" string="Vit - Aset pemakaian"
         model="vit.aset_pemakaian" report_type="qweb-pdf" 
         file="vit.aset_pemakaian"  name="vit_pemakaian_aset.vit_aset_pemakaian_report" />

        <!-- document template -->
        <template id="vit_pemakaian_aset.vit_aset_pemakaian_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Aset pemakaian: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Reference</strong>
                            <p class="m-0" t-field="doc.reference" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Qty</strong>
                            <p class="m-0" t-field="doc.qty" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Aset</strong>
                            <p class="m-0" t-field="doc.aset_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Pemakaian</strong>
                            <p class="m-0" t-field="doc.pemakaian_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Kategori</strong>
                            <p class="m-0" t-field="doc.kategori_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Lokasi</strong>
                            <p class="m-0" t-field="doc.lokasi_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_pemakaian_aset.vit_aset_pemakaian_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_pemakaian_aset.vit_aset_pemakaian_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>