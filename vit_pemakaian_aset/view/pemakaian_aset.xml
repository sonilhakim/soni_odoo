<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_pemakaian_aset_tree" model="ir.ui.view">
            <field name="name">vit_pemakaian_aset_tree</field>
            <field name="model">vit.pemakaian_aset</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Pemakaian aset">
                    <field name="name" />
                    <field name="date" />                    
                    <field name="penanggung_jawab_id" />
                    <field name="unit_kerja_id" />
                    <field name="jurusan_id" />
                    <field name="fakultas_id" />
                    <field name="state" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_pemakaian_aset_form" model="ir.ui.view">
            <field name="name">vit_pemakaian_aset_form</field>
            <field name="model">vit.pemakaian_aset</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Pemakaian aset">
                    <header>
                        <button string="Confirm" type="object" name="action_confirm" states="draft" />
                        <button string="Mark as Done" type="object" name="action_done" states="open" />
                        <button string="Reset to Draft" type="object" name="action_draft" states="open,done" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Pemakaian aset Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="date" />
                            </group>
                            <group>
                                <field name="penanggung_jawab_id" />
                                <field name="unit_kerja_id" />
                                <field name="jurusan_id" />
                                <field name="fakultas_id" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Aset">
                                <field name="aset_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_pemakaian_aset_search" model="ir.ui.view">
            <field name="name">vit_pemakaian_aset</field>
            <field name="model">vit.pemakaian_aset</field>
            <field name="arch" type="xml">
                <search string="Pemakaian aset">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Date" name="filter_by_date" domain="[('date','=','')]" />
                    <filter string="State" name="filter_by_state" domain="[('state','=','')]" />
                    <field name="name" select="True"/>
                    <field name="date" select="True"/>
                    <field name="state" select="True"/>
                    <field name="penanggung_jawab_id" select="True"/>
                    <field name="unit_kerja_id" select="True"/>
                    <field name="jurusan_id" select="True"/>
                    <field name="fakultas_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Penanggung jawab" domain="[]" name="group_by_penanggung_jawab_id" context="{'group_by':'penanggung_jawab_id'}"/>
                        <filter string="Unit kerja" domain="[]" name="group_by_unit_kerja_id" context="{'group_by':'unit_kerja_id'}"/>
                        <filter string="Jurusan" domain="[]" name="group_by_jurusan_id" context="{'group_by':'jurusan_id'}"/>
                        <filter string="Fakultas" domain="[]" name="group_by_fakultas_id" context="{'group_by':'fakultas_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_pemakaian_aset_kanban" model="ir.ui.view" >
            <field name="name">vit_pemakaian_aset</field>
            <field name="model">vit.pemakaian_aset</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="date" />
                    <field name="state" />
                    <field name="penanggung_jawab_id" />
                    <field name="unit_kerja_id" />
                    <field name="jurusan_id" />
                    <field name="fakultas_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Penanggung jawab</span> <field name="penanggung_jawab_id"></field>
                                        </li>


                                        <li>
                                            <span class="text-muted">Unit kerja</span> <field name="unit_kerja_id"></field>
                                        </li>


                                        <li>
                                            <span class="text-muted">Jurusan</span> <field name="jurusan_id"></field>
                                        </li>


                                        <li>
                                            <span class="text-muted">Fakultas</span> <field name="fakultas_id"></field>
                                        </li>

                                        <li>
                                            <span class="text-muted">Date</span> <field name="date"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <record id="view_vit_pemakaian_aset_cal" model="ir.ui.view">
            <field name="name">vit_pemakaian_aset_cal</field>
            <field name="model">vit.pemakaian_aset</field>
            <field name="arch" type="xml">
                <calendar string="Pemakaian aset" date_start="date">
                    <field name="name" />
                </calendar>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_pemakaian_aset_graph" model="ir.ui.view">
            <field name="name">vit_pemakaian_aset</field>
            <field name="model">vit.pemakaian_aset</field>
            <field name="arch" type="xml">
                <graph string="Pemakaian aset" type="bar">
                    <field name="penanggung_jawab_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_pemakaian_aset" model="ir.actions.act_window">
            <field name="name">Pemakaian aset</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.pemakaian_aset</field>
            <field name="view_mode">kanban,tree,form,calendar,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Pemakaian aset
                </p><p>
                Click the Create button to add a new Pemakaian aset
                </p>
            </field>
        </record>

        <!-- <menuitem id="menu_vit_pemakaian_aset" name="Pemakaian aset" parent="vit_pemakaian_aset_sub_menu" action="action_vit_pemakaian_aset" sequence="20"/> -->
    </data>
</odoo>