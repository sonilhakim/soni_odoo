<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_dokumen_satuan_kerja_menu" string="Vit - Dokumen satuan kerja"
         model="vit.dokumen_satuan_kerja" report_type="qweb-pdf" 
         file="vit.dokumen_satuan_kerja"  name="vit_dokumen.vit_dokumen_satuan_kerja_report" />

        <!-- document template -->
        <template id="vit_dokumen.vit_dokumen_satuan_kerja_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Dokumen satuan kerja: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Jenis</strong>
                            <p class="m-0" t-field="doc.jenis_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Unit</strong>
                            <p class="m-0" t-field="doc.unit_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_dokumen.vit_dokumen_satuan_kerja_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_dokumen.vit_dokumen_satuan_kerja_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>