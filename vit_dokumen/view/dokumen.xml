<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_dokumen_tree" model="ir.ui.view">
            <field name="name">vit_dokumen_tree</field>
            <field name="model">vit.dokumen</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Dokumen">
                    <field name="name" />
                    <field name="jenis_id" />
                    <field name="dokumen_satuan_kerja_id" />
                    <field name="unit_id" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_dokumen_form" model="ir.ui.view">
            <field name="name">vit_dokumen_form</field>
            <field name="model">vit.dokumen</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Dokumen">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Dokumen Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                            </group>
                            <group>
                                <field name="jenis_id" />
                                <field name="dokumen_satuan_kerja_id" />
                                <field name="unit_id" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_dokumen_search" model="ir.ui.view">
            <field name="name">vit_dokumen</field>
            <field name="model">vit.dokumen</field>
            <field name="arch" type="xml">
                <search string="Dokumen">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <field name="name" select="True"/>
                    <field name="jenis_id" select="True"/>
                    <field name="dokumen_satuan_kerja_id" select="True"/>
                    <field name="unit_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Jenis" domain="[]" name="group_by_jenis_id" context="{'group_by':'jenis_id'}"/>
                        <filter string="Dokumen satuan kerja" domain="[]" name="group_by_dokumen_satuan_kerja_id" context="{'group_by':'dokumen_satuan_kerja_id'}"/>
                        <filter string="Unit" domain="[]" name="group_by_unit_id" context="{'group_by':'unit_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_dokumen_kanban" model="ir.ui.view" >
            <field name="name">vit_dokumen</field>
            <field name="model">vit.dokumen</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="jenis_id" />
                    <field name="dokumen_satuan_kerja_id" />
                    <field name="unit_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Jenis</span> <field name="jenis_id"></field>
                                        </li>


                                        <li>
                                            <span class="text-muted">Dokumen satuan kerja</span> <field name="dokumen_satuan_kerja_id"></field>
                                        </li>


                                        <li>
                                            <span class="text-muted">Unit</span> <field name="unit_id"></field>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_vit_dokumen_graph" model="ir.ui.view">
            <field name="name">vit_dokumen</field>
            <field name="model">vit.dokumen</field>
            <field name="arch" type="xml">
                <graph string="Dokumen" type="bar">
                    <field name="jenis_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_dokumen" model="ir.actions.act_window">
            <field name="name">Dokumen</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.dokumen</field>
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Dokumen
                </p><p>
                Click the Create button to add a new Dokumen
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_dokumen" name="Dokumen" parent="vit_dokumen_config_menu" action="action_vit_dokumen" sequence="70"/>
    </data>
</odoo>