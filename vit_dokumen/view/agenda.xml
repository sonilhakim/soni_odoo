<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_agenda_tree" model="ir.ui.view">
            <field name="name">vit_agenda_tree</field>
            <field name="model">vit.agenda</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Agenda">
                    <field name="name" />
                    <field name="kegiatan" />
                    <field name="tanggal" />
                    <field name="unit_id" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_agenda_form" model="ir.ui.view">
            <field name="name">vit_agenda_form</field>
            <field name="model">vit.agenda</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Agenda">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Agenda Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="kegiatan" />
                                <field name="tanggal" />
                            </group>
                            <group>
                                <field name="unit_id" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_agenda_search" model="ir.ui.view">
            <field name="name">vit_agenda</field>
            <field name="model">vit.agenda</field>
            <field name="arch" type="xml">
                <search string="Agenda">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Kegiatan" name="filter_by_kegiatan" domain="[('kegiatan','=','')]" />
                    <filter string="Tanggal" name="filter_by_tanggal" domain="[('tanggal','=','')]" />
                    <field name="name" select="True"/>
                    <field name="kegiatan" select="True"/>
                    <field name="tanggal" select="True"/>
                    <field name="unit_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Unit" domain="[]" name="group_by_unit_id" context="{'group_by':'unit_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_agenda_kanban" model="ir.ui.view" >
            <field name="name">vit_agenda</field>
            <field name="model">vit.agenda</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="kegiatan" />
                    <field name="tanggal" />
                    <field name="unit_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Unit</span> <field name="unit_id"></field>
                                        </li>

                                        <li>
                                            <span class="text-muted">Tanggal</span> <field name="tanggal"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <record id="view_vit_agenda_cal" model="ir.ui.view">
            <field name="name">vit_agenda_cal</field>
            <field name="model">vit.agenda</field>
            <field name="arch" type="xml">
                <calendar string="Agenda" date_start="tanggal">
                    <field name="name" />
                </calendar>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_agenda_graph" model="ir.ui.view">
            <field name="name">vit_agenda</field>
            <field name="model">vit.agenda</field>
            <field name="arch" type="xml">
                <graph string="Agenda" type="bar">
                    <field name="unit_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_agenda" model="ir.actions.act_window">
            <field name="name">Agenda</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.agenda</field>
            <field name="view_mode">kanban,tree,form,calendar,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Agenda
                </p><p>
                Click the Create button to add a new Agenda
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_agenda" name="Agenda" parent="vit_dokumen_config_menu" action="action_vit_agenda" sequence="20"/>
    </data>
</odoo>