<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_berita_tree" model="ir.ui.view">
            <field name="name">vit_berita_tree</field>
            <field name="model">vit.berita</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Berita">
                    <field name="name" />
                    <field name="tanggal" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_berita_form" model="ir.ui.view">
            <field name="name">vit_berita_form</field>
            <field name="model">vit.berita</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Berita">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Berita Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="tanggal" />
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_berita_search" model="ir.ui.view">
            <field name="name">vit_berita</field>
            <field name="model">vit.berita</field>
            <field name="arch" type="xml">
                <search string="Berita">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Tanggal" name="filter_by_tanggal" domain="[('tanggal','=','')]" />
                    <field name="name" select="True"/>
                    <field name="tanggal" select="True"/>
                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_berita_kanban" model="ir.ui.view" >
            <field name="name">vit_berita</field>
            <field name="model">vit.berita</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="tanggal" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            <span class="text-muted">Tanggal</span> <field name="tanggal"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <record id="view_vit_berita_cal" model="ir.ui.view">
            <field name="name">vit_berita_cal</field>
            <field name="model">vit.berita</field>
            <field name="arch" type="xml">
                <calendar string="Berita" date_start="tanggal">
                    <field name="name" />
                </calendar>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_berita_graph" model="ir.ui.view">
            <field name="name">vit_berita</field>
            <field name="model">vit.berita</field>
            <field name="arch" type="xml">
                <graph string="Berita" type="bar">
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_berita" model="ir.actions.act_window">
            <field name="name">Berita</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.berita</field>
            <field name="view_mode">kanban,tree,form,calendar</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Berita
                </p><p>
                Click the Create button to add a new Berita
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_berita" name="Berita" parent="vit_dokumen_config_menu" action="action_vit_berita" sequence="40"/>
    </data>
</odoo>