<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_kpi_aspek_tree" model="ir.ui.view">
            <field name="name">vit_kpi_aspek_tree</field>
            <field name="model">vit.kpi_aspek</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Kpi aspek">
                    <field name="name" />
                    <field name="code" />
                    <field name="parent_aspek_id" />
                    <field name="company_id" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_kpi_aspek_form" model="ir.ui.view">
            <field name="name">vit_kpi_aspek_form</field>
            <field name="model">vit.kpi_aspek</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Kpi aspek">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Kpi aspek Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="code" />
                                <field name="parent_aspek_id" />
                                <field name="company_id" />
                                <field name="not_include" />
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_kpi_aspek_search" model="ir.ui.view">
            <field name="name">vit_kpi_aspek</field>
            <field name="model">vit.kpi_aspek</field>
            <field name="arch" type="xml">
                <search string="Kpi aspek">
                    <field name="name" select="True"/>
                    <field name="code" select="True"/>
                    <field name="parent_aspek_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Parent Aspek" domain="[]" name="group_by_aspek_id" context="{'group_by':'parent_aspek_id'}"/>
                    </group>
                </search>
            </field>
        </record>
