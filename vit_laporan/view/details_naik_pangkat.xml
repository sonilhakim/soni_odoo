<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_details_naik_pangkat_tree" model="ir.ui.view">
            <field name="name">vit_details_naik_pangkat_tree</field>
            <field name="model">vit.details_naik_pangkat</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Details naik pangkat">
                    <field name="name" />
                    <field name="nip" />
                    <field name="pangkat_awal" />
                    <field name="pangkat_akhir" />
                    <!-- <field name="kenaikan_pangkat_id" /> -->
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_details_naik_pangkat_form" model="ir.ui.view">
            <field name="name">vit_details_naik_pangkat_form</field>
            <field name="model">vit.details_naik_pangkat</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Details naik pangkat">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Details naik pangkat Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="nip" />
                                <field name="pangkat_awal" />
                                <field name="pangkat_akhir" />
                            </group>
                            <group>
                                <field name="kenaikan_pangkat_id" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_details_naik_pangkat_search" model="ir.ui.view">
            <field name="name">vit_details_naik_pangkat</field>
            <field name="model">vit.details_naik_pangkat</field>
            <field name="arch" type="xml">
                <search string="Details naik pangkat">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Nip" name="filter_by_nip" domain="[('nip','=','')]" />
                    <filter string="Pangkat awal" name="filter_by_pangkat_awal" domain="[('pangkat_awal','=','')]" />
                    <filter string="Pangkat akhir" name="filter_by_pangkat_akhir" domain="[('pangkat_akhir','=','')]" />
                    <field name="name" select="True"/>
                    <field name="nip" select="True"/>
                    <field name="pangkat_awal" select="True"/>
                    <field name="pangkat_akhir" select="True"/>
                    <field name="kenaikan_pangkat_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Kenaikan pangkat" domain="[]" name="group_by_kenaikan_pangkat_id" context="{'group_by':'kenaikan_pangkat_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_details_naik_pangkat_kanban" model="ir.ui.view" >
            <field name="name">vit_details_naik_pangkat</field>
            <field name="model">vit.details_naik_pangkat</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="nip" />
                    <field name="pangkat_awal" />
                    <field name="pangkat_akhir" />
                    <field name="kenaikan_pangkat_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Kenaikan pangkat</span> <field name="kenaikan_pangkat_id"></field>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_vit_details_naik_pangkat_graph" model="ir.ui.view">
            <field name="name">vit_details_naik_pangkat</field>
            <field name="model">vit.details_naik_pangkat</field>
            <field name="arch" type="xml">
                <graph string="Details naik pangkat" type="bar">
                    <field name="kenaikan_pangkat_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_details_naik_pangkat" model="ir.actions.act_window">
            <field name="name">Details naik pangkat</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.details_naik_pangkat</field>
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Details naik pangkat
                </p><p>
                Click the Create button to add a new Details naik pangkat
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_details_naik_pangkat" name="Details naik pangkat" parent="vit_laporan_config_menu" action="action_vit_details_naik_pangkat" sequence="230"/>
    </data>
</odoo>