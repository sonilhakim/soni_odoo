<odoo>
        <data>
                <record id="action_laporan_hr_available_holidays_report" model="ir.actions.act_window">
                        <field name="name">Laporan Cuti Pegawai</field>
                        <field name="res_model">hr.leave</field>
                        <field name="view_type">form</field>
                        <field name="view_mode">graph,pivot,calendar,form</field>
                        <field name="context">{'search_default_leaves':1}</field>
                </record>

                <record id="laporan_open_company_allocation" model="ir.actions.act_window">
                        <field name="name">Laporan Cuti Per Pegawai</field>
                        <field name="res_model">hr.leave.report</field>
                        <field name="src_model">hr.employee</field>
                        <field name="view_type">form</field>
                        <field name="view_mode">tree,kanban,form</field>
                        <!-- <field name="view_id" eval="hr_holidays.hr_leave_report_tree"/> -->
                        <field name="context">{
                            'search_default_group_type': 1,
                            'search_default_year': 1 ,
                            'search_default_my_leaves': 1,
                        }</field>
                        <field name="help" type="html">
                            <p class="o_view_nocontent_smiling_face">
                                Buat permohonan cuti baru
                            </p>
                        </field>
                        <field name="domain">[('holiday_type','=','employee')]</field>
                        <!-- <field name="search_view_id" ref="hr_holidays.view_hr_holidays_filter_report"/> -->
                </record>

                <menuitem id="vit_laporan_top_menu" name="Laporan" sequence="20" groups="vit_laporan.group_laporan_user,vit_laporan.group_laporan_manager" web_icon="vit_laporan,static/description/icon.png" />
                <menuitem id="vit_laporan_sub_menu" name="Operations" sequence="40" parent="vit_laporan_top_menu" />
                <menuitem id="vit_laporan_config_menu" name="Configurations" sequence="50" parent="vit_laporan_top_menu" />

                <menuitem
                name="Laporan Cuti Pegawai"
                id="menu_laporan_cuti_tree"
                action="action_laporan_hr_available_holidays_report"
                parent="vit_laporan_sub_menu" sequence="300"/>

                <menuitem
                id="menu_laporan_cuti_allocation"
                name="Laporan Cuti Per Pegawai"
                parent="vit_laporan_sub_menu"
                action="laporan_open_company_allocation"
                sequence="290"/>
        </data>
</odoo>