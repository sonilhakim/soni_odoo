<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_pensiun_detail_tree" model="ir.ui.view">
            <field name="name">vit_pensiun_detail_tree</field>
            <field name="model">vit.pensiun_detail</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Pensiun detail">
                    <field name="name" />
                    <field name="nip" />
                    <field name="jabatan_terakhir" />
                    <field name="golongan_terakhir" />
                    <field name="tmt_pensiun" />
                    <!-- <field name="pensiun_id" /> -->
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_pensiun_detail_form" model="ir.ui.view">
            <field name="name">vit_pensiun_detail_form</field>
            <field name="model">vit.pensiun_detail</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Pensiun detail">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Pensiun detail Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="nip" />
                                <field name="jabatan_terakhir" />
                                <field name="golongan_terakhir" />
                                <field name="tmt_pensiun" />
                            </group>
                            <group>
                                <field name="pensiun_id" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_pensiun_detail_search" model="ir.ui.view">
            <field name="name">vit_pensiun_detail</field>
            <field name="model">vit.pensiun_detail</field>
            <field name="arch" type="xml">
                <search string="Pensiun detail">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Nip" name="filter_by_nip" domain="[('nip','=','')]" />
                    <filter string="Jabatan terakhir" name="filter_by_jabatan_terakhir" domain="[('jabatan_terakhir','=','')]" />
                    <filter string="Golongan terakhir" name="filter_by_golongan_terakhir" domain="[('golongan_terakhir','=','')]" />
                    <filter string="Tmt pensiun" name="filter_by_tmt_pensiun" domain="[('tmt_pensiun','=','')]" />
                    <field name="name" select="True"/>
                    <field name="nip" select="True"/>
                    <field name="jabatan_terakhir" select="True"/>
                    <field name="golongan_terakhir" select="True"/>
                    <field name="tmt_pensiun" select="True"/>
                    <field name="pensiun_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Pensiun" domain="[]" name="group_by_pensiun_id" context="{'group_by':'pensiun_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_pensiun_detail_kanban" model="ir.ui.view" >
            <field name="name">vit_pensiun_detail</field>
            <field name="model">vit.pensiun_detail</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="nip" />
                    <field name="jabatan_terakhir" />
                    <field name="golongan_terakhir" />
                    <field name="tmt_pensiun" />
                    <field name="pensiun_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Pensiun</span> <field name="pensiun_id"></field>
                                        </li>

                                        <li>
                                            <span class="text-muted">Tmt pensiun</span> <field name="tmt_pensiun"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <record id="view_vit_pensiun_detail_cal" model="ir.ui.view">
            <field name="name">vit_pensiun_detail_cal</field>
            <field name="model">vit.pensiun_detail</field>
            <field name="arch" type="xml">
                <calendar string="Pensiun detail" date_start="tmt_pensiun">
                    <field name="name" />
                </calendar>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_pensiun_detail_graph" model="ir.ui.view">
            <field name="name">vit_pensiun_detail</field>
            <field name="model">vit.pensiun_detail</field>
            <field name="arch" type="xml">
                <graph string="Pensiun detail" type="bar">
                    <field name="pensiun_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_pensiun_detail" model="ir.actions.act_window">
            <field name="name">Pensiun detail</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.pensiun_detail</field>
            <field name="view_mode">kanban,tree,form,calendar,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Pensiun detail
                </p><p>
                Click the Create button to add a new Pensiun detail
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_pensiun_detail" name="Pensiun detail" parent="vit_laporan_config_menu" action="action_vit_pensiun_detail" sequence="250"/>
    </data>
</odoo>