<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_daftar_detail_tree" model="ir.ui.view">
            <field name="name">vit_daftar_detail_tree</field>
            <field name="model">vit.daftar_detail</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Daftar detail">
                    <field name="name" />
                    <field name="nip" />
                    <field name="tgl_lahir" />
                    <field name="tmp_lahir" />
                    <!-- <field name="riwayat_hidup_id" /> -->
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_daftar_detail_form" model="ir.ui.view">
            <field name="name">vit_daftar_detail_form</field>
            <field name="model">vit.daftar_detail</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Daftar detail">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Daftar detail Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="nip" />
                                <field name="tgl_lahir" />
                                <field name="tmp_lahir" />
                            </group>
                            <group>
                                <field name="riwayat_hidup_id" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_daftar_detail_search" model="ir.ui.view">
            <field name="name">vit_daftar_detail</field>
            <field name="model">vit.daftar_detail</field>
            <field name="arch" type="xml">
                <search string="Daftar detail">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Nip" name="filter_by_nip" domain="[('nip','=','')]" />
                    <filter string="Tgl lahir" name="filter_by_tgl_lahir" domain="[('tgl_lahir','=','')]" />
                    <filter string="Tmp lahir" name="filter_by_tmp_lahir" domain="[('tmp_lahir','=','')]" />
                    <field name="name" select="True"/>
                    <field name="nip" select="True"/>
                    <field name="tgl_lahir" select="True"/>
                    <field name="tmp_lahir" select="True"/>
                    <field name="riwayat_hidup_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Riwayat hidup" domain="[]" name="group_by_riwayat_hidup_id" context="{'group_by':'riwayat_hidup_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_daftar_detail_kanban" model="ir.ui.view" >
            <field name="name">vit_daftar_detail</field>
            <field name="model">vit.daftar_detail</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="nip" />
                    <field name="tgl_lahir" />
                    <field name="tmp_lahir" />
                    <field name="riwayat_hidup_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Riwayat hidup</span> <field name="riwayat_hidup_id"></field>
                                        </li>

                                        <li>
                                            <span class="text-muted">Tgl lahir</span> <field name="tgl_lahir"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <record id="view_vit_daftar_detail_cal" model="ir.ui.view">
            <field name="name">vit_daftar_detail_cal</field>
            <field name="model">vit.daftar_detail</field>
            <field name="arch" type="xml">
                <calendar string="Daftar detail" date_start="tgl_lahir">
                    <field name="name" />
                </calendar>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_daftar_detail_graph" model="ir.ui.view">
            <field name="name">vit_daftar_detail</field>
            <field name="model">vit.daftar_detail</field>
            <field name="arch" type="xml">
                <graph string="Daftar detail" type="bar">
                    <field name="riwayat_hidup_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_daftar_detail" model="ir.actions.act_window">
            <field name="name">Daftar detail</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.daftar_detail</field>
            <field name="view_mode">kanban,tree,form,calendar,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Daftar detail
                </p><p>
                Click the Create button to add a new Daftar detail
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_daftar_detail" name="Daftar detail" parent="vit_laporan_config_menu" action="action_vit_daftar_detail" sequence="100"/>
    </data>
</odoo>