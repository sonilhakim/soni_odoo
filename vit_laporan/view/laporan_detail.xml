<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_laporan_detail_tree" model="ir.ui.view">
            <field name="name">vit_laporan_detail_tree</field>
            <field name="model">vit.laporan_detail</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Laporan detail">
                    <field name="name" />
                    <field name="nip" />
                    <field name="golongan" />
                    <field name="jabatan" />
                    <!-- <field name="lap_daftar_pegawai_id" /> -->
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_laporan_detail_form" model="ir.ui.view">
            <field name="name">vit_laporan_detail_form</field>
            <field name="model">vit.laporan_detail</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Laporan detail">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Laporan detail Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="nip" />
                                <field name="golongan" />
                                <field name="jabatan" />
                            </group>
                            <group>
                                <field name="lap_daftar_pegawai_id" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_laporan_detail_search" model="ir.ui.view">
            <field name="name">vit_laporan_detail</field>
            <field name="model">vit.laporan_detail</field>
            <field name="arch" type="xml">
                <search string="Laporan detail">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Nip" name="filter_by_nip" domain="[('nip','=','')]" />
                    <filter string="Golongan" name="filter_by_golongan" domain="[('golongan','=','')]" />
                    <filter string="Jabatan" name="filter_by_jabatan" domain="[('jabatan','=','')]" />
                    <field name="name" select="True"/>
                    <field name="nip" select="True"/>
                    <field name="golongan" select="True"/>
                    <field name="jabatan" select="True"/>
                    <field name="lap_daftar_pegawai_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Lap daftar pegawai" domain="[]" name="group_by_lap_daftar_pegawai_id" context="{'group_by':'lap_daftar_pegawai_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_laporan_detail_kanban" model="ir.ui.view" >
            <field name="name">vit_laporan_detail</field>
            <field name="model">vit.laporan_detail</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="nip" />
                    <field name="golongan" />
                    <field name="jabatan" />
                    <field name="lap_daftar_pegawai_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Lap daftar pegawai</span> <field name="lap_daftar_pegawai_id"></field>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_vit_laporan_detail_graph" model="ir.ui.view">
            <field name="name">vit_laporan_detail</field>
            <field name="model">vit.laporan_detail</field>
            <field name="arch" type="xml">
                <graph string="Laporan detail" type="bar">
                    <field name="lap_daftar_pegawai_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_laporan_detail" model="ir.actions.act_window">
            <field name="name">Laporan detail</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.laporan_detail</field>
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Laporan detail
                </p><p>
                Click the Create button to add a new Laporan detail
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_laporan_detail" name="Laporan detail" parent="vit_laporan_config_menu" action="action_vit_laporan_detail" sequence="50"/>
    </data>
</odoo>