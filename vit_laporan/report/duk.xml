<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_duk_menu" string="Vit - Duk"
         model="vit.duk" report_type="qweb-pdf" 
         file="vit.duk"  name="vit_laporan.vit_duk_report" />

        <!-- document template -->
        <template id="vit_laporan.vit_duk_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Duk: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>State</strong>
                            <p class="m-0" t-field="doc.state" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Fakultas</strong>
                            <p class="m-0" t-field="doc.fakultas_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Matra</strong>
                            <p class="m-0" t-field="doc.matra_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <h2>Duk detail</h2>
                <table class="table table-sm o_main_table" name="duk_detail_ids_table">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Pangkat</td>
                            <td>Duk</td>
                        </tr>
                    </thead>
                    <tbody class="duk_detail_ids_tbody">
                        <tr t-foreach="doc.duk_detail_ids" t-as="line">
                            <td><span t-field="line.name" /></td>
                            <td><span t-field="line.pangkat" /></td>
                            <td><span t-field="line.duk_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_laporan.vit_duk_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_laporan.vit_duk_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>