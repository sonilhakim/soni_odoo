<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_laporan_daftar_pegawai_menu" string="Vit - Laporan daftar pegawai"
         model="vit.laporan_daftar_pegawai" report_type="qweb-pdf" 
         file="vit.laporan_daftar_pegawai"  name="vit_laporan.vit_laporan_daftar_pegawai_report" />

        <!-- document template -->
        <template id="vit_laporan.vit_laporan_daftar_pegawai_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Laporan daftar pegawai: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>State</strong>
                            <p class="m-0" t-field="doc.state" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Fakultas</strong>
                            <p class="m-0" t-field="doc.fakultas_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Matra</strong>
                            <p class="m-0" t-field="doc.matra_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Golongan</strong>
                            <p class="m-0" t-field="doc.golongan_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Jabatan</strong>
                            <p class="m-0" t-field="doc.jabatan_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <h2>Lap detail</h2>
                <table class="table table-sm o_main_table" name="lap_detail_ids_table">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Nip</td>
                            <td>Golongan</td>
                            <td>Jabatan</td>
                            <td>Lap daftar pegawai</td>
                        </tr>
                    </thead>
                    <tbody class="lap_detail_ids_tbody">
                        <tr t-foreach="doc.lap_detail_ids" t-as="line">
                            <td><span t-field="line.name" /></td>
                            <td><span t-field="line.nip" /></td>
                            <td><span t-field="line.golongan" /></td>
                            <td><span t-field="line.jabatan" /></td>
                            <td><span t-field="line.lap_daftar_pegawai_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_laporan.vit_laporan_daftar_pegawai_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_laporan.vit_laporan_daftar_pegawai_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>