<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_detail_penilaian_menu" string="Vit - Detail penilaian"
         model="vit.detail_penilaian" report_type="qweb-pdf" 
         file="vit.detail_penilaian"  name="vit_laporan.vit_detail_penilaian_report" />

        <!-- document template -->
        <template id="vit_laporan.vit_detail_penilaian_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Detail penilaian: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Nip</strong>
                            <p class="m-0" t-field="doc.nip" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Pekerjaan</strong>
                            <p class="m-0" t-field="doc.pekerjaan" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Nilai</strong>
                            <p class="m-0" t-field="doc.nilai" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Dp3</strong>
                            <p class="m-0" t-field="doc.dp3_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_laporan.vit_detail_penilaian_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_laporan.vit_detail_penilaian_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>