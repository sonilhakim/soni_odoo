<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_kenaikan_pangkat_menu" string="Vit - Kenaikan pangkat"
         model="vit.kenaikan_pangkat" report_type="qweb-pdf" 
         file="vit.kenaikan_pangkat"  name="vit_laporan.vit_kenaikan_pangkat_report" />

        <!-- document template -->
        <template id="vit_laporan.vit_kenaikan_pangkat_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Kenaikan pangkat: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>State</strong>
                            <p class="m-0" t-field="doc.state" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Matra</strong>
                            <p class="m-0" t-field="doc.matra_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <h2>Detail kenaikan</h2>
                <table class="table table-sm o_main_table" name="detail_kenaikan_ids_table">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Nip</td>
                            <td>Pangkat awal</td>
                            <td>Pangkat akhir</td>
                            <td>Kenaikan pangkat</td>
                        </tr>
                    </thead>
                    <tbody class="detail_kenaikan_ids_tbody">
                        <tr t-foreach="doc.detail_kenaikan_ids" t-as="line">
                            <td><span t-field="line.name" /></td>
                            <td><span t-field="line.nip" /></td>
                            <td><span t-field="line.pangkat_awal" /></td>
                            <td><span t-field="line.pangkat_akhir" /></td>
                            <td><span t-field="line.kenaikan_pangkat_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_laporan.vit_kenaikan_pangkat_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_laporan.vit_kenaikan_pangkat_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>