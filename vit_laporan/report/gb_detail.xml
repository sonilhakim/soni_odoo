<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_gb_detail_menu" string="Vit - Gb detail"
         model="vit.gb_detail" report_type="qweb-pdf" 
         file="vit.gb_detail"  name="vit_laporan.vit_gb_detail_report" />

        <!-- document template -->
        <template id="vit_laporan.vit_gb_detail_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Gb detail: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Nip</strong>
                            <p class="m-0" t-field="doc.nip" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Jabatan</strong>
                            <p class="m-0" t-field="doc.jabatan" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Golongan</strong>
                            <p class="m-0" t-field="doc.golongan" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Gb</strong>
                            <p class="m-0" t-field="doc.gb_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_laporan.vit_gb_detail_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_laporan.vit_gb_detail_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>