            </field>
        </record>
        <!-- calendar if a date field exists -->
        <record id="view_vit_bkd_cal" model="ir.ui.view">
            <field name="name">vit_bkd_cal</field>
            <field name="model">vit.bkd</field>
            <field name="arch" type="xml">
                <calendar string="BKD" date_start="date">
                    <field name="name" />
                </calendar>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_bkd_graph" model="ir.ui.view">
