<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_hr_employee_tree" model="ir.ui.view">
            <field name="name">hr_employee_tree</field>
            <field name="model">hr.employee</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Employee">
                    <field name="nomor_sertifikat" />
                    <field name="nip" />
                    <field name="nidn" />
                    <field name="s1" />
                    <field name="s2" />
                    <field name="s3" />
                    <field name="s1_ijasah" />
                    <field name="s2_ijasah" />
                    <field name="s3_ijasah" />
                    <field name="s1_ijasah_filename" />
                    <field name="s2_ijasah_filename" />
                    <field name="s3_ijasah_filename" />
                    <field name="bidang_ilmu" />
                    <field name="ktp" />
                    <field name="ktp_filename" />
                    <field name="status_dosen_id" />
                    <field name="fakultas_id" />
                    <field name="jurusan_id" />
                    <field name="program_studi_id" />
                    <field name="jabatan_fungsional_id" />
                    <field name="golongan_id" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_hr_employee_form" model="ir.ui.view">
            <field name="name">hr_employee_form</field>
            <field name="model">hr.employee</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Employee">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Employee Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="nomor_sertifikat" />
                                <field name="nip" />
                                <field name="nidn" />
                                <field name="s1" />
                                <field name="s2" />
                                <field name="s3" />
                                <field name="s1_ijasah" />
                                <field name="s2_ijasah" />
                                <field name="s3_ijasah" />
                                <field name="s1_ijasah_filename" />
                                <field name="s2_ijasah_filename" />
                                <field name="s3_ijasah_filename" />
                                <field name="bidang_ilmu" />
                                <field name="ktp" />
                                <field name="ktp_filename" />
                            </group>
                            <group>
                                <field name="status_dosen_id" />
                                <field name="fakultas_id" />
                                <field name="jurusan_id" />
                                <field name="program_studi_id" />
                                <field name="jabatan_fungsional_id" />
                                <field name="golongan_id" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Bkd">
                                <field name="bkd_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_hr_employee_search" model="ir.ui.view">
            <field name="name">hr_employee</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <search string="Employee">

                    <filter string="Nomor sertifikat" name="filter_by_nomor_sertifikat" domain="[('nomor_sertifikat','=','')]" />
                    <filter string="Nip" name="filter_by_nip" domain="[('nip','=','')]" />
                    <filter string="Nidn" name="filter_by_nidn" domain="[('nidn','=','')]" />
                    <filter string="S1" name="filter_by_s1" domain="[('s1','=','')]" />
                    <filter string="S2" name="filter_by_s2" domain="[('s2','=','')]" />
                    <filter string="S3" name="filter_by_s3" domain="[('s3','=','')]" />
                    <filter string="S1 ijasah" name="filter_by_s1_ijasah" domain="[('s1_ijasah','=','')]" />
                    <filter string="S2 ijasah" name="filter_by_s2_ijasah" domain="[('s2_ijasah','=','')]" />
                    <filter string="S3 ijasah" name="filter_by_s3_ijasah" domain="[('s3_ijasah','=','')]" />
                    <filter string="S1 ijasah filename" name="filter_by_s1_ijasah_filename" domain="[('s1_ijasah_filename','=','')]" />
                    <filter string="S2 ijasah filename" name="filter_by_s2_ijasah_filename" domain="[('s2_ijasah_filename','=','')]" />
                    <filter string="S3 ijasah filename" name="filter_by_s3_ijasah_filename" domain="[('s3_ijasah_filename','=','')]" />
                    <filter string="Bidang ilmu" name="filter_by_bidang_ilmu" domain="[('bidang_ilmu','=','')]" />
                    <filter string="Ktp" name="filter_by_ktp" domain="[('ktp','=','')]" />
                    <filter string="Ktp filename" name="filter_by_ktp_filename" domain="[('ktp_filename','=','')]" />
                    <field name="nomor_sertifikat" select="True"/>
                    <field name="nip" select="True"/>
                    <field name="nidn" select="True"/>
                    <field name="s1" select="True"/>
                    <field name="s2" select="True"/>
                    <field name="s3" select="True"/>
                    <field name="s1_ijasah" select="True"/>
                    <field name="s2_ijasah" select="True"/>
                    <field name="s3_ijasah" select="True"/>
                    <field name="s1_ijasah_filename" select="True"/>
                    <field name="s2_ijasah_filename" select="True"/>
                    <field name="s3_ijasah_filename" select="True"/>
                    <field name="bidang_ilmu" select="True"/>
                    <field name="ktp" select="True"/>
                    <field name="ktp_filename" select="True"/>
                    <field name="status_dosen_id" select="True"/>
                    <field name="fakultas_id" select="True"/>
                    <field name="jurusan_id" select="True"/>
                    <field name="program_studi_id" select="True"/>
                    <field name="jabatan_fungsional_id" select="True"/>
                    <field name="golongan_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Status dosen" domain="[]" name="group_by_status_dosen_id" context="{'group_by':'status_dosen_id'}"/>
                        <filter string="Fakultas" domain="[]" name="group_by_fakultas_id" context="{'group_by':'fakultas_id'}"/>
                        <filter string="Jurusan" domain="[]" name="group_by_jurusan_id" context="{'group_by':'jurusan_id'}"/>
                        <filter string="Program studi" domain="[]" name="group_by_program_studi_id" context="{'group_by':'program_studi_id'}"/>
                        <filter string="Jabatan fungsional" domain="[]" name="group_by_jabatan_fungsional_id" context="{'group_by':'jabatan_fungsional_id'}"/>
                        <filter string="Golongan" domain="[]" name="group_by_golongan_id" context="{'group_by':'golongan_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_hr_employee_kanban" model="ir.ui.view" >
            <field name="name">hr_employee</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="nomor_sertifikat" />
                    <field name="nip" />
                    <field name="nidn" />
                    <field name="s1" />
                    <field name="s2" />
                    <field name="s3" />
                    <field name="s1_ijasah" />
                    <field name="s2_ijasah" />
                    <field name="s3_ijasah" />
                    <field name="s1_ijasah_filename" />
                    <field name="s2_ijasah_filename" />
                    <field name="s3_ijasah_filename" />
                    <field name="bidang_ilmu" />
                    <field name="ktp" />
                    <field name="ktp_filename" />
                    <field name="status_dosen_id" />
                    <field name="fakultas_id" />
                    <field name="jurusan_id" />
                    <field name="program_studi_id" />
                    <field name="jabatan_fungsional_id" />
                    <field name="golongan_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Status dosen</span> <field name="status_dosen_id"></field>
                                        </li>


                                        <li>
                                            <span class="text-muted">Fakultas</span> <field name="fakultas_id"></field>
                                        </li>


                                        <li>
                                            <span class="text-muted">Jurusan</span> <field name="jurusan_id"></field>
                                        </li>


                                        <li>
                                            <span class="text-muted">Program studi</span> <field name="program_studi_id"></field>
                                        </li>

                                        <!--
                                        <li>
                                            <span class="text-muted">Jabatan fungsional</span> <field name="jabatan_fungsional_id"></field>
                                        </li>
                                        -->
                                        <!--
                                        <li>
                                            <span class="text-muted">Golongan</span> <field name="golongan_id"></field>
                                        </li>
                                        -->
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_hr_employee_graph" model="ir.ui.view">
            <field name="name">hr_employee</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <graph string="Employee" type="bar">
                    <field name="status_dosen_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_hr_employee" model="ir.actions.act_window">
            <field name="name">Employee</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Employee
                </p><p>
                Click the Create button to add a new Employee
                </p>
            </field>
        </record>

        <menuitem id="menu_hr_employee" name="Employee" parent="vit_bkd_config_menu" action="action_hr_employee" sequence="30"/>
    </data>
</odoo>