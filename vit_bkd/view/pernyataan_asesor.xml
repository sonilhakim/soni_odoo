<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_pernyataan_asesor_tree" model="ir.ui.view">
            <field name="name">vit_pernyataan_asesor_tree</field>
            <field name="model">vit.pernyataan_asesor</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Pernyataan asesor">
                    <field name="name" />
                    <field name="date" />
                    <field name="state" />
                    <field name="bkd_id" />
                    <field name="asesor1_id" />
                    <field name="asesor2_id" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_pernyataan_asesor_form" model="ir.ui.view">
            <field name="name">vit_pernyataan_asesor_form</field>
            <field name="model">vit.pernyataan_asesor</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Pernyataan asesor">
                    <header>
                        <button string="Confirm" type="object" name="action_confirm" states="draft" />
                        <button string="Mark as Done" type="object" name="action_done" states="open" />
                        <button string="Reset to Draft" type="object" name="action_draft" states="open,done" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Pernyataan asesor Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="date" />
                            </group>
                            <group>
                                <field name="bkd_id" />
                                <field name="asesor1_id" />
                                <field name="asesor2_id" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_pernyataan_asesor_search" model="ir.ui.view">
            <field name="name">vit_pernyataan_asesor</field>
            <field name="model">vit.pernyataan_asesor</field>
            <field name="arch" type="xml">
                <search string="Pernyataan asesor">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Date" name="filter_by_date" domain="[('date','=','')]" />
                    <filter string="State" name="filter_by_state" domain="[('state','=','')]" />
                    <field name="name" select="True"/>
                    <field name="date" select="True"/>
                    <field name="state" select="True"/>
                    <field name="bkd_id" select="True"/>
                    <field name="asesor1_id" select="True"/>
                    <field name="asesor2_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Bkd" domain="[]" name="group_by_bkd_id" context="{'group_by':'bkd_id'}"/>
                        <filter string="Asesor1" domain="[]" name="group_by_asesor1_id" context="{'group_by':'asesor1_id'}"/>
                        <filter string="Asesor2" domain="[]" name="group_by_asesor2_id" context="{'group_by':'asesor2_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_pernyataan_asesor_kanban" model="ir.ui.view" >
            <field name="name">vit_pernyataan_asesor</field>
            <field name="model">vit.pernyataan_asesor</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="date" />
                    <field name="state" />
                    <field name="bkd_id" />
                    <field name="asesor1_id" />
                    <field name="asesor2_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Bkd</span> <field name="bkd_id"></field>
                                        </li>


                                        <li>
                                            <span class="text-muted">Asesor1</span> <field name="asesor1_id"></field>
                                        </li>


                                        <li>
                                            <span class="text-muted">Asesor2</span> <field name="asesor2_id"></field>
                                        </li>

                                        <li>
                                            <span class="text-muted">Date</span> <field name="date"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <record id="view_vit_pernyataan_asesor_cal" model="ir.ui.view">
            <field name="name">vit_pernyataan_asesor_cal</field>
            <field name="model">vit.pernyataan_asesor</field>
            <field name="arch" type="xml">
                <calendar string="Pernyataan asesor" date_start="date">
                    <field name="name" />
                </calendar>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_pernyataan_asesor_graph" model="ir.ui.view">
            <field name="name">vit_pernyataan_asesor</field>
            <field name="model">vit.pernyataan_asesor</field>
            <field name="arch" type="xml">
                <graph string="Pernyataan asesor" type="bar">
                    <field name="bkd_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_pernyataan_asesor" model="ir.actions.act_window">
            <field name="name">Pernyataan asesor</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.pernyataan_asesor</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form,calendar,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Pernyataan asesor
                </p><p>
                Click the Create button to add a new Pernyataan asesor
                </p>
            </field>
        </record>

        <!-- <menuitem id="menu_vit_pernyataan_asesor" name="Pernyataan asesor" parent="vit_bkd_sub_menu" action="action_vit_pernyataan_asesor" sequence="220"/> -->
    </data>
</odoo>