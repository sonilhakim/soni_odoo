<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_jurusan_tree" model="ir.ui.view">
            <field name="name">vit_jurusan_tree</field>
            <field name="model">vit.jurusan</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Jurusan">
                    <field name="fakultas_id" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_jurusan_form" model="ir.ui.view">
            <field name="name">vit_jurusan_form</field>
            <field name="model">vit.jurusan</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Jurusan">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Jurusan Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                            </group>
                            <group>
                                <field name="fakultas_id" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_jurusan_search" model="ir.ui.view">
            <field name="name">vit_jurusan</field>
            <field name="model">vit.jurusan</field>
            <field name="arch" type="xml">
                <search string="Jurusan">

                    <field name="fakultas_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Fakultas" domain="[]" name="group_by_fakultas_id" context="{'group_by':'fakultas_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_jurusan_kanban" model="ir.ui.view" >
            <field name="name">vit_jurusan</field>
            <field name="model">vit.jurusan</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="fakultas_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Fakultas</span> <field name="fakultas_id"></field>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_vit_jurusan_graph" model="ir.ui.view">
            <field name="name">vit_jurusan</field>
            <field name="model">vit.jurusan</field>
            <field name="arch" type="xml">
                <graph string="Jurusan" type="bar">
                    <field name="fakultas_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_jurusan" model="ir.actions.act_window">
            <field name="name">Jurusan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.jurusan</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Jurusan
                </p><p>
                Click the Create button to add a new Jurusan
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_jurusan" name="Jurusan" parent="vit_bkd_config_menu" action="action_vit_jurusan" sequence="90"/>
    </data>
</odoo>