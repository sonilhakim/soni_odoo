<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_fakultas_tree" model="ir.ui.view">
            <field name="name">vit_fakultas_tree</field>
            <field name="model">vit.fakultas</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Fakultas">
                    <field name="institusi_id" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_fakultas_form" model="ir.ui.view">
            <field name="name">vit_fakultas_form</field>
            <field name="model">vit.fakultas</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Fakultas">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Fakultas Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                            </group>
                            <group>
                                <field name="institusi_id" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_fakultas_search" model="ir.ui.view">
            <field name="name">vit_fakultas</field>
            <field name="model">vit.fakultas</field>
            <field name="arch" type="xml">
                <search string="Fakultas">

                    <field name="institusi_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Institusi" domain="[]" name="group_by_institusi_id" context="{'group_by':'institusi_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_fakultas_kanban" model="ir.ui.view" >
            <field name="name">vit_fakultas</field>
            <field name="model">vit.fakultas</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="institusi_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Institusi</span> <field name="institusi_id"></field>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_vit_fakultas_graph" model="ir.ui.view">
            <field name="name">vit_fakultas</field>
            <field name="model">vit.fakultas</field>
            <field name="arch" type="xml">
                <graph string="Fakultas" type="bar">
                    <field name="institusi_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_fakultas" model="ir.actions.act_window">
            <field name="name">Fakultas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.fakultas</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Fakultas
                </p><p>
                Click the Create button to add a new Fakultas
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_fakultas" name="Fakultas" parent="vit_bkd_config_menu" action="action_vit_fakultas" sequence="80"/>
    </data>
</odoo>