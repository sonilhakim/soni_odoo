<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_rekap_fakultas_tree" model="ir.ui.view">
            <field name="name">vit_rekap_fakultas_tree</field>
            <field name="model">vit.rekap_fakultas</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Rekap fakultas">
                    <field name="name" />
                    <field name="date" />
                    <field name="nip_dekan" />
                    <field name="state" />
                    <field name="institusi_id" />
                    <field name="fakultas_id" />
                    <field name="dekan_id" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_rekap_fakultas_form" model="ir.ui.view">
            <field name="name">vit_rekap_fakultas_form</field>
            <field name="model">vit.rekap_fakultas</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Rekap fakultas">
                    <header>
                        <button string="Confirm" type="object" name="action_confirm" states="draft" />
                        <button string="Mark as Done" type="object" name="action_done" states="open" />
                        <button string="Reset to Draft" type="object" name="action_draft" states="open,done" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Rekap fakultas Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="date" />
                                <field name="nip_dekan" />
                            </group>
                            <group>
                                <field name="institusi_id" />
                                <field name="fakultas_id" />
                                <field name="dekan_id" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Line">
                                <field name="line_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_rekap_fakultas_search" model="ir.ui.view">
            <field name="name">vit_rekap_fakultas</field>
            <field name="model">vit.rekap_fakultas</field>
            <field name="arch" type="xml">
                <search string="Rekap fakultas">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Date" name="filter_by_date" domain="[('date','=','')]" />
                    <filter string="Nip dekan" name="filter_by_nip_dekan" domain="[('nip_dekan','=','')]" />
                    <filter string="State" name="filter_by_state" domain="[('state','=','')]" />
                    <field name="name" select="True"/>
                    <field name="date" select="True"/>
                    <field name="nip_dekan" select="True"/>
                    <field name="state" select="True"/>
                    <field name="institusi_id" select="True"/>
                    <field name="fakultas_id" select="True"/>
                    <field name="dekan_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Institusi" domain="[]" name="group_by_institusi_id" context="{'group_by':'institusi_id'}"/>
                        <filter string="Fakultas" domain="[]" name="group_by_fakultas_id" context="{'group_by':'fakultas_id'}"/>
                        <filter string="Dekan" domain="[]" name="group_by_dekan_id" context="{'group_by':'dekan_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_rekap_fakultas_kanban" model="ir.ui.view" >
            <field name="name">vit_rekap_fakultas</field>
            <field name="model">vit.rekap_fakultas</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="date" />
                    <field name="nip_dekan" />
                    <field name="state" />
                    <field name="institusi_id" />
                    <field name="fakultas_id" />
                    <field name="dekan_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Institusi</span> <field name="institusi_id"></field>
                                        </li>


                                        <li>
                                            <span class="text-muted">Fakultas</span> <field name="fakultas_id"></field>
                                        </li>


                                        <li>
                                            <span class="text-muted">Dekan</span> <field name="dekan_id"></field>
                                        </li>

                                        <li>
                                            <span class="text-muted">Date</span> <field name="date"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <record id="view_vit_rekap_fakultas_cal" model="ir.ui.view">
            <field name="name">vit_rekap_fakultas_cal</field>
            <field name="model">vit.rekap_fakultas</field>
            <field name="arch" type="xml">
                <calendar string="Rekap fakultas" date_start="date">
                    <field name="name" />
                </calendar>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_rekap_fakultas_graph" model="ir.ui.view">
            <field name="name">vit_rekap_fakultas</field>
            <field name="model">vit.rekap_fakultas</field>
            <field name="arch" type="xml">
                <graph string="Rekap fakultas" type="bar">
                    <field name="institusi_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_rekap_fakultas" model="ir.actions.act_window">
            <!-- <field name="name">Rekap fakultas</field> -->
            <field name="name">Modul Permintaan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.rekap_fakultas</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form,calendar,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Rekap fakultas
                </p><p>
                Click the Create button to add a new Rekap fakultas
                </p>
            </field>
        </record>

        <!-- <menuitem id="menu_vit_rekap_fakultas" name="Rekap fakultas" parent="vit_bkd_sub_menu" action="action_vit_rekap_fakultas" sequence="230"/> -->
        <menuitem id="menu_vit_rekap_fakultas" name="Modul Permintaan" parent="vit_bkd_sub_menu" action="action_vit_rekap_fakultas" sequence="230"/>
    </data>
</odoo>