<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_rekap_perguruan_tinggi_tree" model="ir.ui.view">
            <field name="name">vit_rekap_perguruan_tinggi_tree</field>
            <field name="model">vit.rekap_perguruan_tinggi</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Rekap perguruan tinggi">
                    <field name="name" />
                    <field name="date" />
                    <field name="nip_rektor" />
                    <field name="alamat_perguruan_tinggi" />
                    <field name="state" />
                    <field name="institusi_id" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_rekap_perguruan_tinggi_form" model="ir.ui.view">
            <field name="name">vit_rekap_perguruan_tinggi_form</field>
            <field name="model">vit.rekap_perguruan_tinggi</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Rekap perguruan tinggi">
                    <header>
                        <button string="Confirm" type="object" name="action_confirm" states="draft" />
                        <button string="Mark as Done" type="object" name="action_done" states="open" />
                        <button string="Reset to Draft" type="object" name="action_draft" states="open,done" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Rekap perguruan tinggi Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="date" />
                                <field name="nip_rektor" />
                                <field name="alamat_perguruan_tinggi" />
                            </group>
                            <group>
                                <field name="institusi_id" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Line">
                                <field name="line_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_rekap_perguruan_tinggi_search" model="ir.ui.view">
            <field name="name">vit_rekap_perguruan_tinggi</field>
            <field name="model">vit.rekap_perguruan_tinggi</field>
            <field name="arch" type="xml">
                <search string="Rekap perguruan tinggi">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Date" name="filter_by_date" domain="[('date','=','')]" />
                    <filter string="Nip rektor" name="filter_by_nip_rektor" domain="[('nip_rektor','=','')]" />
                    <filter string="Alamat perguruan tinggi" name="filter_by_alamat_perguruan_tinggi" domain="[('alamat_perguruan_tinggi','=','')]" />
                    <filter string="State" name="filter_by_state" domain="[('state','=','')]" />
                    <field name="name" select="True"/>
                    <field name="date" select="True"/>
                    <field name="nip_rektor" select="True"/>
                    <field name="alamat_perguruan_tinggi" select="True"/>
                    <field name="state" select="True"/>
                    <field name="institusi_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Institusi" domain="[]" name="group_by_institusi_id" context="{'group_by':'institusi_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_rekap_perguruan_tinggi_kanban" model="ir.ui.view" >
            <field name="name">vit_rekap_perguruan_tinggi</field>
            <field name="model">vit.rekap_perguruan_tinggi</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="date" />
                    <field name="nip_rektor" />
                    <field name="alamat_perguruan_tinggi" />
                    <field name="state" />
                    <field name="institusi_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Institusi</span> <field name="institusi_id"></field>
                                        </li>

                                        <li>
                                            <span class="text-muted">Date</span> <field name="date"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <record id="view_vit_rekap_perguruan_tinggi_cal" model="ir.ui.view">
            <field name="name">vit_rekap_perguruan_tinggi_cal</field>
            <field name="model">vit.rekap_perguruan_tinggi</field>
            <field name="arch" type="xml">
                <calendar string="Rekap perguruan tinggi" date_start="date">
                    <field name="name" />
                </calendar>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_rekap_perguruan_tinggi_graph" model="ir.ui.view">
            <field name="name">vit_rekap_perguruan_tinggi</field>
            <field name="model">vit.rekap_perguruan_tinggi</field>
            <field name="arch" type="xml">
                <graph string="Rekap perguruan tinggi" type="bar">
                    <field name="institusi_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_rekap_perguruan_tinggi" model="ir.actions.act_window">
            <field name="name">Rekap perguruan tinggi</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.rekap_perguruan_tinggi</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form,calendar,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Rekap perguruan tinggi
                </p><p>
                Click the Create button to add a new Rekap perguruan tinggi
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_rekap_perguruan_tinggi" name="Rekap perguruan tinggi" parent="vit_bkd_sub_menu" action="action_vit_rekap_perguruan_tinggi" sequence="250"/>
    </data>
</odoo>