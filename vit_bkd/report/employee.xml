                            <td>Golongan</td>
                        </tr>
                    </thead>
                    <tbody class="asesor2_id_tbody">
                        <tr t-foreach="doc.asesor2_id" t-as="line">
                            <td><span t-field="line._name" /></td>
                            <td><span t-field="line._inherit" /></td>
                            <td><span t-field="line.nomor_sertifikat" /></td>
                            <td><span t-field="line.nip" /></td>
                            <td><span t-field="line.nidn" /></td>
                            <td><span t-field="line.s1" /></td>
                            <td><span t-field="line.s2" /></td>
                            <td><span t-field="line.s3" /></td>
                            <td><span t-field="line.s1_ijasah" /></td>
                            <td><span t-field="line.s2_ijasah" /></td>
                            <td><span t-field="line.s3_ijasah" /></td>
                            <td><span t-field="line.s1_ijasah_filename" /></td>
                            <td><span t-field="line.s2_ijasah_filename" /></td>
                            <td><span t-field="line.s3_ijasah_filename" /></td>
                            <td><span t-field="line.bidang_ilmu" /></td>
                            <td><span t-field="line.ktp" /></td>
                            <td><span t-field="line.ktp_filename" /></td>
                            <td><span t-field="line.status_dosen_id" /></td>
                            <td><span t-field="line.fakultas_id" /></td>
                            <td><span t-field="line.jurusan_id" /></td>
                            <td><span t-field="line.program_studi_id" /></td>
                            <td><span t-field="line.jabatan_fungsional_id" /></td>
                            <td><span t-field="line.golongan_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_bkd.hr_employee_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_bkd.hr_employee_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>