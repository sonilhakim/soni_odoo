<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_kesimpulan_kinerja_dosen_line_menu" string="Vit - Kesimpulan kinerja dosen line"
         model="vit.kesimpulan_kinerja_dosen_line" report_type="qweb-pdf" 
         file="vit.kesimpulan_kinerja_dosen_line"  name="vit_bkd.vit_kesimpulan_kinerja_dosen_line_report" />

        <!-- document template -->
        <template id="vit_bkd.vit_kesimpulan_kinerja_dosen_line_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Kesimpulan kinerja dosen line: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Syarat</strong>
                            <p class="m-0" t-field="doc.syarat" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Kinerja</strong>
                            <p class="m-0" t-field="doc.kinerja" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Kesimpulan</strong>
                            <p class="m-0" t-field="doc.kesimpulan" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Kesimpulan</strong>
                            <p class="m-0" t-field="doc.kesimpulan_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_bkd.vit_kesimpulan_kinerja_dosen_line_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_bkd.vit_kesimpulan_kinerja_dosen_line_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>