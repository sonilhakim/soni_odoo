                    <tbody class="kinerja_kewajiban_khusus_ids_tbody">
                        <tr t-foreach="doc.kinerja_kewajiban_khusus_ids" t-as="line">
                            <td><span t-field="line.name" /></td>
                            <td><span t-field="line.uraian_jenis_kegiatan" /></td>
                            <td><span t-field="line.bukti_penugasan" /></td>
                            <td><span t-field="line.file_bukti_penugasan" /></td>
                            <td><span t-field="line.file_bukti_penugasan_filename" /></td>
                            <td><span t-field="line.beban_sks" /></td>
                            <td><span t-field="line.masa_penugasan" /></td>
                            <td><span t-field="line.bukti_dokumen" /></td>
                            <td><span t-field="line.file_bukti_dokumen" /></td>
                            <td><span t-field="line.file_bukti_dokumen_filename" /></td>
                            <td><span t-field="line.kinerja_sks" /></td>
                            <td><span t-field="line.kinerja_sks_persen" /></td>
                            <td><span t-field="line.bkd_id" /></td>
