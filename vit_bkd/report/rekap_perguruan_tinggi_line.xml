<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_rekap_perguruan_tinggi_line_menu" string="Vit - Rekap perguruan tinggi line"
         model="vit.rekap_perguruan_tinggi_line" report_type="qweb-pdf" 
         file="vit.rekap_perguruan_tinggi_line"  name="vit_bkd.vit_rekap_perguruan_tinggi_line_report" />

        <!-- document template -->
        <template id="vit_bkd.vit_rekap_perguruan_tinggi_line_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Rekap perguruan tinggi line: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>No sertifikat</strong>
                            <p class="m-0" t-field="doc.no_sertifikat" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Nama dosen</strong>
                            <p class="m-0" t-field="doc.nama_dosen" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Semester gasal pd</strong>
                            <p class="m-0" t-field="doc.semester_gasal_pd" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Semester gasal pl</strong>
                            <p class="m-0" t-field="doc.semester_gasal_pl" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Semester gasal pg</strong>
                            <p class="m-0" t-field="doc.semester_gasal_pg" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Semester gasal pk</strong>
                            <p class="m-0" t-field="doc.semester_gasal_pk" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Semester genap pd</strong>
                            <p class="m-0" t-field="doc.semester_genap_pd" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Semester genap pl</strong>
                            <p class="m-0" t-field="doc.semester_genap_pl" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Semester genap pg</strong>
                            <p class="m-0" t-field="doc.semester_genap_pg" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Semester genap pk</strong>
                            <p class="m-0" t-field="doc.semester_genap_pk" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Kewajiban khusus prof</strong>
                            <p class="m-0" t-field="doc.kewajiban_khusus_prof" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Status</strong>
                            <p class="m-0" t-field="doc.status" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Kesimpulan</strong>
                            <p class="m-0" t-field="doc.kesimpulan" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Rekap perguruan tinggi</strong>
                            <p class="m-0" t-field="doc.rekap_perguruan_tinggi_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_bkd.vit_rekap_perguruan_tinggi_line_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_bkd.vit_rekap_perguruan_tinggi_line_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>