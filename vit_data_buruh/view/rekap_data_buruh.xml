            <field name="model">vit.rekap_data_buruh</field>
            <field name="arch" type="xml">
                <graph string="Rekap data buruh" type="bar">
                </graph>
            </field>
        </record> -->
        <!-- action window -->
        <record id="action_rekap_data_buruh" model="ir.actions.act_window">
            <field name="name">Rekap Buruh</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.rekap_data_buruh</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Rekap Buruh
                </p><p>
                Click the Create button to add a new Rekap Buruh
                </p>
            </field>
        </record>

        <menuitem id="menu_rekap_data_buruh" name="Rekap Buruh" parent="vit_data_buruh_sub_menu" action="action_rekap_data_buruh" sequence="50"/>
    </data>
</odoo>