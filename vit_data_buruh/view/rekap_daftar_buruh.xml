        <!-- form view -->
        <record id="view_vit_rekap_daftar_buruh_form" model="ir.ui.view">
            <field name="name">vit_rekap_daftar_buruh_form</field>
            <field name="model">vit.rekap_daftar_buruh</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Rekap daftar buruh">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="buruh_id" class="oe_edit_only" string="Nama Buruh"/>
                            <h1><field name="buruh_id"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="upah" />
                                <field name="potongan" />
                                <field name="total" />
                                <field name="note" />
                            </group>
                            <group>
                                <field name="rekap_data_id" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_rekap_daftar_buruh_search" model="ir.ui.view">
            <field name="name">vit_rekap_daftar_buruh</field>
            <field name="model">vit.rekap_daftar_buruh</field>
            <field name="arch" type="xml">
                <search string="Rekap daftar buruh">

                    <filter string="Upah" name="filter_by_upah" domain="[('upah','=','')]" />
                    <filter string="Potongan" name="filter_by_potongan" domain="[('potongan','=','')]" />
                    <filter string="Total" name="filter_by_total" domain="[('total','=','')]" />
                    <filter string="Note" name="filter_by_note" domain="[('note','=','')]" />
                    <field name="upah" select="True"/>
                    <field name="potongan" select="True"/>
                    <field name="total" select="True"/>
                    <field name="note" select="True"/>
                    <field name="buruh_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Rekap data" domain="[]" name="group_by_rekap_data_id" context="{'group_by':'rekap_data_id'}"/>
                        <filter string="Buruh" domain="[]" name="group_by_buruh_id" context="{'group_by':'buruh_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_rekap_daftar_buruh_kanban" model="ir.ui.view" >
            <field name="name">vit_rekap_daftar_buruh</field>
            <field name="model">vit.rekap_daftar_buruh</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="buruh_id" />
                    <field name="upah" />
                    <field name="potongan" />
                    <field name="total" />
                    <field name="note" />
                    <field name="rekap_data_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Rekap data</span> <field name="rekap_data_id"></field>
                                        </li>


                                        <li>
                                            <span class="text-muted">Buruh</span> <field name="buruh_id"></field>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
