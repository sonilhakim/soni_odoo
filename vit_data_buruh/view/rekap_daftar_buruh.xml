<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_rekap_daftar_buruh_tree" model="ir.ui.view">
            <field name="name">vit_rekap_daftar_buruh_tree</field>
            <field name="model">vit.rekap_daftar_buruh</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Rekap daftar buruh">
                    <field name="buruh_id" />
                    <field name="upah" />
                    <field name="potongan" />
                    <field name="total" />
                    <field name="note" />
                    <field name="rekap_data_id" />
                </tree>
            </field>
        </record>
        <!-- pivot view -->
        <!-- <record id="view_vit_rekap_daftar_buruh_pivot" model="ir.ui.view">
            <field name="name">vit_rekap_daftar_buruh_tree</field>
