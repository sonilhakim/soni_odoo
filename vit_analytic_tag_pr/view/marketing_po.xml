<?xml version="1.0" ?>
<odoo>
    <data>

        <!-- form product template -->
        <record id="vit_product_normal_form_analytic_tag" model="ir.ui.view">
            <field name="name">product.template.form.analytic.tag</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml"> 
                <xpath expr="//field[@name='inquery_id']" position="after">
                    <field name="analytic_tag_id"/>
                </xpath>
            </field>
        </record>

        <!-- form product product -->
        <record id="product_variant_easy_edit_view_analytic_tag" model="ir.ui.view">
            <field name="name">product.product.view.form.easy.analytic.tag</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_code']" position="after">
                    <field name="analytic_tag_id"/>
                </xpath>
            </field>
        </record>
        
   </data>
</odoo>