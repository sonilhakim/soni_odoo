<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_boq_sph_garmen_line_tree" model="ir.ui.view">
            <field name="name">vit_boq_sph_garmen_line_tree</field>
            <field name="model">vit.boq_sph_garmen_line</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="BOQ">
                    <field name="name"/>
                    <field name="bahan"/>
                    <field name="qty"/>
                    <!-- <field name="qty_or"/> -->
                    <field name="uom_id" options="{'no_create': True}"/>
                    <field name="price"/>
                    <field name="tax_val" string="Pajak"/>
                    <field name="total_price"/>
                    <field name="currency_id" invisible="1"/>
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_boq_sph_garmen_line_form" model="ir.ui.view">
            <field name="name">vit_boq_sph_garmen_line_form</field>
            <field name="model">vit.boq_sph_garmen_line</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Boq sph_garmen line">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Item"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="bahan"/>
                                <field name="qty" />                                
                                <!-- <field name="qty_or" readonly="1"/> -->
                                <field name="uom_id" string="Satuan"/>
                            </group>
                            <group>
                                <field name="price"/>
                                <label string="Pajak" for="tax_id"/>
                                <div>
                                    <field name="tax_id" options="{'no_create': True}" style="width:25%; margin-right:33px;"/><field name="tax_val" style="width:55%;"/>
                                </div>
                                <field name="total_price"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Sample">
                                <field name="sample_ids">
                                    <tree string="Sample" readonly="1">
                                        <field name="name"/>
                                        <field name="product_id" options="{'no_create': True}"/>
                                        <field name="product_name"/>
                                        <field name="size"/>
                                        <!-- <field name="qty"/>
                                        <field name="qty_or" readonly="1"/> -->
                                        <!-- <field name="uom_id" options="{'no_create': True}"/> -->
                                        <field name="kain"/>
                                        <!-- <field name="design" invisible="1"/> -->
                                        <!-- <field name="gbr" widget="image"  class="oe_avatar" /> -->
                                    </tree>
                                    <form string="Sample">
                                        <header>
                                        </header>
                                        <sheet>
                                            <div class="oe_title">
                                                <label for="name" class="oe_edit_only" string="Style"/>
                                                <h1><field name="name"/></h1>
                                            </div>
                                            <group>
                                                <group>
                                                    <field name="product_id" domain="[('categ_id.name','=','Barang Jadi Uniform')]" options="{'no_create': True}" string="Product Sample"/>
                                                    <field name="product_name"/>
                                                </group>
                                                <group>
                                                    <field name="size"/>
                                                    <field name="kain"/>
                                                </group>
                                            </group>                        
                                            <notebook>
                                                <page string="Design">
                                                    <field name="doc_line_ids">
                                                        <tree string="Design" editable="bottom">
                                                            <field name="doc_name" invisible="1"/>
                                                            <field name="doc" widget="binary" filename="doc_name" required="1"/>
                                                            <field name="date"/>
                                                            <field name="name"/>
                                                        </tree>
                                                    </field>
                                                </page>
                                            </notebook>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
