<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_jo_sample_wizard" model="ir.ui.view">
            <field name="name">jo.sample.wizard</field>
            <field name="model">jo.sample.wizard</field>
            <field name="arch" type="xml">
                <form string="Sample Approval">
                    <header>                        
                        <!-- <button string="Add Line" type="object" name="_get_default_line"/> -->
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="requester"/>
                                <field name="recipient" string="Penerima"/>
                            </group>
                            <group>
                                <field name="due_date" string="Target Kirim"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Detail">
                                <field name="josamline_ids">
                                    <tree string="Detail" editable="bottom">
                                        <field name="name"/>
                                        <field name="qty" required="1"/>
                                        <field name="kain" invisible="1"/>
                                        <field name="uom" invisible="1"/>
                                        <field name="size" required="1"/>
                                        <field name="desc" invisible="1" />
                                        <!-- <field name="routing_id" invisible="1"/> -->
                                        <!-- <field name="xsample_id" invisible="1"/> -->
                                        <field name="boq_jo_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="create_sample_approval" string="Generate Sample Approval" type="object" class="btn-primary"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
               </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="show_sample_approval_wizard">
            <field name="name">Sample Approval</field>
            <field name="res_model">jo.sample.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
           
</odoo>