<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_boq_po_md_tree" model="ir.ui.view">
            <field name="name">vit_boq_po_md_tree</field>
            <field name="model">vit.boq_po_garmen_line</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Style" create="false">
                    <field name="name"/>
                    <field name="product_name"/>
                    <field name="po_id" string="No. OR"/>
                    <!-- <field name="state"/> -->
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_boq_po_md_form" model="ir.ui.view">
            <field name="name">vit_boq_po_md_form</field>
            <field name="model">vit.boq_po_garmen_line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Style" create="false">
                    <header>
                        <button name="%(vit_merchandise_garment.show_create_worksheet_wizard)d" string="Generate Worksheet" type="action" class="oe_highlight"/>
                        <!-- <field name="state" widget="statusbar"/> -->
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_worksheet"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-book"
                                attrs="{'invisible': [('ws_count', '=', 0)]}">
                                <field name="ws_count" widget="statinfo" string="Worksheet"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="product_id" class="oe_edit_only" string="Style :"/>
                            <h1><field name="product_id" readonly="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="product_name" readonly="1"/>
                                <field name="routing_id" readonly="1"/>
                                <field name="lot_selected" invisible="1"/>
                            </group>
                            <group>
                                <field name="po_id" string="No. OR" readonly="1"/>
                                <!-- <field name="pengukuran_id" readonly="1" /> -->
                                <field name="is_po_payung" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Material List">
                                <field name="material_ids">
                                    <tree string="Material List" editable="bottom">
                                        <field name="acc_no" />
                                        <!-- <field name="material" context="{'default_type': 'product'}" domain="[('categ_id.name','!=','Barang Jadi Uniform')]" options="{'no_create': True}" /> -->
                                        <field name="material" context="{'default_type': 'product'}" options="{'no_create': True}" />
                                        <field name="spec" />
                                        <field name="colour" />
                                        <field name="qty" invisible="1"/>
                                        <field name="cons" />
                                        <field name="uom" options="{'no_create': True}"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_boq_po_md_search" model="ir.ui.view">
            <field name="name">vit_boq_po_md_search</field>
            <field name="model">vit.boq_po_garmen_line</field>
            <field name="arch" type="xml">
                <search string="Style List">
                    <field name="product_id" string="Style" select="True"/>
                    <field name="po_id" string="No. OR" select="True"/>
                    <field name="product_name" string="Product Description" select="True"/>
                    <group string="Group By..">
                        <filter string="No. OR" domain="[]" name="group_by_po_id" context="{'group_by':'po_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_boq_po_md" model="ir.actions.act_window">
            <field name="name">Style</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.boq_po_garmen_line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field eval="False" name="view_id"/>
            <field name="domain">[('product_id','!=',False),('is_po_payung','=',True)]</field>
            <field name="context">{"search_default_group_by_po_id":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Menu Style terisi setelah Product Style terbentuk.
                </p><p>
                Product Style terbentuk setelah klik tombol Create Product Style pada OR.
                </p>
            </field>
        </record>

        <record id="action_view_vit_boq_po_md_tree_view1" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_vit_boq_po_md_tree"/>
            <field name="act_window_id" ref="action_vit_boq_po_md"/>
        </record>

        <record id="action_view_vit_boq_po_md_tree_view2" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_vit_boq_po_md_form"/>
            <field name="act_window_id" ref="action_vit_boq_po_md"/>
        </record>

        <menuitem id="menu_vit_boq_po_md" name="Style List" parent="vit_merchandise_garment.submenu_merchandise" action="action_vit_boq_po_md" sequence="50"/>
    </data>
</odoo>