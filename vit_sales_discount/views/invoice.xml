<odoo>
    <data>
        <!-- invoice         -->
        <record id="views_discount_invoice_form" model="ir.ui.view">
            <field name="name">views_discount_invoice_form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form" />
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='discount']" position="after">
                    <field name="discount_val" string="Disc (Rp)"/>
                </xpath>

                <xpath expr="/form/sheet/notebook/page/group/field[@name='amount_untaxed']" position="before">
                    <field name="amount_undisc" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                    <field name="amount_disc" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                </xpath>

                <xpath position="after" expr="//group[@class='oe_subtotal_footer oe_right']">
                    <group class="oe_inline col-2">
                        <field name="discount_global_val" class="oe_inline" attrs="{'invisible': [('discount_global_persen', '!=', 0.0)]}"/>
                        <field name="discount_global_persen" class="oe_inline" attrs="{'invisible': [('discount_global_val', '!=', 0.0)]}"/>
                    </group>
                </xpath>

                <field name="partner_bank_id" position="after">
                    <field name="global_discount_account"/>
                </field>

                <xpath expr="//field[@name='team_id']" position="after">
                    <field name="cara_bayar" />
                </xpath>
            </field>
        </record>

    </data>
</odoo>