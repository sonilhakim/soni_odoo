<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Adds all assets in Odoo -->
    <template id="assets_backend" name="vit_late_overtime_attendance assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
    <!--These links will be called when loading your Odoo -->
            <link rel="stylesheet" href="/vit_late_overtime_attendance/static/src/css/vit_late_overtime_attendance.css"/>
        </xpath>
    </template>

    <!-- views -->

    <record id="vit_attendance_tree" model="ir.ui.view">
        <field name="name">hr.attendance.tree</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='check_in']" position="after">
                <field name="late" class="rallign"/>
            </xpath>
            <xpath expr="//field[@name='check_out']" position="after">
                <field name="overt" class="rallign"/>
            </xpath>
        </field>
    </record>
   
    <record id="vit_attendance_view_form" model="ir.ui.view">
        <field name="name">vit.attendance.form</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='check_out']" position="after">
                <field name="late"/>
                <field name="overt"/>
                <field name="late_hours" invisible="1"/>
                <field name="overtime_hours" invisible="1"/>
                <field name="tgl" invisible="1"/>
                <field name="hari" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
    