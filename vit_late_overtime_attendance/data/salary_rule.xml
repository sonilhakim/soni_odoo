        <record id="hr_rule_overtime1h" model="hr.salary.rule">
            <field name="name">Lembur 1 Jam</field>
            <field name="sequence" eval="50"/>
            <field name="code">Overtime1h</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="condition_select">python</field>
            <field name="condition_python">result = worked_days.Overtime1h.number_of_days > 0</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = worked_days.Overtime1h.number_of_days * contract.t_lembur_1h</field>
