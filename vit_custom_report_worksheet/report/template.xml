<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="external_layout_standard_worksheet">
        <div class="article o_report_layout_standard"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-call="web.address_layout"/>
            <t t-raw="0"/>
        </div>
        <!-- <div class="footer o_standard_footer">
            <div class="text-center" style="border-top: 1px solid black;">
                <div t-if="report_type == 'pdf'">
                    Halaman: <span class="page"/> / <span class="topage"/>
                </div>
            </div>
        </div> -->
    </template>

    <!-- Public api: layout to t-call from reports -->

    <template id="external_layout_worksheet">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        <t t-call="vit_custom_report_worksheet.external_layout_standard_worksheet">
            <t t-raw="0"/>                
        </t>

    </template>

    <record id="paperformat_worksheet" model="report.paperformat">
        <field name="name">A4 worksheet</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">10</field>
        <field name="dpi">90</field>
    </record>

</odoo>