<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_mkt_pr_wizard" model="ir.ui.view">
            <field name="name">mkt.pr.wizard</field>
            <field name="model">mkt.pr.wizard</field>
            <field name="arch" type="xml">
                <form string="Create PR">
                    <sheet>
                        <group>
                            <group>
                                <field name="date" required="1"/>
                            </group>
                            <group>
                            </group>
                        </group>  
                    </sheet>
                    <footer>
                        <button name="request_rawmate" string="Create Purchase Request" type="object" class="btn-primary"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
               </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="show_mkt_pr_wizard">
            <field name="name">Create Purchase Request</field>
            <field name="res_model">mkt.pr.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
           
</odoo>