<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_request_detail_tree" model="ir.ui.view">
            <field name="name">vit_request_detail_tree</field>
            <field name="model">vit.request_detail</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Request Detail">
                    <field name="name" string="Style"/>
                    <!-- <field name="desain"/> -->
                    <field name="size"/>
                    <field name="kain"/>
                    <field name="qty" sum="total Qty"/>
                    <field name="uom"/>
                    <!-- <field name="desc" string="Keterangan"/> -->
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_request_detail_form" model="ir.ui.view">
            <field name="name">vit_request_detail_form</field>
            <field name="model">vit.request_detail</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Request Detail">
                    <header>
                        <button string="Confirm" type="object" name="action_confirm" groups="vit_marketing_request.group_marketing_request_desain" states="draft" />
                        <button string="Create Product" type="object" name="create_product_sample" attrs="{'invisible':['|',('state','!=','open'),('product_id','!=',False)]}" confirm="Anda yakin akan membuat product sample ?" groups="vit_marketing_request.group_marketing_request_desain"/>
                        <button name="%(vit_marketing_request.show_marketing_request_wizard)d" string="Create MO Sample" type="action" class="oe_highlight" states="created,mo" />
                        <button string="Approved" type="object" name="action_approved" attrs="{'invisible':['|',('state','not in',['open','done_mo']),('product_id','=',False)]}" confirm="Anda yakin Request Detail akan di Approve ?"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,approved"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Style"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="size" required="1"/>
                                <field name="qty" required="1"/>
                                <field name="uom" options="{'no_create': True}" required="1"/>
                                <field name="kain" required="1"/>
                            </group>
                            <group>
                                <!-- <field name="routing_id" options="{'no_create': True}"/> -->
                                <field name="desc" string="Product Description"/>
                                <field name="product_id" domain="[('categ_id.name','in',['Barang Sample', 'Barang Jadi Uniform'])]" options="{'no_create': True}" string="Product Sample"/>
                                <field name="bom_id" readonly="1" attrs="{'invisible':[('bom_id','=',False)]}" string="BoM Sample"/>
                            </group>
                        </group>                        
                        <notebook>
                            <page string="Material List">
                                <field name="material_ids">
                                    <tree string="Material List" editable="bottom">
                                        <field name="material" context="{'default_type': 'product'}" domain="[('categ_id.name','!=','Barang Jadi Uniform')]" options="{'no_create': True}" required="1"/>
                                        <field name="spec" />
                                        <field name="colour" />
                                        <field name="qty" />
                                        <field name="uom" options="{'no_create': True}"/>
                                        <!-- <field name="cons" /> -->
                                    </tree>
                                </field>
                            </page>
                            <page string="Design">
                                <field name="doc_line_ids">
                                    <tree string="Design" editable="bottom">
                                        <field name="doc_name" invisible="1"/>
                                        <field name="doc" widget="binary" filename="doc_name" required="1"/>
                                        <field name="date"/>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Manufacturing Order Sample" attrs="{'invisible':[('state','!=',('mo'))]}">
                                <field name="mo_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_request_detail_search" model="ir.ui.view">
            <field name="name">vit_request_detail_search</field>
            <field name="model">vit.request_detail</field>
            <field name="arch" type="xml">
                <search string="Request Line">

                    <!-- <filter string="Product" name="filter_by_pproduct" domain="[('product_id','=','')]" />
                    <filter string="Desain" name="filter_by_desain" domain="[('desain','=','')]" />
                    <filter string="Kain" name="filter_by_kain" domain="[('kain','=','')]" /> -->
                    <field name="product_id" select="True"/>
                    <field name="kain" select="True"/>
                    <group string="Group By..">
                        <filter string="Product" domain="[]" name="group_by_product_id" context="{'group_by':'product_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_request_detail_kanban" model="ir.ui.view" >
            <field name="name">vit_request_detail_kanban</field>
            <field name="model">vit.request_detail</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="product_id" string="Sample"/>
                    <field name="size"/>
                    <field name="qty"/>
                    <field name="kain"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            Field1: <field name="name"></field>
                                        </li>
                                        <li>
                                            Field2: <field name="product_id"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_vit_request_detail_graph" model="ir.ui.view">
            <field name="name">vit_request_detail_graph</field>
            <field name="model">vit.request_detail</field>
            <field name="arch" type="xml">
                <graph string="Detail" type="bar">
                    <field name="product_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_request_detail" model="ir.actions.act_window">
            <field name="name">Request Detail</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.request_detail</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Request Detail
                </p><p>
                Click the Create button to add a new Request Detail
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_request_detail" name="Request Detail" parent="vit_marketing_request.vit_marketing_request_sub_menu" action="action_vit_request_detail" sequence="30"/>
    </data>
</odoo>