<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_penetapan_angka_kredit_tree" model="ir.ui.view">
            <field name="name">vit_penetapan_angka_kredit_tree</field>
            <field name="model">vit.penetapan_angka_kredit</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Penetapan Angka Kredit">
                    <field name="name" />
                    <field name="kegiatan" />
                    <field name="date" />
                    <field name="state" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_penetapan_angka_kredit_form" model="ir.ui.view">
            <field name="name">vit_penetapan_angka_kredit_form</field>
            <field name="model">vit.penetapan_angka_kredit</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Penetapan Angka Kredit">
                    <header>
                        <button string="Confirm" type="object" name="action_confirm" states="draft" />
                        <button string="Validasi" type="object" name="action_done" states="open" />
                        <button string="Reset to Draft" type="object" name="action_draft" states="open,done" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Penetapan AK"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="date" />
                            </group>
                            <group>
                                <field name="kegiatan" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Detail">
                                <field name="penetapan_detail_ids">
                                    <tree string="Detail" editable="bottom">
                                        <field name="employee_id" />
                                        <field name="date_penetapan" />
                                        <field name="angka_kredit" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_penetapan_angka_kredit_search" model="ir.ui.view">
            <field name="name">vit_penetapan_angka_kredit</field>
            <field name="model">vit.penetapan_angka_kredit</field>
            <field name="arch" type="xml">
                <search string="Penetapan Angka Kredit">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="State" name="filter_by_state" domain="[('state','=','')]" />
                    <field name="name" select="True"/>
                    <field name="state" select="True"/>
                    <field name="kegiatan" select="True"/>
                    <group string="Group By..">
                        <filter string="Kegiatan" domain="[]" name="group_by_kegiatan" context="{'group_by':'kegiatan'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_penetapan_angka_kredit_kanban" model="ir.ui.view" >
            <field name="name">vit_penetapan_angka_kredit</field>
            <field name="model">vit.penetapan_angka_kredit</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="state" />
                    <field name="kegiatan" />
                    <field name="date" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Tanggal</span> <field name="date"></field>
                                        </li>


                                        <li>
                                            <span class="text-muted">Kegiatan</span> <field name="kegiatan"></field>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_vit_penetapan_angka_kredit_graph" model="ir.ui.view">
            <field name="name">vit_penetapan_angka_kredit</field>
            <field name="model">vit.penetapan_angka_kredit</field>
            <field name="arch" type="xml">
                <graph string="Penetapan Angka Kredit" type="bar">
                    <field name="kegiatan"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_penetapan_angka_kredit" model="ir.actions.act_window">
            <field name="name">Penetapan Angka Kredit</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.penetapan_angka_kredit</field>
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Penetapan Angka Kredit
                </p><p>
                Click the Create button to add a new Penetapan Angka Kredit
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_penetapan_angka_kredit" name="Penetapan Angka Kredit" parent="vit_laporan.vit_laporan_sub_menu" action="action_vit_penetapan_angka_kredit" sequence="320"/>
    </data>
</odoo>