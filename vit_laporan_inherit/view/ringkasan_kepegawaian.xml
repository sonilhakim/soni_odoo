<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_ringkasan_kepegawaian_tree" model="ir.ui.view">
            <field name="name">vit_ringkasan_kepegawaian_tree</field>
            <field name="model">vit.ringkasan_kepegawaian</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Ringkasan Kepegawaian">
                    <field name="name" />
                    <field name="fakultas_id" />
                    <field name="matra_id" />
                    <field name="golongan_id" />
                    <field name="jabatan_id" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_ringkasan_kepegawaian_form" model="ir.ui.view">
            <field name="name">vit_ringkasan_kepegawaian_form</field>
            <field name="model">vit.ringkasan_kepegawaian</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Ringkasan Kepegawaian">
                    <header>
                        <button string="Confirm" type="object" name="action_confirm" states="draft" />
                        <button string="Reload" type="object" name="action_reload" states="draft" />
                        <button string="Validasi" type="object" name="action_done" states="open" />
                        <button string="Reset to Draft" type="object" name="action_draft" states="open,done" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Ringkasan Kepegawaian"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="fakultas_id" />
                                <field name="matra_id" />
                            </group>
                            <group>
                                
                                <field name="golongan_id" />
                                <field name="jabatan_id" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Detail">
                                <field name="ringkasan_detail_ids">
                                    <tree string="Detail" editable="bottom">
                                        <field name="name" />
                                        <field name="nip" />
                                        <field name="status_pegawai" />
                                        <field name="country_id" />
                                        <field name="pendidikan" />
                                        <field name="gaji" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_ringkasan_kepegawaian_search" model="ir.ui.view">
            <field name="name">vit_ringkasan_kepegawaian</field>
            <field name="model">vit.ringkasan_kepegawaian</field>
            <field name="arch" type="xml">
                <search string="Ringkasan Kepegawaian">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="State" name="filter_by_state" domain="[('state','=','')]" />
                    <field name="name" select="True"/>
                    <field name="state" select="True"/>
                    <field name="fakultas_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Fakultas" domain="[]" name="group_by_fakultas_id" context="{'group_by':'fakultas_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_ringkasan_kepegawaian_kanban" model="ir.ui.view" >
            <field name="name">vit_ringkasan_kepegawaian</field>
            <field name="model">vit.ringkasan_kepegawaian</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="state" />
                    <field name="fakultas_id" />
                    <field name="matra_id" />
                    <field name="golongan_id" />
                    <field name="jabatan_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>

                                        <li>
                                            <span class="text-muted">Fakultas</span> <field name="fakultas_id"></field>
                                        </li>


                                        <li>
                                            <span class="text-muted">Matra</span> <field name="matra_id"></field>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_vit_ringkasan_kepegawaian_graph" model="ir.ui.view">
            <field name="name">vit_ringkasan_kepegawaian</field>
            <field name="model">vit.ringkasan_kepegawaian</field>
            <field name="arch" type="xml">
                <graph string="Ringkasan Kepegawaian" type="bar">
                    <field name="fakultas_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_ringkasan_kepegawaian" model="ir.actions.act_window">
            <field name="name">Ringkasan Kepegawaian</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.ringkasan_kepegawaian</field>
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Ringkasan Kepegawaian
                </p><p>
                Click the Create button to add a new Ringkasan Kepegawaian
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_ringkasan_kepegawaian" name="Ringkasan Kepegawaian" parent="vit_laporan.vit_laporan_sub_menu" action="action_vit_ringkasan_kepegawaian" sequence="330"/>
    </data>
</odoo>