<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_ppbi_menu" string="Vit - Ppbi"
         model="vit.ppbi" report_type="qweb-pdf" 
         file="vit.ppbi"  name="vit_kantor.vit_ppbi_report" />

        <!-- document template -->
        <template id="vit_kantor.vit_ppbi_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Ppbi: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Kode</strong>
                            <p class="m-0" t-field="doc.kode" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Pebin</strong>
                            <p class="m-0" t-field="doc.pebin_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Pbi</strong>
                            <p class="m-0" t-field="doc.pbi_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_kantor.vit_ppbi_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_kantor.vit_ppbi_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>