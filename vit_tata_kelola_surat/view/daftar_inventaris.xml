        <record id="view_buku_inventaris_tree" model="ir.ui.view">
            <field name="name">vit.buku.inventaris.tree</field>
            <field name="model">asset.asset.report</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Transfer">
                    <field name="asset_id" string="Name"/>
                    <field name="name" />
                    <field name="date" />
                    <field name="asset_category_id"  string="Category"/>
                    <field name="depreciation_date" />
                    <field name="depreciation_value" />
                    <field name="installment_nbr" />
                    <field name="installment_value" />
                    <field name="gross_value" />
                    <field name="posted_value"/>
                    <field name="unposted_value"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

