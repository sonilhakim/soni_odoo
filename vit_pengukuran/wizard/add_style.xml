<odoo>
    <data>

        <record id="vit_add_style_wizard_view" model="ir.ui.view">
            <field name="name">vit.product.style.wizard.form</field>
            <field name="model">vit.product.style.wizard</field>
            <field name="arch" type="xml">
                <form string="Add Style">
                    <group>
                        <group>
                            <field name="pengukuran_header_id" options="{'no_create':True}" required="1" domain="[('state','=','confirmed')]" groups="vit_pengukuran.group_edp_pengukuran"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <group>
                        <field name="style_ids" widget="many2many_tags" options="{'no_create':True}" required="1" domain="[('pengukuran_header_id','=',pengukuran_header_id),('karyawan_id','=',False)]" attrs="{'invisible':[('pengukuran_header_id','=',False)]}"/>
                    </group>
                    <p class="oe_grey">
                        Pastikan style yang di add untuk karyawan sudah sesuai !
                    </p>
                    <footer>
                        <button string="Ok" name="add_style" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_vit_add_style_wizard_view"
            multi="True"
            key2="client_action_multi" name="Add Style"
            res_model="vit.product.style.wizard" src_model="vit.pengukuran_karyawan"
            view_mode="form" target="new" view_type="form" />

    </data>
</odoo>