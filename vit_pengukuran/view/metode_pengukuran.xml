<odoo>
    <data>        
        <!-- metode tree -->
        <record id="view_vit_metode_pengukuran_tree" model="ir.ui.view">
            <field name="name">vit.metode.pengukuran.tree</field>
            <field name="model">vit.metode.pengukuran</field>
            <field name="arch" type="xml">
                <tree string="Metode Pengukuran" decoration-muted="not active">
                    <field name="name"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>
        <!-- metode search -->
        <record id="view_vit_metode_pengukuran_search" model="ir.ui.view">
            <field name="name">vit.metode.pengukuran.search</field>
            <field name="model">vit.metode.pengukuran</field>
            <field name="arch" type="xml">
                <search string="Search Metode Pengukuran">
                    <field name="name" filter_domain="[('name','ilike',self)]" string="Allowance"/>
                    <separator/>
                    <filter name="active" string="Active" domain="[('active','=',True)]" help="Show active allowance"/>
                    <filter name="inactive" string="Inactive" domain="[('active','=',False)]" help="Show inactive allowance"/>
                    <group string="Group By">
                    </group>
                </search>
            </field>
        </record>
        <!-- metode form -->
        <record id="view_vit_metode_pengukuran_form" model="ir.ui.view">
            <field name="name">vit.metode.pengukuran.form</field>
            <field name="model">vit.metode.pengukuran</field>
            <field name="arch" type="xml">
                <form string="Metode Pengukuran">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Method Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- metode action -->
        <record id="action_vit_metode_pengukuran_form" model="ir.actions.act_window">
            <field name="name">Metode</field>
            <field name="res_model">vit.metode.pengukuran</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_active': True,}</field>
            <field name="view_id" ref="view_vit_metode_pengukuran_tree"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new Method
              </p>
            </field>
        </record>

        <menuitem id="menu_action_vit_metode_pengukuran_form" name="Metode" parent="vit_master_date_sub_menu" action="action_vit_metode_pengukuran_form" groups="group_edp_pengukuran" sequence="85"/>

    </data>     
</odoo>