<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_data_pengukuran_tree" model="ir.ui.view">
            <field name="name">vit_data_pengukuran_tree</field>
            <field name="model">vit.data_pengukuran</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Syle">
                    <field name="style_id" />
                    <field name="pengukuran_header_id" />
                    <field name="spk_id" />
                    <!-- <field name="spec_type" /> -->
                    <field name="size_ids" widget="many2many_tags"/>
                    <field name="qty" />
                    <field name="state" />
                    <field name="karyawan_id" invisible="1"/>
                    <field name="pengukuran_id" invisible="1"/>
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_data_pengukuran_form" model="ir.ui.view">
            <field name="name">vit_data_pengukuran_form</field>
            <field name="model">vit.data_pengukuran</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Style">
                    <header>
                        <button string="Submit" type="object" name="action_submit" states="draft" groups="vit_pengukuran.group_edp_pengukuran" confirm="Yakin data sudah benar ?"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Product"/>
                            <h1><field name="style_id" options="{'no_create':True}"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="pengukuran_id" options="{'no_create':True}" string="Project" required="1" attrs="{'invisible':[('pengukuran_id','=',False)]}"/>
                                <field name="pengukuran_header_id" options="{'no_create':True}" string="SPK" required="1" attrs="{'invisible':[('pengukuran_header_id','=',False)]}"/>
                                <field name="spk_id" options="{'no_create':True}" required="1" attrs="{'invisible':[('spk_id','=',False)]}"/>
                                <!-- <field name="spec_type" /> -->
                                <field name="qty" />
                            </group>
                            <group>
                                <field name="variant_id" options="{'no_create':True}"/>
                                <field name="size_ids" options="{'no_create':True}" widget="many2many_tags" attrs="{'invisible':[('variant_id','=',False)]}" domain="[('attribute_id','=',variant_id)]"/>
                                <field name="size_id" options="{'no_create':True}" attrs="{'invisible':[('variant_id','=',False)]}" domain="[('attribute_id','=',variant_id)]" invisible="1"/>
                                
                                <field name="karyawan_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Item Pengukuran">
                                <group>
                                    <group>
                                        <field name="template_id" options="{'no_create':True}" domain="[('line_ids','!=',False)]"/>
                                    </group>
                                    <group>
                                        <button name="insert_template" string="Insert Template" type="object" class="oe_highlight" attrs="{'invisible': ['|',('template_id','=',False),('state','!=','draft')]}"/>
                                    </group>
                                </group>
                                <field name="item_ids">
                                    <tree string="Item Pengukuran">
                                        <field name="name" />
                                        <field name="min_value" />
                                        <field name="max_value" />
                                        <field name="size" />
                                        <field name="size_spec_detail_ids" widget="many2many_tags"/>
                                        <field name="data_id" invisible="1"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="name" force_save="1"/>
                                                <field name="min_value" />
                                                <field name="max_value" />
                                                <field name="size" />
                                                <field name="data_id" invisible="1"/>
                                                <field name="variant_id" invisible="1"/>
                                            </group>
                                            <group>
                                                <field name="size_spec_detail_ids">
                                                    <tree string="Spec" editable="bottom" create='false' delete='false'>
                                                        <field name="size_id" options="{'no_create':True}" domain="[('attribute_id','=',parent.variant_id)]" readonly="1" force_save="1"/>
                                                        <field name="size" required="1"/>
                                                    </tree>
                                                </field>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Other Info" invisible="1">
                                <group>
                                    <group>
                                        <field name="divisi_id" options="{'no_create':True}" domain="[('pengukuran_id','=',pengukuran_id)]" required="0"/>
                                        <field name="jabatan_id" options="{'no_create':True}" domain="[('pengukuran_id','=',pengukuran_id)]" required="0"/>
                                    </group>
                                    <group>
                                        <field name="lokasi_id" options="{'no_create':True}" domain="[('pengukuran_id','=',pengukuran_id)]" required="0"/>
                                        <field name="gender" required="0"/>
                                    </group>
                                </group>
                            </page>

                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_data_pengukuran_search" model="ir.ui.view">
            <field name="name">vit_data_pengukuran</field>
            <field name="model">vit.data_pengukuran</field>
            <field name="arch" type="xml">
                <search string="karyawan">
                    <field name="style_id" select="True"/>
                    <field name="pengukuran_id" />
                    <field name="spk_id" />
                    <!-- <field name="spec_type" /> -->
                    <group string="Group By..">
                        <!-- <filter name="group_spec_type" string="Spec Type" domain="[]" context="{'group_by':'spec_type'}"/> -->
                        <filter name="group_spk_id" string="SPK" domain="[]" context="{'group_by':'spk_id'}"/>
                        <filter name="group_state" string="Status" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>


        <!-- action window -->
        <record id="action_vit_data_pengukuran" model="ir.actions.act_window">
            <field name="name">Style</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.data_pengukuran</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('karyawan_id','=',False)]</field>
            <!-- <field name="context">{"search_default_fieldname":1}</field> -->
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new data pengukuran
                </p><p>
                Click the Create button to add a new data pengukuran
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_data_pengukuran" name="Style" parent="vit_master_date_sub_menu" action="action_vit_data_pengukuran" groups="group_manager_pengukuran"  sequence="40"/>
    </data>
</odoo>