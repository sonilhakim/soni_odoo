<odoo>

    <!-- form view -->
    <record id="view_vit_spk_pengukuran_form_inherit" model="ir.ui.view">
        <field name="name">vit_spk_pengukuran_form_inherit</field>
        <field name="model">vit.spk_pengukuran</field>
        <field name="inherit_id" ref="vit_spk_pengukuran.view_vit_spk_pengukuran_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='po_id']" position="after">
                <field name="pengukuran_header_id" readonly="1" string="No. Pengukuran" attrs="{'invisible':[('pengukuran_header_id','=',False)]}"/>
            </xpath>
            <xpath expr="//notebook/page[2]/field[@name='spk_product_ids']/tree/field[@name='size_ids']" position="after">
                <field name="template_id" options="{'no_create': True}" invisible="1"/>
                <field name="pengukuran_id" readonly="1" string="No. Pengukuran (Project)"/>
            </xpath>
            <xpath expr="//notebook/page/field[@name='spk_line_ids']/tree/field[@name='method']" position="replace">
                <field name="method_id" options="{'no_create': True}" domain="[('active', '=', True)]" required="1"/>
