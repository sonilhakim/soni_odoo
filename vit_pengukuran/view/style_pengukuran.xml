<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_style_pengukuran_tree" model="ir.ui.view">
            <field name="name">vit_style_pengukuran_tree</field>
            <field name="model">vit.style_pengukuran</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="style">
                    <field name="name" />
                    <field name="user_id" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_style_pengukuran_form" model="ir.ui.view">
            <field name="name">vit_style_pengukuran_form</field>
            <field name="model">vit.style_pengukuran</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="style">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Nama Style"/>
                            <h1><field name="name" options="{'no_create':True}"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="user_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="pengukuran_id" readonly="0" options="{'no_create':True}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Size">
                                <field name="size_ids">
                                    <form string="Size">
                                        <sheet>
                                            <div class="oe_title">
                                                <label for="name" class="oe_edit_only" string="Size"/>
                                                <h1><field name="name"/></h1>
                                            </div>
                                            <group>
                                            </group>
                                            <notebook>
                                                <page string="Item Pengukuran">
                                                    <field name="item_ids">
                                                        <tree string="Item Pengukuran" editable="bottom">
                                                            <field name="name" />
                                                            <field name="size" />
                                                        </tree>
                                                    </field>
                                                </page>
                                            </notebook>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_style_pengukuran_search" model="ir.ui.view">
            <field name="name">vit_style_pengukuran</field>
            <field name="model">vit.style_pengukuran</field>
            <field name="arch" type="xml">
                <search string="karyawan">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <field name="name" select="True"/>
                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_style_pengukuran_kanban" model="ir.ui.view" >
            <field name="name">vit_style_pengukuran</field>
            <field name="model">vit.style_pengukuran</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            Field1: <field name="name"></field>
                                        </li>
                                        <li>
                                            Field2: <field name="name"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_vit_style_pengukuran_graph" model="ir.ui.view">
            <field name="name">vit_style_pengukuran</field>
            <field name="model">vit.style_pengukuran</field>
            <field name="arch" type="xml">
                <graph string="Style" type="bar">
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_style_pengukuran" model="ir.actions.act_window">
            <field name="name">Style</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.style_pengukuran</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <!-- <field name="context">{"search_default_fieldname":1}</field> -->
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new style pengukuran
                </p><p>
                Click the Create button to add a new style pengukuran
                </p>
            </field>
        </record>

<!--         <menuitem id="menu_vit_style_pengukuran" name="Style" parent="vit_master_date_sub_menu" action="action_vit_style_pengukuran" groups="group_manager_pengukuran"  sequence="40"/> -->
    </data>
</odoo>