<odoo>
	<data>
		
		<record id="view_purchase_request_form_custom" model="ir.ui.view">
			<field name="name">vit_purchase.request_form.custom</field>
			<field name="model">vit.product.request</field>
			<field name="inherit_id" ref="vit_purchase_request_modif.view_purchase_request_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='reference']" position="before">
					<field name="partner_id" string="Customer"/>
				</xpath>
			</field>
		</record>

		<record id="purchase_order_tree_vitcustom" model="ir.ui.view">
			<field name="name">purchase.order.tree.vitcustom</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_tree"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='origin']" position="after">
					<field name="customer_id"/>
				</xpath>
			</field>
		</record>

		<record id="view_purchase_order_form_cust" model="ir.ui.view">
			<field name="name">purchase_order_form.custom</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='po_id']" position="after">
					<field name="customer_id"/>
				</xpath>
				<xpath expr="//field[@name='origin']" position="after">
					<field name="no_pr"/>
				</xpath>

				<xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
					<field name="note"/>
				</xpath>

				<xpath expr="//field[@name='order_line']/form/sheet/notebook/page/field[@name='name']" position="after">
					<field name="note"/>
				</xpath>

			</field>
		</record>

	</data>
</odoo>