<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_riwayat_bkd_menu" string="Vit - Riwayat bkd"
         model="vit.riwayat_bkd" report_type="qweb-pdf" 
         file="vit.riwayat_bkd"  name="vit_riwayat.vit_riwayat_bkd_report" />

        <!-- document template -->
        <template id="vit_riwayat.vit_riwayat_bkd_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Riwayat bkd: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Date start</strong>
                            <p class="m-0" t-field="doc.date_start" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Date from</strong>
                            <p class="m-0" t-field="doc.date_from" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Description</strong>
                            <p class="m-0" t-field="doc.description" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Employee</strong>
                            <p class="m-0" t-field="doc.employee_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_riwayat.vit_riwayat_bkd_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_riwayat.vit_riwayat_bkd_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>