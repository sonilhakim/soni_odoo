<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_hr_employee_tree" model="ir.ui.view">
            <field name="name">hr_employee_tree</field>
            <field name="model">hr.employee</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Employee">
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_hr_employee_form" model="ir.ui.view">
            <field name="name">hr_employee_form</field>
            <field name="model">hr.employee</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Employee">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Employee Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                            <page string="Riwayat izin belajars">
                                <field name="riwayat_izin_belajar_ids"/>
                            </page>
                            <page string="Riwayat tugas belajars">
                                <field name="riwayat_tugas_belajar_ids"/>
                            </page>
                            <page string="Riwayat study lanjutans">
                                <field name="riwayat_study_lanjutan_ids"/>
                            </page>
                            <page string="Riwayat membimbings">
                                <field name="riwayat_membimbing_ids"/>
                            </page>
                            <page string="Riwayat mengajars">
                                <field name="riwayat_mengajar_ids"/>
                            </page>
                            <page string="Riwayat beasiswas">
                                <field name="riwayat_beasiswa_ids"/>
                            </page>
                            <page string="Riwayat pekerjaans">
                                <field name="riwayat_pekerjaan_ids"/>
                            </page>
                            <page string="Riwayat pengabdian masyarakats">
                                <field name="riwayat_pengabdian_masyarakat_ids"/>
                            </page>
                            <page string="Riwayat bkds">
                                <field name="riwayat_bkd_ids"/>
                            </page>
                            <page string="Riwayat kunjungan ke luar negeris">
                                <field name="riwayat_kunjungan_ke_luar_negeri_ids"/>
                            </page>
                            <page string="Riwayat pelatihans">
                                <field name="riwayat_pelatihan_ids"/>
                            </page>
                            <page string="Riwayat kepakaran dosens">
                                <field name="riwayat_kepakaran_dosen_ids"/>
                            </page>
                            <page string="Riwayat diklats">
                                <field name="riwayat_diklat_ids"/>
                            </page>
                            <page string="Riwayat pendidikans">
                                <field name="riwayat_pendidikan_ids"/>
                            </page>
                            <page string="Riwayat penghargaans">
                                <field name="riwayat_penghargaan_ids"/>
                            </page>
                            <page string="Riwayat seminars">
                                <field name="riwayat_seminar_ids"/>
                            </page>
                            <page string="Riwayat organisasi pegawais">
                                <field name="riwayat_organisasi_pegawai_ids"/>
                            </page>
                            <page string="Riwayat penelitian karya imliahs">
                                <field name="riwayat_penelitian_karya_imliah_ids"/>
                            </page>
                            <page string="Riwayat dosen mengajar diluars">
                                <field name="riwayat_dosen_mengajar_diluar_ids"/>
                            </page>
                            <page string="Riwayat perjalanan dinass">
                                <field name="riwayat_perjalanan_dinas_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_hr_employee_search" model="ir.ui.view">
            <field name="name">hr_employee</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <search string="Employee">

                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_hr_employee_kanban" model="ir.ui.view" >
            <field name="name">hr_employee</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            Field1: <field name="name"></field>
                                        </li>
                                        <li>
                                            Field2: <field name="name"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_hr_employee_graph" model="ir.ui.view">
            <field name="name">hr_employee</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <graph string="Employee" type="bar">
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_hr_employee" model="ir.actions.act_window">
            <field name="name">Employee</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Employee
                </p><p>
                Click the Create button to add a new Employee
                </p>
            </field>
        </record>

        <menuitem id="menu_hr_employee" name="Employee" parent="vit_riwayat_sub_menu" action="action_hr_employee" sequence="20"/>
    </data>
</odoo>