<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_riwayat_membimbing_tree" model="ir.ui.view">
            <field name="name">vit_riwayat_membimbing_tree</field>
            <field name="model">vit.riwayat_membimbing</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Riwayat membimbing">
                    <field name="name" />
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="mahasiswa" />
                    <field name="jurusan" />
                    <field name="judul_thesis" />
                    <field name="employee_id" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_riwayat_membimbing_form" model="ir.ui.view">
            <field name="name">vit_riwayat_membimbing_form</field>
            <field name="model">vit.riwayat_membimbing</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Riwayat membimbing">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Riwayat membimbing Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="date_start" />
                                <field name="date_end" />
                                <field name="mahasiswa" />
                                <field name="jurusan" />
                                <field name="judul_thesis" />
                            </group>
                            <group>
                                <field name="employee_id" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_riwayat_membimbing_search" model="ir.ui.view">
            <field name="name">vit_riwayat_membimbing</field>
            <field name="model">vit.riwayat_membimbing</field>
            <field name="arch" type="xml">
                <search string="Riwayat membimbing">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Date start" name="filter_by_date_start" domain="[('date_start','=','')]" />
                    <filter string="Date end" name="filter_by_date_end" domain="[('date_end','=','')]" />
                    <filter string="Mahasiswa" name="filter_by_mahasiswa" domain="[('mahasiswa','=','')]" />
                    <filter string="Jurusan" name="filter_by_jurusan" domain="[('jurusan','=','')]" />
                    <filter string="Judul thesis" name="filter_by_judul_thesis" domain="[('judul_thesis','=','')]" />
                    <field name="name" select="True"/>
                    <field name="date_start" select="True"/>
                    <field name="date_end" select="True"/>
                    <field name="mahasiswa" select="True"/>
                    <field name="jurusan" select="True"/>
                    <field name="judul_thesis" select="True"/>
                    <field name="employee_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Employee" domain="[]" name="group_by_employee_id" context="{'group_by':'employee_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_riwayat_membimbing_kanban" model="ir.ui.view" >
            <field name="name">vit_riwayat_membimbing</field>
            <field name="model">vit.riwayat_membimbing</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="mahasiswa" />
                    <field name="jurusan" />
                    <field name="judul_thesis" />
                    <field name="employee_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            Field1: <field name="name"></field>
                                        </li>
                                        <li>
                                            Field2: <field name="name"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <record id="view_vit_riwayat_membimbing_cal" model="ir.ui.view">
            <field name="name">vit_riwayat_membimbing_cal</field>
            <field name="model">vit.riwayat_membimbing</field>
            <field name="arch" type="xml">
                <calendar string="Riwayat membimbing" date_start="date_end">
                    <field name="name" />
                </calendar>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_riwayat_membimbing_graph" model="ir.ui.view">
            <field name="name">vit_riwayat_membimbing</field>
            <field name="model">vit.riwayat_membimbing</field>
            <field name="arch" type="xml">
                <graph string="Riwayat membimbing" type="bar">
                    <field name="employee_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_riwayat_membimbing" model="ir.actions.act_window">
            <field name="name">Riwayat membimbing</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.riwayat_membimbing</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form,calendar,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Riwayat membimbing
                </p><p>
                Click the Create button to add a new Riwayat membimbing
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_riwayat_membimbing" name="Riwayat membimbing" parent="vit_riwayat_sub_menu" action="action_vit_riwayat_membimbing" sequence="20"/>
    </data>
</odoo>