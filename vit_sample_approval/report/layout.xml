<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="external_layout_standard_marketing_request">
        <div class="article o_report_layout_standard"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-call="web.address_layout"/>
            <t t-raw="0"/>
        </div>
    </template>

    <!-- Public api: layout to t-call from reports -->

    <template id="external_layout_marketing_request">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        <t t-call="vit_marketing_request.external_layout_standard_marketing_request">
            <t t-raw="0"/>                
        </t>

    </template>

</odoo>