<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_mo_sample_wizard" model="ir.ui.view">
            <field name="name">mo.sample.wizard</field>
            <field name="model">mo.sample.wizard</field>
            <field name="arch" type="xml">
                <form string="Create MO Sample">
                    <sheet>
                        <group>
                            <group>
                                <!-- <field name="quantity"/> -->
                                <field name="date_planned"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="picking_type_id" options="{'no_create':True}"/>
                            </group>
                            <label for="location_src_id" string="Raw Materials Location"/>
                            <field name="location_src_id" domain="[('usage','=','internal'),('company_id','=',company_id)]" options="{'no_create':True}"/>
                            <label for="location_dest_id" string="Finished Products Location"/>
                            <field name="location_dest_id" domain="[('usage','=','internal'),('company_id','=',company_id)]" options="{'no_create':True}"/>
                        </group>  
                    </sheet>
                    <footer>
                        <button name="create_mo_sample" string="Create MO Sample" type="object" class="btn-primary"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
               </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="show_mo_sample_wizard">
            <field name="name">Create MO Sample</field>
            <field name="res_model">mo.sample.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
           
</odoo>