<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_sample_approval_tree" model="ir.ui.view">
            <field name="name">vit_sample_approval_tree</field>
            <field name="model">vit.sample_approval</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Sample Approval">
                    <field name="name"/>
                    <field name="requester" />
                    <field name="recipient" string="Penerima"/>
                    <field name="date" />
                    <field name="partner_id" />
                    <field name="due_date" />
                    <field name="state" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_sample_approval_form" model="ir.ui.view">
            <field name="name">vit_sample_approval_form</field>
            <field name="model">vit.sample_approval</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Sample Approval">
                    <header>
                        <button string="Confirm" type="object" name="action_confirm" states="draft" groups="vit_sample_approval.group_sample_approval" />
                        <button name="%(vit_sample_approval.show_sa_pr_wizard)d" string="Create Purchase Request" type="action" class="oe_highlight" attrs="{'invisible':['|',('product_request_id','!=',False),('state','!=','open')]}"/>
                        <button string="Approve" type="object" name="action_approve" states="open" groups="vit_merchandise_garment.group_md_garment_manager" confirm="Anda yakin Sample akan di Approve ?"/>
                        <button string="Validate" type="object" name="action_done" states="approve" groups="vit_sample_approval.group_sample_approval" confirm="Anda yakin Sample Approval akan di Validate ?"/>
                        <button string="Cancel" type="object" name="action_cancel" states="open" groups="vit_sample_approval.group_sample_approval" confirm="Anda yakin Sample Approval akan di cancel ?"/>
                        <button string="Reset to Draft" type="object" name="action_draft" groups="vit_sample_approval.group_sample_approval" states="cancel" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,approve,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Sample Approval Number :"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="requester" />
                                <field name="recipient" string="Penerima"/>
                                <field name="date" />
                                <field name="due_date" string="Target Kirim"/>
                            </group>
                            <group>
                                <field name="partner_id" domain="[('customer','=',True)]" options="{'no_create': True}" />
                                <field name="user_id" />
                                <field name="company_id" />
                                <field name="project" />
                                <field name="notes" />
                            </group>
                            <group>
                                <!-- <field name="jo_id" readonly="1"/> -->
                                <field name="or_id" readonly="1"/>
                            </group>
                            <group attrs="{'invisible':[('product_request_id','=',False)]}">
                                <field name="product_request_id" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Detail">
                                <field name="line_approval_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_sample_approval_search" model="ir.ui.view">
            <field name="name">vit_sample_approval_search</field>
            <field name="model">vit.sample_approval</field>
            <field name="arch" type="xml">
                <search string="Marketing Request">
                    <field name="name" select="True"/>
                    <field name="date" select="True"/>
                    <field name="state" select="True"/>
                    <field name="partner_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Partner" domain="[]" name="group_by_partner_id" context="{'group_by':'partner_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_sample_approval_kanban" model="ir.ui.view" >
            <field name="name">vit_sample_approval_kanban</field>
            <field name="model">vit.sample_approval</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="date" />
                    <field name="state" />
                    <field name="partner_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            Field1: <field name="project"></field>
                                        </li>
                                        <li>
                                            Field2: <field name="partner_id"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <record id="view_vit_sample_approval_cal" model="ir.ui.view">
            <field name="name">vit_sample_approval_cal</field>
            <field name="model">vit.sample_approval</field>
            <field name="arch" type="xml">
                <calendar string="Sample Approval" date_start="date">
                    <field name="name" />
                </calendar>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_sample_approval_graph" model="ir.ui.view">
            <field name="name">vit_sample_approval_graph</field>
            <field name="model">vit.sample_approval</field>
            <field name="arch" type="xml">
                <graph string="Sample Approval" type="bar">
                    <field name="partner_id"/>
                </graph>
            </field>
        </record>

        <!-- act window inquery_garmen customer -->
        <record id="action_vit_sample_approval" model="ir.actions.act_window">
            <field name="name">Sample Approval</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.sample_approval</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban,calendar,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Sample Approval
                </p><p>
                Click the Create button to add a new Sample Approval
                </p>
            </field>
        </record>
        
        <menuitem id="menu_vit_sample_approval" name="Sample Approval" parent="vit_merchandise_garment.submenu_merchandise_sample_approval" action="action_vit_sample_approval" sequence="20"/>

    </data>
</odoo>