<odoo>
    <data>
        <!-- Hr employee inherit Legal Leaves -->
        <record id="view_employee_form_leave_inheritlibur" model="ir.ui.view">
            <field name="name">hr.employee.leave.form.inherit.libur</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_holidays.view_employee_form_leave_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='leaves_count']" position="attributes">
                    <attribute name="string">Hak Libur</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>