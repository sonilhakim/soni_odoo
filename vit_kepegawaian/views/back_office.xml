    <!-- inherit pengguna -->
    <record id="view_users_simple_form_back_office" model="ir.ui.view">
        <field name="name">res.users.simplified.form.back_office</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_simple_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='mobile']" position="after">
                <field name="lang"/>
            </xpath>
        </field>
    </record>

    <record id="view_groups_tree_portal" model="ir.ui.view">
        <field name="name">res.groups.tree.portal</field>
        <field name="model">res.groups</field>
        <field name="arch" type="xml">
            <tree string="Groups" create="false">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="view_groups_tree_back_office" model="ir.ui.view">
        <field name="name">res.groups.tree.back_office</field>
        <field name="model">res.groups</field>
        <field name="arch" type="xml">
            <tree string="Groups">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <!-- inherit cuti bersama -->
    <record id="hr_leave_view_form_back_office" model="ir.ui.view">
        <field name="name">hr.leave.view.form_back_office</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group/group/label" position="replace">
                <label for="number_of_days" string="Hari"/>
            </xpath>
            <xpath expr="//field[@name='holiday_status_id']" position="attributes">
                <attribute name="string">Tipe Cuti</attribute>
            </xpath>
        </field>
    </record>
    <record id="hr_leave_allocation_view_tree_back_office" model="ir.ui.view">
        <field name="name">hr.leave.allocation.view.tree.back_office</field>
        <field name="model">hr.leave.allocation</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_allocation_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='holiday_status_id']" position="after">
                <field name="date_from" string="Tanggal Mulai"/>
                <field name="date_to" string="Tanggal Selesai"/>
            </xpath>
            <xpath expr="//field[@name='holiday_status_id']" position="attributes">
                <attribute name="string">Tipe Cuti</attribute>
            </xpath>
        </field>
    </record>
    <record id="hr_leave_allocation_view_form_back_office" model="ir.ui.view">
        <field name="name">hr.leave.allocation.view.form.back_office</field>
        <field name="model">hr.leave.allocation</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_allocation_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='holiday_status_id']" position="after">
                <field name="date_from" string="Tanggal Mulai"/>
                <field name="date_to" string="Tanggal Selesai"/>
            </xpath>
            <xpath expr="//form/sheet/group/group/label" position="replace">
                <label for="number_of_days" string="Hari"/>
            </xpath>
            <xpath expr="//field[@name='holiday_status_id']" position="attributes">
                <attribute name="string">Tipe Cuti</attribute>
            </xpath>
        </field>
    </record>

    <!-- inherit Mengelola Pendapatan Lain -->
    <record id="hr_contribution_register_treeBO" model="ir.ui.view">
