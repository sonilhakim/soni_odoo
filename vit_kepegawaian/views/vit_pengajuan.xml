<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_pengajuan_tree" model="ir.ui.view">
            <field name="name">vit_pengajuan_tree</field>
            <field name="model">vit.pengajuan</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Pengajuan">
                    <field name="name" />
                    <field name="tanggal" />
                    <field name="jenis_pengajuan" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_pengajuan_form" model="ir.ui.view">
            <field name="name">vit_pengajuan_form</field>
            <field name="model">vit.pengajuan</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Pengajuan">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Nama Pengajuan"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="tanggal" />
                            </group>
                            <group>
                                <field name="jenis_pengajuan" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_pengajuan_search" model="ir.ui.view">
            <field name="name">vit_pengajuan</field>
            <field name="model">vit.pengajuan</field>
            <field name="arch" type="xml">
                <search string="Pengajuan">
                    <field name="name" select="True"/>
                    <field name="tanggal" select="True"/>
                    <field name="jenis_pengajuan" select="True"/>
                    <group string="Group By..">
                        <filter string="Jenis Pengajuan" domain="[]" name="group_by_jenis_pengajuan" context="{'group_by':'jenis_pengajuan'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- action window -->
        <record id="action_vit_pengajuan" model="ir.actions.act_window">
            <field name="name">Pengajuan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.pengajuan</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Pengajuan
                </p><p>
                Click the Create button to add a new Pengajuan
                </p>
            </field>
        </record>
        
    </data>
</odoo>