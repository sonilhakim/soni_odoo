<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_kenaikan_gaji_berkala_tree" model="ir.ui.view">
            <field name="name">vit_kenaikan_gaji_berkala_berkala_tree</field>
            <field name="model">vit.kenaikan_gaji_berkala</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Kenaikan Gaji Berkala">
                    <field name="name" />
                    <field name="employee_id" />
                    <field name="state" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_kenaikan_gaji_berkala_form" model="ir.ui.view">
            <field name="name">vit_kenaikan_gaji_berkala_form</field>
            <field name="model">vit.kenaikan_gaji_berkala</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Kenaikan Gaji Berkala">
                    <header>
                        <button string="Konfirmasi" type="object" name="action_confirm" states="draft" />
                        <button string="Validasi" type="object" name="action_done" states="open" />
                        <button string="Reset to Draft" type="object" name="action_draft" states="open,done" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Mutasi kenaikan gaji berkala Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id" />
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                            <page string="Kenaikan gaji detail">
                                <field name="gaji_detail_ids" mode="tree">
                                    <tree string="Detail" editable="bottom">
                                        <field name="date"/>
                                        <field name="gaji_awal" />
                                        <field name="gaji_sekarang" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- action window -->
        <record id="action_vit_kenaikan_gaji_berkala" model="ir.actions.act_window">
            <field name="name">Kenaikan Gaji Berkala</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.kenaikan_gaji_berkala</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Kenaikan gaji berkala
                </p><p>
                Click the Create button to add a new Kenaikan gaji berkala
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_kenaikan_gaji_berkala" name="Kenaikan Gaji Berkala" parent="hr_payroll.menu_hr_payroll_configuration" action="action_vit_kenaikan_gaji_berkala" sequence="100"/>

    </data>
</odoo>